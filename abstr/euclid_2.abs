begin :: Preliminaries

reserve i, n, j for Nat,
  x, y, a for real number,
  v for Element of n-tuples_on REAL,
  p, p1, p2, p3, q, q1, q2 for Point of TOP-REAL n;

theorem :: EUCLID_2:1
  mlt(v, 0*n).i = 0;

theorem :: EUCLID_2:2
  mlt(v, 0*n) = 0*n;

begin :: Inner Product of Finite Sequences

canceled 7;

theorem :: EUCLID_2:10
  for y1,y2 being real-valued FinSequence, x1,x2 being Element of REAL
  n st x1=y1 & x2=y2 holds |(y1,y2)|=1/4*((|.(x1+x2).|)^2-(|.(x1-x2).|)^2);

canceled;

theorem :: EUCLID_2:12
  for x being real-valued FinSequence holds |.x.|^2 = |(x,x)|;

theorem :: EUCLID_2:13
  for x being real-valued FinSequence holds |.x.| = sqrt |(x,x)|;

theorem :: EUCLID_2:14
  for x being real-valued FinSequence holds 0 <= |.x.|;

theorem :: EUCLID_2:15
  for x being real-valued FinSequence holds |(x,x)|=0 iff x=0*(len x);

theorem :: EUCLID_2:16
  for x being real-valued FinSequence holds |(x,x)| = 0 iff |.x.| = 0;

theorem :: EUCLID_2:17
  for x being real-valued FinSequence holds |(x, 0*(len x))| = 0;

theorem :: EUCLID_2:18
  for x being real-valued FinSequence holds |(0*(len x),x)| = 0;

canceled 14;

theorem :: EUCLID_2:33
  for x,y being real-valued FinSequence st len x=len y holds |.x+y.|^2
  = |.x.|^2 + 2*|(y, x)| + |.y.|^2;

theorem :: EUCLID_2:34
  for x,y being real-valued FinSequence st len x=len y holds |.x-y.|^2
  = |.x.|^2 - 2*|(y, x)| + |.y.|^2;

theorem :: EUCLID_2:35
  for x,y being real-valued FinSequence st len x=len y holds |.x+y.|^2 + |.x
  -y.|^2 = 2*(|.x.|^2 + |.y.|^2);

theorem :: EUCLID_2:36
  for x,y being real-valued FinSequence st len x=len y holds |.x+y.|^2 - |.x
  -y.|^2 = 4* |(x,y)|;

theorem :: EUCLID_2:37  :: Schwartz
  for x,y being real-valued FinSequence st len x=len y holds
  abs |(x,y)| <= |.x.|*|.y.|;

theorem :: EUCLID_2:38  :: Triangle
  for x,y being real-valued FinSequence st len x=len y holds
  |.x+y.| <= |.x.| + |.y.|;

begin  :: Inner Product of Points of TOP-REAL n

theorem :: EUCLID_2:39
  |(p1,p2)| = 1/4*((|. p1+p2 .|)^2-(|. p1-p2 .|)^2);

theorem :: EUCLID_2:40
  |(p1 + p2, p3)| = |(p1, p3)| + |(p2, p3)|;

theorem :: EUCLID_2:41
  for x being real number holds |(x*p1, p2)| = x*|(p1, p2)|;

theorem :: EUCLID_2:42
  for x being real number holds |(p1, x*p2)| = x*|(p1, p2)|;

theorem :: EUCLID_2:43
  |(-p1, p2)| = -|(p1, p2)|;

theorem :: EUCLID_2:44
  |(p1, -p2)| = -|(p1, p2)|;

theorem :: EUCLID_2:45
  |(-p1, -p2)| = |(p1, p2)|;

theorem :: EUCLID_2:46
  |(p1-p2, p3)| = |(p1, p3)| - |(p2, p3)|;

theorem :: EUCLID_2:47
  |((x*p1+y*p2), p3)| = x*|(p1,p3)| + y*|(p2,p3)|;

theorem :: EUCLID_2:48
  |(p, q1+q2)| = |(p, q1)| + |(p, q2)|;

theorem :: EUCLID_2:49
  |(p, q1-q2)| = |(p, q1)| - |(p, q2)|;

theorem :: EUCLID_2:50
  |(p1+p2, q1+q2)| = |(p1, q1)| + |(p1, q2)| + |(p2, q1)| + |(p2,
  q2)|;

theorem :: EUCLID_2:51
  |(p1-p2, q1-q2)| = |(p1, q1)| - |(p1, q2)| - |(p2, q1)| + |(p2,
  q2)|;

theorem :: EUCLID_2:52
  |(p+q, p+q)| = |(p, p)| + 2*|(p, q)| + |(q, q)|;

theorem :: EUCLID_2:53
  |(p-q, p-q)| = |(p, p)| - 2*|(p, q)| + |(q, q)|;

theorem :: EUCLID_2:54
  |(p, 0.TOP-REAL n)| = 0;

theorem :: EUCLID_2:55
  |(0.TOP-REAL n, p)| = 0;

theorem :: EUCLID_2:56
  |(0.TOP-REAL n, 0.TOP-REAL n)| = 0;

theorem :: EUCLID_2:57
  |(p,p)| >= 0;

theorem :: EUCLID_2:58
  |(p,p)| = |.p.|^2;

theorem :: EUCLID_2:59
  |.p.| = sqrt |(p,p)|;

theorem :: EUCLID_2:60
  0 <= |.p.|;

theorem :: EUCLID_2:61
  |. 0.TOP-REAL n .| = 0;

theorem :: EUCLID_2:62
  |(p,p)| = 0 iff |.p.| = 0;

theorem :: EUCLID_2:63
  |(p,p)| = 0 iff p = 0.TOP-REAL n;

theorem :: EUCLID_2:64
  |.p.|=0 iff p = 0.TOP-REAL n;

theorem :: EUCLID_2:65
  p <> 0.TOP-REAL n iff |(p, p)| > 0;

theorem :: EUCLID_2:66
  p <> 0.TOP-REAL n iff |.p.| > 0;

theorem :: EUCLID_2:67
  |.p+q.|^2 = |.p.|^2 + 2*|(q, p)| + |.q.|^2;

theorem :: EUCLID_2:68
  |.p-q.|^2 = |.p.|^2 - 2*|(q, p)| + |.q.|^2;

theorem :: EUCLID_2:69
  |.p+q.|^2 + |.p-q.|^2 = 2*(|.p.|^2 + |.q.|^2);

theorem :: EUCLID_2:70
  |.p+q.|^2 - |.p-q.|^2 = 4* |(p,q)|;

theorem :: EUCLID_2:71
  |(p,q)| = (1/4)*(|.p+q.|^2 - |.p-q.|^2);

theorem :: EUCLID_2:72
  |(p,q)| <= |(p,p)| + |(q,q)|;

theorem :: EUCLID_2:73 :: Schwartz
  abs |(p,q)| <= |.p.|*|.q.|;

theorem :: EUCLID_2:74 :: Triangle
  |.p+q.| <= |.p.| + |.q.|;

theorem :: EUCLID_2:75
  p,0.TOP-REAL n are_orthogonal;

theorem :: EUCLID_2:76
  0.TOP-REAL n,p are_orthogonal;

theorem :: EUCLID_2:77
  p,p are_orthogonal iff p=0.TOP-REAL n;

theorem :: EUCLID_2:78
  p, q are_orthogonal implies a*p,q are_orthogonal;

theorem :: EUCLID_2:79
  p, q are_orthogonal implies p,a*q are_orthogonal;

theorem :: EUCLID_2:80
  (for q holds p,q are_orthogonal) implies p=0.TOP-REAL n;

