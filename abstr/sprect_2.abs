theorem :: SPRECT_2:21
 for a,b,c being Point of TOP-REAL 2
  st b in LSeg(a,c) & a`1 <= b`1 & c`1 <= b`1
 holds a = b or b = c or a`1 = b`1 & c`1 = b`1;

theorem :: SPRECT_2:22
 for a,b,c being Point of TOP-REAL 2
  st b in LSeg(a,c) & a`2 <= b`2 & c`2 <= b`2
 holds a = b or b = c or a`2 = b`2 & c`2 = b`2;

theorem :: SPRECT_2:23
 for a,b,c being Point of TOP-REAL 2
  st b in LSeg(a,c) & a`1 >= b`1 & c`1 >= b`1
 holds a = b or b = c or a`1 = b`1 & c`1 = b`1;

theorem :: SPRECT_2:24
 for a,b,c being Point of TOP-REAL 2
  st b in LSeg(a,c) & a`2 >= b`2 & c`2 >= b`2
