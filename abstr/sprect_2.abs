theorem :: SPRECT_2:18
 for f being FinSequence of TOP-REAL 2 st 1 <= i & i <= j & j <= len f
  holds L~mid(f,i,j) = union{ LSeg(f,k): i <= k & k < j};

theorem :: SPRECT_2:19
 for f being FinSequence of TOP-REAL 2
  holds dom X_axis f = dom f;

theorem :: SPRECT_2:20
 for f being FinSequence of TOP-REAL 2
  holds dom Y_axis f = dom f;

