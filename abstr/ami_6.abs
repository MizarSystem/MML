 constructors XXREAL_0, NAT_1, NAT_D, ZFMISC_1, AMI_3, AMISTD_2, RELSET_1,
      RECDEF_2, MCART_1, VALUED_1, AMI_2, EXTPRO_1, AMISTD_1, PRE_POLY,
