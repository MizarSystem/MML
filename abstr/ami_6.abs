 notations TARSKI, XBOOLE_0, SUBSET_1, SETFAM_1, RELAT_1, FUNCT_1, FUNCT_2,
      ZFMISC_1, CARD_1, ORDINAL1, NAT_1, NUMBERS, XCMPLX_0, INT_1, FUNCOP_1,
      PARTFUN1, PBOOLE, FINSEQ_1, FUNCT_4, XXREAL_0, MCART_1, VALUED_1,
      STRUCT_0, CARD_3, FUNCT_7, MEMSTR_0, COMPOS_1, EXTPRO_1, AMI_2, AMI_3,
