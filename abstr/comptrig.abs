begin  :: Argument of Complex Number

definition
  let z be complex number;
  func Arg z -> Real means
:: COMPTRIG:def 1

  z = |.z.|*cos it + |.z.|*sin it * <i> & 0 <=
  it & it < 2*PI if z <> 0 otherwise it = 0;
end;

theorem :: COMPTRIG:52
  for z be complex number holds 0 <= Arg z & Arg z < 2*PI;

theorem :: COMPTRIG:53
  for x be Real st x >= 0 holds Arg x = 0;

theorem :: COMPTRIG:54
  for x be Real st x < 0 holds Arg x = PI;

theorem :: COMPTRIG:55
  for x be Real st x > 0 holds Arg (x*<i>) = PI/2;

theorem :: COMPTRIG:56
  for x be Real st x < 0 holds Arg (x*<i>) = 3/2*PI;

theorem :: COMPTRIG:57
  Arg 1 = 0;

theorem :: COMPTRIG:58
  Arg <i> = PI/2;

theorem :: COMPTRIG:59
  for z be complex number holds Arg z in ].0,PI/2.[ iff Re z > 0 & Im z > 0;

theorem :: COMPTRIG:60
  for z be complex number holds Arg z in ].PI/2,PI.[ iff Re z < 0 & Im z > 0;

theorem :: COMPTRIG:61
  for z be complex number holds Arg z in ].PI,3/2*PI.[ iff Re z < 0 & Im z < 0;

theorem :: COMPTRIG:62
  for z be complex number holds Arg z in ].3/2*PI,2*PI.[ iff Re z
  > 0 & Im z < 0;

theorem :: COMPTRIG:63
  for z be complex number st Im z > 0 holds sin Arg z > 0;

theorem :: COMPTRIG:64
  for z be complex number st Im z < 0 holds sin Arg z < 0;

theorem :: COMPTRIG:65
  for z be complex number st Im z >= 0 holds sin Arg z >= 0;

theorem :: COMPTRIG:66
  for z be complex number st Im z <= 0 holds sin Arg z <= 0;

theorem :: COMPTRIG:67
  for z be complex number st Re z > 0 holds cos Arg z > 0;

theorem :: COMPTRIG:68
  for z be complex number st Re z < 0 holds cos Arg z < 0;

theorem :: COMPTRIG:69
  for z be complex number st Re z >= 0 holds cos Arg z >= 0;

theorem :: COMPTRIG:70
  for z be complex number st Re z <= 0 & z <> 0 holds cos Arg z <= 0;

theorem :: COMPTRIG:71
  for x be real number, n be Nat holds (cos x+(sin x)*<i>)|^n =
  cos (n*x)+sin (n*x)*<i>;

theorem :: COMPTRIG:72
  for z be Element of COMPLEX for n be Nat st z <> 0 or n <> 0 holds z|^
  n = (|.z.| |^ n)*cos (n*Arg z)+(|.z.| |^ n)*sin (n*Arg z)*<i>;

theorem :: COMPTRIG:73
  for x be Real, n,k be Nat st n <> 0 holds (cos((x+2*PI*k)/n)+sin
  ((x+2*PI*k)/n)*<i>)|^n = (cos x+(sin x)*<i>);

theorem :: COMPTRIG:74
  for z be complex number for n,k be Nat st n <> 0 holds z = ((n
-root |.z.|)*cos((Arg z+2*PI*k)/n)+ (n-root |.z.|)*sin((Arg z+2*PI*k)/n)*<i>)|^
  n;

definition
  let x be complex number;
  let n be non empty Nat;
  mode CRoot of n,x -> complex number means
:: COMPTRIG:def 2

    it|^n = x;
end;

theorem :: COMPTRIG:75
  for x be Element of COMPLEX for n be non empty Nat for k be Nat holds
(n-root |. x .|)*cos((Arg x+2*PI*k)/n)+ (n-root |. x .|)*sin((Arg x+2*PI*k)/n)*
  <i> is CRoot of n,x;

theorem :: COMPTRIG:76
  for x be Element of COMPLEX for v be CRoot of 1,x holds v = x;

theorem :: COMPTRIG:77
  for n be non empty Nat for v be CRoot of n,0 holds v = 0;

theorem :: COMPTRIG:78
  for n be non empty Nat for x be Element of COMPLEX for v be CRoot of n
  ,x st v = 0 holds x = 0;

theorem :: COMPTRIG:79
  for a being real number st 0 <= a & a < 2*PI & cos(a) = 1 holds a = 0;

theorem :: COMPTRIG:80
  for z being complex number holds z = |.z.|*cos Arg z + |.z.|*sin Arg z * <i>;
