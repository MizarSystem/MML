  reconsider p as Permutation of Seg n by Def11;
  A1:dom p=Seg n by FUNCT_2:67;
  then reconsider q=p as FinSequence by FINSEQ_1:def 2;
  take n,q;
  thus thesis by A1,FINSEQ_1:def 3;
  end;
  uniqueness;
