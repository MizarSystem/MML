definition let n;let p be Permutation of Seg n;
 attr p is being_transposition means
     ex i,j st i in dom p & j in dom p & i<>j & p.i=j & p.j=i &
   for k st k <>i & k<>j & k in dom p holds p.k=k;
  synonym p is_transposition;
end;

