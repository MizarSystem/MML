theorem Th84:
  x+y <= z iff x <= z-y
proof
   thus x+y<=z implies x <= z-y
   proof assume x+y<=z;
     then x+y-y<=z-y by Th49;
     hence x <= z-y;
   end;
   assume x <= z-y;
   then x+y <= z - y + y by AXIOMS:24;
   hence x+y <= z;
end;

canceled;

theorem
     x <= y+z iff x-y <= z
proof
   thus x<=y+z implies x-y <= z
     proof assume x<=y+z;
        then x-y <= z+y-y by Th49;
      hence x-y <= z;
    end;
  assume x-y <= z;
  then x + -y <= z;
  then x <= z - -y by Th84;
  hence x <= y + z;
end;

