theorem
     (x <= y & z <= t implies x - t <= y - z) &
  (x < y & z <= t or x <= y & z < t implies x-t < y-z)
proof
 A1: (x <= y & z <= t) implies x - t <= y - z
    proof
      assume A2: x <= y & z <= t;
      then -t <= -z by Th50;
      then x+ -t <= y+ -z by A2,Th55;
     hence thesis;
    end;
 A3: for x,y,z,t st x < y & z <= t holds x-t < y-z
   proof let x,y,z,t;
     assume A4: x < y & z <= t;
     then - t <= - z by Th50;
     then x+ -t < y+ -z by A4,Th67;
     hence thesis;
   end;
      x <= y & z < t implies x-t < y-z
   proof
     assume x <= y & z < t;
     then z-y < t-x by A3;
     then -(t-x) < -(z-y) by Th50;
     hence thesis;
   end;
   hence thesis by A1,A3;
end;

theorem
     0 <= x*x
proof
  per cases;
  suppose 0 <= x;
  then 0*x <= x*x by AXIOMS:25;
  hence thesis;
  end;
  suppose not 0 <= x;
  then 0*x <= x*x by Th52;
  hence thesis;
end;
end;
