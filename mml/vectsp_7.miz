      RLVECT_3, CARD_3, SUPINF_2, XBOOLE_0, TARSKI, GROUP_1, FUNCT_2, RELAT_1,
      ARYTM_1, ARYTM_3, MESFUNC1, RLSUB_1, ZFMISC_1, ORDINAL1, ORDERS_1;
 notations TARSKI, XBOOLE_0, ZFMISC_1, SUBSET_1, RELAT_1, FUNCT_1, FUNCT_2,
      FINSET_1, ORDERS_1, DOMAIN_1, STRUCT_0, ORDINAL1, RLVECT_1, GROUP_1,
      VECTSP_1, VECTSP_4, VECTSP_5, VECTSP_6;
 constructors ORDERS_1, REALSET1, VECTSP_5, VECTSP_6;
 registrations XBOOLE_0, SUBSET_1, RELSET_1, FINSET_1, STRUCT_0, VECTSP_1,
      VECTSP_4;
 requirements SUBSET, BOOLE;
 definitions XBOOLE_0, VECTSP_4, VECTSP_6, TARSKI;
 theorems FUNCT_1, FINSET_1, ORDERS_1, RLVECT_3, TARSKI, VECTSP_1, VECTSP_2,
      VECTSP_4, VECTSP_5, VECTSP_6, ZFMISC_1, RLVECT_1, FUNCT_2, RELAT_1,
      ORDINAL1, XBOOLE_0, XBOOLE_1, CARD_2, STRUCT_0;
 schemes FUNCT_1, FUNCT_2, XBOOLE_0;

begin

reserve x,y,X,Y,Z for set;
reserve GF for Field;
reserve a,b for Element of GF;
reserve V for VectSp of GF;
reserve v,v1,v2,u for Vector of V;
reserve A,B,C for Subset of V;
reserve T for finite Subset of V;
reserve l for Linear_Combination of A;
reserve f,g for Function of the carrier of V, the carrier of GF;

definition
  let GF;
  let V;
  let IT be Subset of V;
  attr IT is linearly-independent means
  :Def1:
  for l being Linear_Combination
  of IT st Sum(l) = 0.V holds Carrier(l) = {};
end;

notation
  let GF;
  let V;
  let IT be Subset of V;
  antonym IT is linearly-dependent for IT is linearly-independent;
end;

canceled;

theorem
  A c= B & B is linearly-independent implies A is linearly-independent
proof
  assume that
A1: A c= B and
A2: B is linearly-independent;
  let l be Linear_Combination of A;
  reconsider L = l as Linear_Combination of B by A1,VECTSP_6:25;
  assume
  Sum(l) = 0.V;
  then Carrier(L) = {} by A2,Def1;
  hence thesis;
end;

theorem Th3:
  A is linearly-independent implies not 0.V in A
proof
  assume that
A1: A is linearly-independent and
A2: 0.V in A;
  deffunc F(set) = 0.GF;
  consider f such that
A3: f.(0.V) = 1_GF and
A4: for v being Element of V st v <> 0.V holds f.v = F(v) from FUNCT_2:
  sch 6;
  reconsider f as Element of Funcs(the carrier of V, the carrier of GF) by
  FUNCT_2:11;
  ex T st for v st not v in T holds f.v = 0.GF
  proof
    take T = {0.V};
    let v;
    assume
    not v in T;
    then v <> 0.V by TARSKI:def 1;
    hence thesis by A4;
  end;
  then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
A5: Carrier(f) = {0.V}
  proof
    thus Carrier(f) c= {0.V}
    proof
      let x;
      assume
      x in Carrier(f);
      then consider v such that
A6:   v = x and
A7:   f.v <> 0.GF;
      v = 0.V by A4,A7;
      hence thesis by A6,TARSKI:def 1;
    end;
    let x;
    assume
    x in {0.V};
    then x = 0.V by TARSKI:def 1;
    hence thesis by A3;
  end;
  then Carrier(f) c= A by A2,ZFMISC_1:37;
  then reconsider f as Linear_Combination of A by VECTSP_6:def 7;
  Sum(f) = f.(0.V) * 0.V by A5,VECTSP_6:46
    .= 0.V by VECTSP_1:60;
  hence contradiction by A1,A5,Def1;
end;

registration
  let GF,V;
  cluster empty -> linearly-independent Subset of V;
  coherence
  proof
    let S be Subset of V such that
A1: S is empty;
    let l be Linear_Combination of S;
    Carrier(l) c= {} by A1,VECTSP_6:def 7;
    hence thesis;
  end;
end;

registration
  let GF, V;
  cluster finite linearly-independent Subset of V;
  existence
  proof
    take {}V;
    thus thesis;
  end;
end;

canceled;

theorem
  {v} is linearly-independent iff v <> 0.V
proof
  thus {v} is linearly-independent implies v <> 0.V
  proof
    assume
    {v} is linearly-independent;
    then not 0.V in {v} by Th3;
    hence thesis by TARSKI:def 1;
  end;
  assume
A1: v <> 0.V;
  let l be Linear_Combination of {v};
A2: Carrier(l) c= {v} by VECTSP_6:def 7;
  assume
A3: Sum(l) = 0.V;
  now
    per cases by A2,ZFMISC_1:39;
    suppose
      Carrier(l) = {};
      hence thesis;
    end;
    suppose
A4:   Carrier(l) = {v};
A5:   0.V = l.v * v by A3,VECTSP_6:43;
      now
        assume
        v in Carrier(l);
        then ex u st v = u & l.u <> 0.GF;
        hence contradiction by A1,A5,VECTSP_1:60;
      end;
      hence thesis by A4,TARSKI:def 1;
    end;
  end;
  hence thesis;
end;

theorem Th6:
  {v1,v2} is linearly-independent implies v1 <> 0.V
proof
A1: v1 in {v1,v2} by TARSKI:def 2;
  assume
  {v1,v2} is linearly-independent;
  hence thesis by A1,Th3;
end;

canceled;

theorem Th8:
  v1 <> v2 & {v1,v2} is linearly-independent iff v2 <> 0.V & for a
  holds v1 <> a * v2
proof
  thus v1 <> v2 & {v1,v2} is linearly-independent implies v2 <> 0.V & for a
  holds v1 <> a * v2
  proof
    deffunc F(set) = 0.GF;
    assume that
A1: v1 <> v2 and
A2: {v1,v2} is linearly-independent;
    thus v2 <> 0.V by A2,Th6;
    let a;
    consider f such that
A3: f.v1 = - 1_GF & f.v2 = a and
A4: for v being Element of V st v <> v1 & v <> v2 holds f.v = F(v)
    from FUNCT_2:sch 7(A1);
    reconsider f as Element of Funcs(the carrier of V, the carrier of GF) by
    FUNCT_2:11;
    now
      let v;
      assume
      not v in ({v1,v2});
      then v <> v1 & v <> v2 by TARSKI:def 2;
      hence f.v = 0.GF by A4;
    end;
    then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
    Carrier(f) c= {v1,v2}
    proof
      let x;
      assume
      x in Carrier(f);
      then
A5:   ex u st x = u & f.u <> 0.GF;
      assume
      not x in {v1,v2};
      then x <> v1 & x <> v2 by TARSKI:def 2;
      hence thesis by A4,A5;
    end;
    then reconsider f as Linear_Combination of {v1,v2} by VECTSP_6:def 7;
A6: now
      assume
      not v1 in Carrier(f);
      then 0.GF = - 1_GF by A3;
      hence contradiction by VECTSP_6:82;
    end;
    set w = a * v2;
    assume
    v1 = a * v2;
    then Sum(f) = (- 1_GF) * w + w by A1,A3,VECTSP_6:44
      .= (- w) + w by VECTSP_1:59
      .= - (w - w) by VECTSP_1:64
      .= - 0.V by VECTSP_1:66
      .= 0.V by RLVECT_1:25;
    hence thesis by A2,A6,Def1;
  end;
  assume
A7: v2 <> 0.V;
  assume
A8: for a holds v1 <> a * v2;
A9: 1_GF * v2 = v2 by VECTSP_1:def 26;
  hence v1 <> v2 by A8;
  let l be Linear_Combination of {v1,v2};
  assume that
A10: Sum(l) = 0.V and
A11: Carrier(l) <> {};
A12: 0.V = l.v1 * v1 + l.v2 * v2 by A8,A9,A10,VECTSP_6:44;
  consider x being Element of Carrier(l);
  Carrier(l) c= {v1,v2} by VECTSP_6:def 7;
  then
A13: x in {v1,v2} by A11,TARSKI:def 3;
  x in Carrier(l) by A11;
  then
A14: ex u st x = u & l.u <> 0.GF;
  now
    per cases by A14,A13,TARSKI:def 2;
    suppose
A15:  l.v1 <> 0.GF;
      0.V = (l.v1)" * (l.v1 * v1 + l.v2 * v2) by A12,VECTSP_1:60
        .= (l.v1)" * (l.v1 * v1) + (l.v1)" * (l.v2 * v2) by VECTSP_1:def 26
        .= (l.v1)" * l.v1 * v1 + (l.v1)" * (l.v2 * v2) by VECTSP_1:def 26
        .= (l.v1)" * l.v1 * v1 + (l.v1)" * l.v2 * v2 by VECTSP_1:def 26
        .= 1_GF * v1 + (l.v1)" * l.v2 * v2 by A15,VECTSP_1:def 22
        .= v1 + (l.v1)" * l.v2 * v2 by VECTSP_1:def 26;
      then v1 = - ((l.v1)" * l.v2 * v2) by VECTSP_1:63
        .= (- 1_GF) * ((l.v1)" * l.v2 * v2) by VECTSP_1:59
        .= ((- 1_GF) * ((l.v1)" * l.v2)) * v2 by VECTSP_1:def 26;
      hence thesis by A8;
    end;
    suppose
A16:  l.v2 <> 0.GF & l.v1 = 0.GF;
      0.V = (l.v2)" * (l.v1 * v1 + l.v2 * v2) by A12,VECTSP_1:60
        .= (l.v2)" * (l.v1 * v1) + (l.v2)" * (l.v2 * v2) by VECTSP_1:def 26
        .= (l.v2)" * l.v1 * v1 + (l.v2)" * (l.v2 * v2) by VECTSP_1:def 26
        .= (l.v2)" * l.v1 * v1 + (l.v2)" * l.v2 * v2 by VECTSP_1:def 26
        .= (l.v2)" * l.v1 * v1 + 1_GF * v2 by A16,VECTSP_1:def 22
        .= (l.v2)" * l.v1 * v1 + v2 by VECTSP_1:def 26
        .= 0.GF * v1 + v2 by A16,VECTSP_1:44
        .= 0.V + v2 by VECTSP_1:60
        .= v2 by RLVECT_1:10;
      hence thesis by A7;
    end;
  end;
  hence thesis;
end;

theorem
  v1 <> v2 & {v1,v2} is linearly-independent iff for a,b st a * v1 + b *
  v2 = 0.V holds a = 0.GF & b = 0.GF
proof
  thus v1 <> v2 & {v1,v2} is linearly-independent implies for a,b st a * v1 +
  b * v2 = 0.V holds a = 0.GF & b = 0.GF
  proof
    assume
A1: v1 <> v2 & {v1,v2} is linearly-independent;
    let a,b;
    assume that
A2: a * v1 + b * v2 = 0.V and
A3: a <> 0.GF or b <> 0.GF;
    now
      per cases by A3;
      suppose
A4:     a <> 0.GF;
        0.V = a" * (a * v1 + b * v2) by A2,VECTSP_1:60
          .= a" * (a * v1) + a" * (b * v2) by VECTSP_1:def 26
          .= (a" * a) * v1 + a" * (b * v2) by VECTSP_1:def 26
          .= (a" * a) * v1 + (a" * b) * v2 by VECTSP_1:def 26
          .= 1_GF * v1 + (a" * b) * v2 by A4,VECTSP_1:def 22
          .= v1 + (a" * b) * v2 by VECTSP_1:def 26;
        then v1 = - ((a" * b) * v2) by VECTSP_1:63
          .= (- 1_GF) * ((a" * b) * v2) by VECTSP_1:59
          .= (- 1_GF) * (a" * b) * v2 by VECTSP_1:def 26;
        hence thesis by A1,Th8;
      end;
      suppose
A5:     b <> 0.GF;
        0.V = b" * (a * v1 + b * v2) by A2,VECTSP_1:60
          .= b" * (a * v1) + b" * (b * v2) by VECTSP_1:def 26
          .= (b" * a) * v1 + b" * (b * v2) by VECTSP_1:def 26
          .= (b" * a) * v1 + (b" * b) * v2 by VECTSP_1:def 26
          .= (b" * a) * v1 + 1_GF* v2 by A5,VECTSP_1:def 22
          .= (b" * a) * v1 + v2 by VECTSP_1:def 26;
        then v2 = - ((b" * a) * v1) by VECTSP_1:63
          .= (- 1_GF) * ((b" * a) * v1) by VECTSP_1:59
          .= (- 1_GF) * (b" * a) * v1 by VECTSP_1:def 26;
        hence thesis by A1,Th8;
      end;
    end;
    hence thesis;
  end;
  assume
A6: for a,b st a * v1 + b * v2 = 0.V holds a = 0.GF & b = 0.GF;
A7: now
    let a;
    assume
    v1 = a * v2;
    then v1 = 0.V + a * v2 by RLVECT_1:10;
    then 0.V = v1 - a * v2 by VECTSP_2:22
      .= v1 + ((- a) * v2) by VECTSP_1:68
      .= 1.GF * v1 + (- a) * v2 by VECTSP_1:def 26;
    hence contradiction by A6;
  end;
  now
    assume
A8: v2 = 0.V;
    0.V = 0.V + 0.V by RLVECT_1:10
      .= 0.GF * v1 + 0.V by VECTSP_1:60
      .= 0.GF * v1 + 1.GF * v2 by A8,VECTSP_1:60;
    hence contradiction by A6;
  end;
  hence thesis by A7,Th8;
end;

definition
  let GF;
  let V;
  let A;
  func Lin(A) -> strict Subspace of V means
  :Def2:
  the carrier of it = {Sum(l)
  : not contradiction};
  existence
  proof
    set A1 = {Sum(l) : not contradiction};
    A1 c= the carrier of V
    proof
      let x;
      assume
      x in A1;
      then ex l st x = Sum(l);
      hence thesis;
    end;
    then reconsider A1 as Subset of V;
    reconsider l = ZeroLC(V) as Linear_Combination of A by VECTSP_6:26;
A1: A1 is linearly-closed
    proof
      thus for v,u st v in A1 & u in A1 holds v + u in A1
      proof
        let v,u;
        assume that
A2:     v in A1 and
A3:     u in A1;
        consider l1 being Linear_Combination of A such that
A4:     v = Sum(l1) by A2;
        consider l2 being Linear_Combination of A such that
A5:     u = Sum(l2) by A3;
        reconsider f = l1 + l2 as Linear_Combination of A by VECTSP_6:52;
        v + u = Sum(f) by A4,A5,VECTSP_6:77;
        hence thesis;
      end;
      let a,v;
      assume
      v in A1;
      then consider l such that
A6:   v = Sum(l);
      reconsider f = a * l as Linear_Combination of A by VECTSP_6:61;
      a * v = Sum(f) by A6,VECTSP_6:78;
      hence thesis;
    end;
    Sum(l) = 0.V by VECTSP_6:41;
    then 0.V in A1;
    hence thesis by A1,VECTSP_4:42;
  end;
  uniqueness by VECTSP_4:37;
end;

canceled 2;

theorem Th12:
  x in Lin(A) iff ex l st x = Sum(l)
proof
  thus x in Lin(A) implies ex l st x = Sum(l)
  proof
    assume
    x in Lin(A);
    then x in the carrier of Lin(A) by STRUCT_0:def 5;
    then x in {Sum(l) : not contradiction} by Def2;
    hence thesis;
  end;
  given k being Linear_Combination of A such that
A1: x = Sum(k);
  x in {Sum(l): not contradiction} by A1;
  then x in the carrier of Lin(A) by Def2;
  hence thesis by STRUCT_0:def 5;
end;

theorem Th13:
  x in A implies x in Lin(A)
proof
  deffunc F(set) = 0.GF;
  assume
A1: x in A;
  then reconsider v = x as Vector of V;
  consider f being Function of the carrier of V, the carrier of GF such that
A2: f.v = 1_GF and
A3: for u st u <> v holds f.u = F(u) from FUNCT_2:sch 6;
  reconsider f as Element of Funcs(the carrier of V, the carrier of GF) by
  FUNCT_2:11;
  ex T st for u st not u in T holds f.u = 0.GF
  proof
    take T = {v};
    let u;
    assume
    not u in T;
    then u <> v by TARSKI:def 1;
    hence thesis by A3;
  end;
  then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
A4: Carrier(f) c= {v}
  proof
    let x;
    assume
    x in Carrier(f);
    then consider u such that
A5: x = u and
A6: f.u <> 0.GF;
    u = v by A3,A6;
    hence thesis by A5,TARSKI:def 1;
  end;
  then reconsider f as Linear_Combination of {v} by VECTSP_6:def 7;
A7: Sum(f) = 1_GF * v by A2,VECTSP_6:43
    .= v by VECTSP_1:def 26;
  {v} c= A by A1,ZFMISC_1:37;
  then Carrier(f) c= A by A4,XBOOLE_1:1;
  then reconsider f as Linear_Combination of A by VECTSP_6:def 7;
  Sum(f) = v by A7;
  hence thesis by Th12;
end;

reserve l0 for Linear_Combination of {}(the carrier of V);

theorem
  Lin({}(the carrier of V)) = (0).V
proof
  set A = Lin({}(the carrier of V));
  now
    let v;
    thus v in A implies v in (0).V
    proof
      assume
      v in A;
      then
A1:   v in the carrier of A by STRUCT_0:def 5;
      the carrier of A = {Sum(l0) : not contradiction} by Def2;
      then ex l0 st v = Sum(l0) by A1;
      then v = 0.V by VECTSP_6:42;
      hence thesis by VECTSP_4:46;
    end;
    assume
    v in (0).V;
    then v = 0.V by VECTSP_4:46;
    hence v in A by VECTSP_4:25;
  end;
  hence thesis by VECTSP_4:38;
end;

theorem
  Lin(A) = (0).V implies A = {} or A = {0.V}
proof
  assume that
A1: Lin(A) = (0).V and
A2: A <> {};
  thus A c= {0.V}
  proof
    let x;
    assume
    x in A;
    then x in Lin(A) by Th13;
    then x = 0.V by A1,VECTSP_4:46;
    hence thesis by TARSKI:def 1;
  end;
  consider y being Element of A;
  let x;
  assume
  x in {0.V};
  then
A3: x = 0.V by TARSKI:def 1;
  y in A & y in Lin(A) by A2,Th13;
  hence thesis by A1,A3,VECTSP_4:46;
end;

theorem Th16:
  for W being strict Subspace of V st A = the carrier of W holds
  Lin(A) = W
proof
  let W be strict Subspace of V;
  assume
A1: A = the carrier of W;
  now
    let v;
A2: 0.GF <> 1.GF;
    thus v in Lin(A) implies v in W
    proof
      assume
      v in Lin(A);
      then
A3:   ex l st v = Sum(l) by Th12;
      A is linearly-closed by A1,VECTSP_4:41;
      then v in the carrier of W by A1,A2,A3,VECTSP_6:40;
      hence thesis by STRUCT_0:def 5;
    end;
    v in W iff v in the carrier of W by STRUCT_0:def 5;
    hence v in W implies v in Lin(A) by A1,Th13;
  end;
  hence thesis by VECTSP_4:38;
end;

theorem
  for V being strict VectSp of GF, A being Subset of V st A = the
  carrier of V holds Lin(A) = V
proof
  let V be strict VectSp of GF, A be Subset of V such that
A1: A = the carrier of V;
  (Omega).V = V;
  hence thesis by A1,Th16;
end;

theorem Th18:
  A c= B implies Lin(A) is Subspace of Lin(B)
proof
  assume
A1: A c= B;
  now
    let v;
    assume
    v in Lin(A);
    then consider l such that
A2: v = Sum(l) by Th12;
    reconsider l as Linear_Combination of B by A1,VECTSP_6:25;
    Sum(l) = v by A2;
    hence v in Lin(B) by Th12;
  end;
  hence thesis by VECTSP_4:36;
end;

theorem
  for V being strict VectSp of GF, A,B being Subset of V st Lin(A) = V &
  A c= B holds Lin(B) = V
proof
  let V be strict VectSp of GF, A,B be Subset of V;
  assume
  Lin(A) = V & A c= B;
  then V is Subspace of Lin(B) by Th18;
  hence thesis by VECTSP_4:33;
end;

theorem
  Lin(A \/ B) = Lin(A) + Lin(B)
proof
  now
    deffunc F(set) = 0.GF;
    let v;
    assume
    v in Lin(A \/ B);
    then consider l being Linear_Combination of A \/ B such that
A1: v = Sum(l) by Th12;
    deffunc G(set) = l.$1;
    set D = Carrier(l) \ A;
    set C = Carrier(l) /\ A;
    defpred P[set] means $1 in C;
A2: now
      let x;
      assume
      x in the carrier of V;
      then reconsider v = x as Vector of V;
      f.v in the carrier of GF;
      hence P[x] implies G(x) in the carrier of GF;
      assume
      not P[x];
      thus F(x) in the carrier of GF;
    end;
    reconsider C as finite Subset of V;
    defpred C[set] means $1 in D;
    reconsider D as finite Subset of V;
A3: D c= B
    proof
      let x;
      assume
      x in D;
      then
A4:   x in Carrier(l) & not x in A by XBOOLE_0:def 5;
      Carrier(l) c= A \/ B by VECTSP_6:def 7;
      hence thesis by A4,XBOOLE_0:def 3;
    end;
    consider f being Function of the carrier of V, the carrier of GF such that
A5: for x st x in the carrier of V holds (P[x] implies f.x = G(x)) &
    (not P[x] implies f.x = F(x)) from FUNCT_2:sch 5 (A2);
    reconsider f as Element of Funcs(the carrier of V, the carrier of GF) by
    FUNCT_2:11;
    for u holds not u in C implies f.u = 0.GF by A5;
    then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
A6: Carrier(f) c= C
    proof
      let x;
      assume
      x in Carrier(f);
      then
A7:   ex u st x = u & f.u <> 0.GF;
      assume
      not x in C;
      hence thesis by A5,A7;
    end;
    C c= A by XBOOLE_1:17;
    then Carrier(f) c= A by A6,XBOOLE_1:1;
    then reconsider f as Linear_Combination of A by VECTSP_6:def 7;
    deffunc G(set) = l.$1;
A8: now
      let x;
      assume
      x in the carrier of V;
      then reconsider v = x as Vector of V;
      g.v in the carrier of GF;
      hence C[x] implies G(x) in the carrier of GF;
      assume
      not C[x];
      thus F(x) in the carrier of GF;
    end;
    consider g being Function of the carrier of V, the carrier of GF such that
A9: for x st x in the carrier of V holds (C[x] implies g.x = G(x)) &
    (not C[x] implies g.x = F(x)) from FUNCT_2:sch 5 (A8);
    reconsider g as Element of Funcs(the carrier of V, the carrier of GF) by
    FUNCT_2:11;
    for u holds not u in D implies g.u = 0.GF by A9;
    then reconsider g as Linear_Combination of V by VECTSP_6:def 4;
    Carrier(g) c= D
    proof
      let x;
      assume
      x in Carrier(g);
      then
A10:  ex u st x = u & g.u <> 0.GF;
      assume
      not x in D;
      hence thesis by A9,A10;
    end;
    then Carrier(g) c= B by A3,XBOOLE_1:1;
    then reconsider g as Linear_Combination of B by VECTSP_6:def 7;
    l = f + g
    proof
      let v;
      now
        per cases;
        suppose
A11:      v in C;
A12:      now
            assume
            v in D;
            then not v in A by XBOOLE_0:def 5;
            hence contradiction by A11,XBOOLE_0:def 4;
          end;
          thus (f + g).v = f.v + g.v by VECTSP_6:def 11
            .= l.v + g.v by A5,A11
            .= l.v + 0.GF by A9,A12
            .= l.v by RLVECT_1:10;
        end;
        suppose
A13:      not v in C;
          now
            per cases;
            suppose
A14:          v in Carrier(l);
A15:          now
                assume
                not v in D;
                then not v in Carrier(l) or v in A by XBOOLE_0:def 5;
                hence contradiction by A13,A14,XBOOLE_0:def 4;
              end;
              thus (f + g). v = f.v + g.v by VECTSP_6:def 11
                .= g.v + 0.GF by A5,A13
                .= g.v by RLVECT_1:10
                .= l.v by A9,A15;
            end;
            suppose
A16:          not v in Carrier(l);
              then
A17:          not v in D by XBOOLE_0:def 5;
A18:          not v in C by A16,XBOOLE_0:def 4;
              thus (f + g).v = f.v + g.v by VECTSP_6:def 11
                .= 0.GF + g.v by A5,A18
                .= 0.GF + 0.GF by A9,A17
                .= 0.GF by RLVECT_1:10
                .= l.v by A16;
            end;
          end;
          hence thesis;
        end;
      end;
      hence thesis;
    end;
    then
A19: v = Sum(f) + Sum(g) by A1,VECTSP_6:77;
    Sum(f) in Lin(A) & Sum(g) in Lin(B) by Th12;
    hence v in Lin(A) + Lin(B) by A19,VECTSP_5:5;
  end;
  then
A20: Lin(A \/ B) is Subspace of Lin(A) + Lin(B) by VECTSP_4:36;
  Lin(A) is Subspace of Lin(A \/ B) & Lin(B) is Subspace of Lin(A \/ B) by
  Th18,XBOOLE_1:7;
  then Lin(A) + Lin(B) is Subspace of Lin(A \/ B) by VECTSP_5:40;
  hence thesis by A20,VECTSP_4:33;
end;

theorem
  Lin(A /\ B) is Subspace of Lin(A) /\ Lin(B)
proof
  Lin(A /\ B) is Subspace of Lin(A) & Lin(A /\ B) is Subspace of Lin(B) by
  Th18,XBOOLE_1:17;
  hence thesis by VECTSP_5:24;
end;

theorem Th22:
  for V being VectSp of GF, A being Subset of V st A is
  linearly-independent holds ex B being Subset of V st A c= B & B is
  linearly-independent & Lin(B) = the VectSpStr of V
proof
  let V be VectSp of GF, A be Subset of V;
  defpred P[set] means ex B being Subset of V st B = $1 & A c= B & B is
  linearly-independent;
  consider Q being set such that
A1: for Z holds Z in Q iff Z in bool(the carrier of V) & P[Z] from
  XBOOLE_0:sch 1;
A2: now
    let Z;
    assume that
A3: Z <> {} and
A4: Z c= Q and
A5: Z is c=-linear;
    set W = union Z;
    W c= the carrier of V
    proof
      let x;
      assume
      x in W;
      then consider X such that
A6:   x in X and
A7:   X in Z by TARSKI:def 4;
      X in bool(the carrier of V) by A1,A4,A7;
      hence thesis by A6;
    end;
    then reconsider W as Subset of V;
A8: W is linearly-independent
    proof
      deffunc F(set) = {C where C is Subset of V: $1 in C & C in Z};
      let l be Linear_Combination of W;
      assume that
A9:   Sum(l) = 0.V and
A10:  Carrier(l) <> {};
      consider f being Function such that
A11:  dom f = Carrier(l) and
A12:  for x st x in Carrier(l) holds f.x = F(x) from FUNCT_1:sch 3;
      reconsider M = rng f as non empty set by A10,A11,RELAT_1:65;
      consider F being Choice_Function of M;
      set S = rng F;
A13:  now
        assume
        {} in M;
        then consider x such that
A14:    x in dom f and
A15:    f.x = {} by FUNCT_1:def 5;
        Carrier(l) c= W by VECTSP_6:def 7;
        then consider X such that
A16:    x in X and
A17:    X in Z by A11,A14,TARSKI:def 4;
        reconsider X as Subset of V by A1,A4,A17;
        X in {C where C is Subset of V : x in C & C in Z} by A16,A17;
        hence contradiction by A11,A12,A14,A15;
      end;
      then
A18:  dom F = M by RLVECT_3:35;
      then dom F is finite by A11,FINSET_1:26;
      then
A19:  S is finite by FINSET_1:26;
A20:  now
        let X;
        assume
        X in S;
        then consider x such that
A21:    x in dom F and
A22:    F.x = X by FUNCT_1:def 5;
        consider y such that
A23:    y in dom f & f.y = x by A18,A21,FUNCT_1:def 5;
A24:    x = {C where C is Subset of V : y in C & C in Z} by A11,A12,A23;
        X in x by A13,A18,A21,A22,ORDERS_1:def 1;
        then ex C being Subset of V st C = X & y in C & C in Z by A24;
        hence X in Z;
      end;
A25:  now
        let X,Y;
        assume
        X in S & Y in S;
        then X in Z & Y in Z by A20;
        then X,Y are_c=-comparable by A5,ORDINAL1:def 9;
        hence X c= Y or Y c= X by XBOOLE_0:def 9;
      end;
      S <> {} by A18,RELAT_1:65;
      then union S in S by A25,A19,CARD_2:81;
      then union S in Z by A20;
      then consider B being Subset of V such that
A26:  B = union S and
      A c= B and
A27:  B is linearly-independent by A1,A4;
      Carrier(l) c= union S
      proof
        let x;
        set X = f.x;
        assume
A28:    x in Carrier(l);
        then
A29:    f.x = {C where C is Subset of V : x in C & C in Z} by A12;
A30:    f.x in M by A11,A28,FUNCT_1:def 5;
        then F.X in X by A13,ORDERS_1:def 1;
        then
A31:    ex C being Subset of V st F.X = C & x in C & C in Z by A29;
        F.X in S by A18,A30,FUNCT_1:def 5;
        hence thesis by A31,TARSKI:def 4;
      end;
      then l is Linear_Combination of B by A26,VECTSP_6:def 7;
      hence thesis by A9,A10,A27,Def1;
    end;
    consider x being Element of Z;
    x in Q by A3,A4,TARSKI:def 3;
    then
A32: ex B being Subset of V st B = x & A c= B & B is linearly-independent
    by A1;
    x c= W by A3,ZFMISC_1:92;
    then A c= W by A32,XBOOLE_1:1;
    hence union Z in Q by A1,A8;
  end;
  assume
  A is linearly-independent;
  then Q <> {} by A1;
  then consider X such that
A33: X in Q and
A34: for Z st Z in Q & Z <> X holds not X c= Z by A2,ORDERS_1:177;
  consider B being Subset of V such that
A35: B = X and
A36: A c= B and
A37: B is linearly-independent by A1,A33;
  take B;
  thus A c= B & B is linearly-independent by A36,A37;
  assume
  Lin(B) <> the VectSpStr of V;
  then consider v being Vector of V such that
A38: not (v in Lin(B) iff v in (Omega).V) by VECTSP_4:38;
A39: B \/ {v} is linearly-independent
  proof
    let l be Linear_Combination of B \/ {v};
    assume
A40: Sum(l) = 0.V;
    now
      per cases;
      suppose
        v in Carrier(l);
        then l.v <> 0.GF by VECTSP_6:20;
        then
A41:    - l.v <> 0.GF by VECTSP_2:34;
        deffunc G(set) = 0.GF;
        deffunc F(Vector of V) = l.$1;
        consider f being Function of the carrier of V, the carrier of GF such
        that
A42:    f.v = 0.GF and
A43:    for u being Vector of V st u <> v holds f.u = F(u) from
        FUNCT_2:sch 6;
        reconsider f as Element of Funcs(the carrier of V, the carrier of GF)
        by FUNCT_2:11;
        now
          let u be Vector of V;
          assume
          not u in Carrier(l) \ {v};
          then not u in Carrier(l) or u in {v} by XBOOLE_0:def 5;
          then l.u = 0.GF & u <> v or u = v by TARSKI:def 1;
          hence f.u = 0.GF by A42,A43;
        end;
        then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
        Carrier(f) c= B
        proof
          let x;
A44:      Carrier(l) c= B \/ {v} by VECTSP_6:def 7;
          assume
          x in Carrier(f);
          then consider u being Vector of V such that
A45:      u = x and
A46:      f.u <> 0.GF;
          f.u = l.u by A42,A43,A46;
          then u in Carrier(l) by A46;
          then u in B or u in {v} by A44,XBOOLE_0:def 3;
          hence thesis by A42,A45,A46,TARSKI:def 1;
        end;
        then reconsider f as Linear_Combination of B by VECTSP_6:def 7;
        consider g being Function of the carrier of V, the carrier of GF such
        that
A47:    g.v = - l.v and
A48:    for u being Vector of V st u <> v holds g.u = G(u) from
        FUNCT_2:sch 6;
        reconsider g as Element of Funcs(the carrier of V, the carrier of GF)
        by FUNCT_2:11;
        now
          let u be Vector of V;
          assume
          not u in {v};
          then u <> v by TARSKI:def 1;
          hence g.u = 0.GF by A48;
        end;
        then reconsider g as Linear_Combination of V by VECTSP_6:def 4;
        Carrier(g) c= {v}
        proof
          let x;
          assume
          x in Carrier(g);
          then ex u being Vector of V st x = u & g.u <> 0.GF;
          then x = v by A48;
          hence thesis by TARSKI:def 1;
        end;
        then reconsider g as Linear_Combination of {v} by VECTSP_6:def 7;
A49:    Sum(g) = (- l.v) * v by A47,VECTSP_6:43;
        f - g = l
        proof
          let u be Vector of V;
          now
            per cases;
            suppose
A50:          v = u;
              thus (f - g).u = f.u - g.u by VECTSP_6:73
                .= 0.GF + (- (- l.v)) by A42,A47,A50,RLVECT_1:def 12
                .= l.v + 0.GF by RLVECT_1:30
                .= l.u by A50,RLVECT_1:10;
            end;
            suppose
A51:          v <> u;
              thus (f - g).u = f.u - g.u by VECTSP_6:73
                .= l.u - g.u by A43,A51
                .= l.u - 0.GF by A48,A51
                .= l.u by RLVECT_1:26;
            end;
          end;
          hence thesis;
        end;
        then 0.V = Sum(f) - Sum(g) by A40,VECTSP_6:80;
        then Sum(f) = 0.V + Sum(g) by VECTSP_2:22
          .= (- l.v) * v by A49,RLVECT_1:10;
        then
A52:    (- l.v) * v in Lin(B) by Th12;
        (- l.v)" * ((- l.v) * v) = (- l.v)" * (- l.v) * v by VECTSP_1:
        def 26
          .= 1_GF * v by A41,VECTSP_1:def 22
          .= v by VECTSP_1:def 26;
        hence thesis by A38,A52,RLVECT_1:3,VECTSP_4:29;
      end;
      suppose
A53:    not v in Carrier(l);
        Carrier(l) c= B
        proof
          let x;
          assume
A54:      x in Carrier(l);
          Carrier(l) c= B \/ {v} by VECTSP_6:def 7;
          then x in B or x in {v} by A54,XBOOLE_0:def 3;
          hence thesis by A53,A54,TARSKI:def 1;
        end;
        then l is Linear_Combination of B by VECTSP_6:def 7;
        hence thesis by A37,A40,Def1;
      end;
    end;
    hence thesis;
  end;
  v in {v} by TARSKI:def 1;
  then
A55: v in B \/ {v} by XBOOLE_0:def 3;
A56: not v in B by A38,Th13,RLVECT_1:3;
  B c= B \/ {v} by XBOOLE_1:7;
  then A c= B \/ {v} by A36,XBOOLE_1:1;
  then B \/ {v} in Q by A1,A39;
  hence contradiction by A34,A35,A55,A56,XBOOLE_1:7;
end;

theorem Th23:
  Lin(A) = V implies ex B st B c= A & B is linearly-independent &
  Lin(B) = V
proof
  assume
A1: Lin(A) = V;
  defpred P[set] means ex B st B = $1 & B c= A & B is linearly-independent;
  consider Q being set such that
A2: for Z holds Z in Q iff Z in bool(the carrier of V) & P[Z] from
  XBOOLE_0:sch 1;
A3: now
    let Z;
    assume that
    Z <> {} and
A4: Z c= Q and
A5: Z is c=-linear;
    set W = union Z;
    W c= the carrier of V
    proof
      let x;
      assume
      x in W;
      then consider X such that
A6:   x in X and
A7:   X in Z by TARSKI:def 4;
      X in bool(the carrier of V) by A2,A4,A7;
      hence thesis by A6;
    end;
    then reconsider W as Subset of V;
A8: W is linearly-independent
    proof
      deffunc F(set) = {C : $1 in C & C in Z};
      let l be Linear_Combination of W;
      assume that
A9:   Sum(l) = 0.V and
A10:  Carrier(l) <> {};
      consider f being Function such that
A11:  dom f = Carrier(l) and
A12:  for x st x in Carrier(l) holds f.x = F(x) from FUNCT_1:sch 3;
      reconsider M = rng f as non empty set by A10,A11,RELAT_1:65;
      consider F being Choice_Function of M;
      set S = rng F;
A13:  now
        assume
        {} in M;
        then consider x such that
A14:    x in dom f and
A15:    f.x = {} by FUNCT_1:def 5;
        Carrier(l) c= W by VECTSP_6:def 7;
        then consider X such that
A16:    x in X and
A17:    X in Z by A11,A14,TARSKI:def 4;
        reconsider X as Subset of V by A2,A4,A17;
        X in {C : x in C & C in Z} by A16,A17;
        hence contradiction by A11,A12,A14,A15;
      end;
      then
A18:  dom F = M by RLVECT_3:35;
      then dom F is finite by A11,FINSET_1:26;
      then
A19:  S is finite by FINSET_1:26;
A20:  now
        let X;
        assume
        X in S;
        then consider x such that
A21:    x in dom F and
A22:    F.x = X by FUNCT_1:def 5;
        consider y such that
A23:    y in dom f & f.y = x by A18,A21,FUNCT_1:def 5;
A24:    x = {C : y in C & C in Z} by A11,A12,A23;
        X in x by A13,A18,A21,A22,ORDERS_1:def 1;
        then ex C st C = X & y in C & C in Z by A24;
        hence X in Z;
      end;
A25:  now
        let X,Y;
        assume
        X in S & Y in S;
        then X in Z & Y in Z by A20;
        then X,Y are_c=-comparable by A5,ORDINAL1:def 9;
        hence X c= Y or Y c= X by XBOOLE_0:def 9;
      end;
      S <> {} by A18,RELAT_1:65;
      then union S in S by A25,A19,CARD_2:81;
      then union S in Z by A20;
      then consider B such that
A26:  B = union S and
      B c= A and
A27:  B is linearly-independent by A2,A4;
      Carrier(l) c= union S
      proof
        let x;
        set X = f.x;
        assume
A28:    x in Carrier(l);
        then
A29:    f.x = {C : x in C & C in Z} by A12;
A30:    f.x in M by A11,A28,FUNCT_1:def 5;
        then F.X in X by A13,ORDERS_1:def 1;
        then
A31:    ex C st F.X = C & x in C & C in Z by A29;
        F.X in S by A18,A30,FUNCT_1:def 5;
        hence thesis by A31,TARSKI:def 4;
      end;
      then l is Linear_Combination of B by A26,VECTSP_6:def 7;
      hence thesis by A9,A10,A27,Def1;
    end;
    W c= A
    proof
      let x;
      assume
      x in W;
      then consider X such that
A32:  x in X and
A33:  X in Z by TARSKI:def 4;
      ex B st B = X & B c= A & B is linearly-independent by A2,A4,A33;
      hence thesis by A32;
    end;
    hence union Z in Q by A2,A8;
  end;
  {}(the carrier of V) c= A by XBOOLE_1:2;
  then Q <> {} by A2;
  then consider X such that
A34: X in Q and
A35: for Z st Z in Q & Z <> X holds not X c= Z by A3,ORDERS_1:177;
  consider B such that
A36: B = X and
A37: B c= A and
A38: B is linearly-independent by A2,A34;
  take B;
  thus B c= A & B is linearly-independent by A37,A38;
  assume
A39: Lin(B) <> V;
  now
    assume
A40: for v st v in A holds v in Lin(B);
    now
      reconsider F = the carrier of Lin(B) as Subset of V by VECTSP_4:def 2;
      let v;
      assume
      v in Lin(A);
      then consider l such that
A41:  v = Sum(l) by Th12;
      Carrier(l) c= the carrier of Lin(B)
      proof
        let x;
        assume
A42:    x in Carrier(l);
        then reconsider a = x as Vector of V;
        Carrier(l) c= A by VECTSP_6:def 7;
        then a in Lin(B) by A40,A42;
        hence thesis by STRUCT_0:def 5;
      end;
      then reconsider l as Linear_Combination of F by VECTSP_6:def 7;
      Sum(l) = v by A41;
      then v in Lin(F) by Th12;
      hence v in Lin(B) by Th16;
    end;
    then Lin(A) is Subspace of Lin(B) by VECTSP_4:36;
    hence contradiction by A1,A39,VECTSP_4:33;
  end;
  then consider v such that
A43: v in A and
A44: not v in Lin(B);
A45: B \/ {v} is linearly-independent
  proof
    let l be Linear_Combination of B \/ {v};
    assume
A46: Sum(l) = 0.V;
    now
      per cases;
      suppose
        v in Carrier(l);
        then l.v <> 0.GF by VECTSP_6:20;
        then
A47:    - l.v <> 0.GF by VECTSP_2:34;
        deffunc G(Vector of V) = 0.GF;
        deffunc F(Vector of V) = l.$1;
        consider f such that
A48:    f.v = 0.GF and
A49:    for u st u <> v holds f.u = F(u) from FUNCT_2:sch 6;
        reconsider f as Element of Funcs(the carrier of V, the carrier of GF)
        by FUNCT_2:11;
        now
          let u;
          assume
          not u in Carrier(l) \ {v};
          then not u in Carrier(l) or u in {v} by XBOOLE_0:def 5;
          then l.u = 0.GF & u <> v or u = v by TARSKI:def 1;
          hence f.u = 0.GF by A48,A49;
        end;
        then reconsider f as Linear_Combination of V by VECTSP_6:def 4;
        Carrier(f) c= B
        proof
          let x;
A50:      Carrier(l) c= B \/ {v} by VECTSP_6:def 7;
          assume
          x in Carrier(f);
          then consider u such that
A51:      u = x and
A52:      f.u <> 0.GF;
          f.u = l.u by A48,A49,A52;
          then u in Carrier(l) by A52;
          then u in B or u in {v} by A50,XBOOLE_0:def 3;
          hence thesis by A48,A51,A52,TARSKI:def 1;
        end;
        then reconsider f as Linear_Combination of B by VECTSP_6:def 7;
        consider g such that
A53:    g.v = - l.v and
A54:    for u st u <> v holds g.u = G(u) from FUNCT_2:sch 6;
        reconsider g as Element of Funcs(the carrier of V, the carrier of GF)
        by FUNCT_2:11;
        now
          let u;
          assume
          not u in {v};
          then u <> v by TARSKI:def 1;
          hence g.u = 0.GF by A54;
        end;
        then reconsider g as Linear_Combination of V by VECTSP_6:def 4;
        Carrier(g) c= {v}
        proof
          let x;
          assume
          x in Carrier(g);
          then ex u st x = u & g.u <> 0.GF;
          then x = v by A54;
          hence thesis by TARSKI:def 1;
        end;
        then reconsider g as Linear_Combination of {v} by VECTSP_6:def 7;
A55:    Sum(g) = (- l.v) * v by A53,VECTSP_6:43;
        f - g = l
        proof
          let u;
          now
            per cases;
            suppose
A56:          v = u;
              thus (f - g).u = f.u - g.u by VECTSP_6:73
                .= 0.GF + (- (- l.v)) by A48,A53,A56,RLVECT_1:def 12
                .= l.v + 0.GF by RLVECT_1:30
                .= l.u by A56,RLVECT_1:10;
            end;
            suppose
A57:          v <> u;
              thus (f - g).u = f.u - g.u by VECTSP_6:73
                .= l.u - g.u by A49,A57
                .= l.u - 0.GF by A54,A57
                .= l.u by RLVECT_1:26;
            end;
          end;
          hence thesis;
        end;
        then 0.V = Sum(f) - Sum(g) by A46,VECTSP_6:80;
        then Sum(f) = 0.V + Sum(g) by VECTSP_2:22
          .= (- l.v) * v by A55,RLVECT_1:10;
        then
A58:    (- l.v) * v in Lin(B) by Th12;
        (- l.v)" * ((- l.v) * v) = (- l.v)" * (- l.v) * v by VECTSP_1:
        def 26
          .= 1_GF * v by A47,VECTSP_1:def 22
          .= v by VECTSP_1:def 26;
        hence thesis by A44,A58,VECTSP_4:29;
      end;
      suppose
A59:    not v in Carrier(l);
        Carrier(l) c= B
        proof
          let x;
          assume
A60:      x in Carrier(l);
          Carrier(l) c= B \/ {v} by VECTSP_6:def 7;
          then x in B or x in {v} by A60,XBOOLE_0:def 3;
          hence thesis by A59,A60,TARSKI:def 1;
        end;
        then l is Linear_Combination of B by VECTSP_6:def 7;
        hence thesis by A38,A46,Def1;
      end;
    end;
    hence thesis;
  end;
  {v} c= A by A43,ZFMISC_1:37;
  then B \/ {v} c= A by A37,XBOOLE_1:8;
  then
A61: B \/ {v} in Q by A2,A45;
  v in {v} by TARSKI:def 1;
  then
A62: v in B \/ {v} by XBOOLE_0:def 3;
  not v in B by A44,Th13;
  hence contradiction by A35,A36,A62,A61,XBOOLE_1:7;
end;

definition
  let GF;
  let V be VectSp of GF;
  mode Basis of V -> Subset of V means
    :Def3:
    it is linearly-independent & Lin
    (it) = the VectSpStr of V;
  existence
  proof
    ex B being Subset of V st {}(the carrier of V) c= B & B is
    linearly-independent & Lin(B) = the VectSpStr of V by Th22;
    hence thesis;
  end;
end;

