    then 0 + 0 <= a^2 + a by A1,REAL_1:55;
    then A4:  0 + a <= a^2 + a + (a + 1) by A2,REAL_1:55;
   defpred X[real number] means $1 <= 0 or $1^2 <= a;
   defpred Y[real number] means 0 <= $1 & a <= $1^2;
A5: now let x,y such that
A6:  X[x] and
A7:  Y[y];
       per cases;
