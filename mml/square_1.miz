theorem Th63:
  for a, b being complex number holds
  (a + b)^2 = a^2 + 2*a*b + b^2
 proof
  let a, b be complex number;
  thus (a + b)^2 = (a + b)*(a + b) by Def3
            .= a*a + 2*(a*b) + b*b
            .= a^2 + 2*a*b + b*b by Def3
            .= a^2 + 2*a*b + b^2 by Def3;
 end;

theorem Th64:
  for a, b being complex number holds
  (a - b)^2 = a^2 - 2*a*b + b^2
 proof
  let a, b be complex number;
  thus (a - b)^2 = (a + -b)^2
         .= a^2 + 2*a*(-b) + (-b)^2 by Th63
         .= a^2 - 2*a*b + b^2 by Th61;
 end;

theorem Th65:
  for a being complex number holds
  (a + 1)^2 = a^2 + 2*a + 1
 proof
  let a be complex number;
  thus (a + 1)^2 = a^2 + 2*a*1 + 1^2 by Th63
          .= a^2 + 2*a + 1 by Def3,Lm1;
 end;

theorem
   for a being complex number holds
  (a - 1)^2 = a^2 - 2*a + 1
 proof
  let a be complex number;
  thus (a - 1)^2 = a^2 - 2*a*1 + 1^2 by Th64
          .= a^2 - 2*a + 1 by Def3,Lm1;
 end;

theorem Th67:
  for a, b being complex number holds
  (a - b)*(a + b) = a^2 - b^2
 proof
   let a, b be complex number;
   thus (a - b)*(a + b) = a*a - b*b
                       .= a^2 - b*b by Def3
                       .= a^2 - b^2 by Def3;
 end;

theorem Th68:
  for a, b being complex number holds
  (a*b)^2 = a^2*b^2
 proof
   let a, b be complex number;
   thus (a*b)^2 = a*b*(a*b) by Def3
              .= a*a*(b*b)
              .= a^2*(b*b) by Def3
              .= a^2*b^2 by Def3;
 end;

theorem Th69:
  for a, b being complex number holds
  (a/b)^2 = a^2/b^2
 proof
  let a, b be complex number;
  thus (a/b)^2 = (a/b)*(a/b) by Def3
             .= (a*a)/(b*b) by XCMPLX_1:77
             .= a^2/(b*b) by Def3
             .= a^2/b^2 by Def3;
 end;

theorem Th70:
  for a, b being complex number holds
  a^2 - b^2 <> 0 implies 1/(a+b) = (a-b)/(a^2-b^2)
 proof
  let a, b be complex number;
  assume a^2-b^2 <> 0;
  then (a+b)*(a-b) <> 0 by Th67;
  then (a+b) <> 0 & (a-b) <> 0;
  hence 1/(a+b) = (1*(a-b))/((a+b)*(a-b)) by XCMPLX_1:92
               .= (a-b)/(a^2-b^2) by Th67;
 end;

theorem Th71:
  for a, b being complex number holds
  a^2-b^2 <> 0 implies 1/(a-b) = (a+b)/(a^2-b^2)
 proof
  let a, b be complex number;
  assume a^2-b^2 <> 0;
  then (a+b)*(a-b) <> 0 by Th67;
  then (a+b) <> 0 & (a-b) <> 0;
  hence 1/(a-b) = (1*(a+b))/((a-b)*(a+b)) by XCMPLX_1:92
               .= (a+b)/(a^2-b^2) by Th67;
 end;

theorem Th72:
  0 <= a^2
 proof 0 <= a*a by REAL_1:93; hence thesis by Def3; end;

theorem Th73:
  for a being complex number st a^2 = 0 holds a = 0
 proof
  let a be complex number;
  assume a^2 = 0;
  then a*a = 0 by Def3;
  hence thesis by XCMPLX_1:6;
 end;

theorem
   0 <> a implies 0 < a^2
 proof assume 0 <> a; hence 0 <= a^2 & a^2 <> 0 by Th72,Th73; end;

theorem Th75:
  0 < a & a < 1 implies a^2 < a
 proof assume 0 < a & a < 1;
   then a*a < a*1 by REAL_1:70;
  hence a^2 < a by Def3;
 end;

theorem
   1 < a implies a < a^2
 proof assume
A1:    1 < a;
   a*1 < a*a by A1,REAL_1:70;
  hence a < a^2 by Def3;
 end;

Lm3:
  0 < a implies ex x st 0 < x & x^2 < a
 proof assume
A1: 0 < a;
     per cases;
    suppose
A2:   1 <= a;
     reconsider x = 2" as real number;
     take x;
     thus 0 < x;
         x^2 < 2" by Th75;
      then x^2 < 1 by AXIOMS:22;
     hence x^2 < a by A2,AXIOMS:22;
    end;
    suppose
A3:   a < 1;
     take x = a;
     thus 0 < x by A1;
     thus x^2 < a by A1,A3,Th75;
   end;
 end;

theorem Th77:
  0 <= x & x <= y implies x^2 <= y^2
 proof assume
  0 <= x & x <= y;
   then x*x <= x*y & x*y <= y*y by AXIOMS:25;
   then x*x <= y*y by AXIOMS:22;
   then x^2 <= y*y by Def3;
  hence x^2 <= y^2 by Def3;
 end;

theorem Th78:
  0 <= x & x < y implies x^2 < y^2
 proof assume 0 <= x & x < y;
   then x*x <= x*y & x*y < y*y by AXIOMS:25,REAL_1:70;
   then x*x < y*y by AXIOMS:22;
   then x^2 < y*y by Def3;
  hence x^2 < y^2 by Def3;
 end;

Lm4:
  0 <= x & 0 <= y & x^2 = y^2 implies x = y
proof assume
A1: 0 <= x & 0 <= y;
  assume x^2 = y ^2;
  then x <= y & y <= x by A1,Th78;
  hence x = y by AXIOMS:21;
end;

