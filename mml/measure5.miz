theorem Th60:
  diameter {} = 0. by Def10;

LX3:
  diameter A >= 0
   proof per cases;
    suppose A is empty;
     hence thesis by Def10;
    end;
    suppose A is non empty;
      then inf A <= sup A by XXREAL_2:40;
      then sup A - inf A >= 0 by SUPINF_2:72;
     hence thesis by Def10;
    end;
   end;

LX4:
  A c= B implies diameter A <= diameter B
 proof assume
Z:  A c= B;
  per cases;
  suppose A = {};
   then diameter A = 0 by Th60;
  hence diameter A <= diameter B by LX3;
  end;
  suppose
S:  A <> {};
   then B <> {} by Z;
   then
B: diameter B = sup B - inf B by Def10;
A: diameter A = sup A - inf A by S,Def10;
C: sup A <= sup B by Z,XXREAL_2:59;
   inf B <= inf A by Z,XXREAL_2:60;
  hence diameter A <= diameter B by A,B,C,SUPINF_2:15;
  end;
 end;

theorem
  (A c= B & B =[.a,b.] & b <= a) implies (diameter(A) = 0. & diameter(B) = 0.)
proof
  assume that
A1: A c= B and
A2: B =[.a,b.] and
A3: b <= a;
  per cases by A3,XXREAL_0:1;
  suppose a = b;
    then
U:   B = {a} by A2,XXREAL_1:17;
    then inf B = a & sup B = a by XXREAL_2:11,13;
    then
X:  diameter B = a - a by Def10,U
        .= 0 by SUPINF_2:73;
    then
Y:   diameter A <= 0 by A1,LX4;
    0 <= diameter A by LX3;
   hence thesis by Y,X;
  end;
  suppose b < a;
    then
