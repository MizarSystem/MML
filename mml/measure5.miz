:Def8:  ex a being R_eal,b being real number st a <= b & IT = ].a,b.];
end;

notation
  let IT be Subset of REAL;
  synonym IT is right_closed_interval for IT is left_open_interval;
end;

registration
  cluster right_open_interval Subset of REAL;
  existence
  proof
    consider a,b being R_eal;
    take [.0,+infty.[,0,+infty;
    thus thesis;
  end;
  cluster left_open_interval Subset of REAL;
  existence
  proof
    consider a,b being R_eal such that
A2: a = -infty & b = +infty;
    take ].a,1.],a,1;
    thus thesis by A2;
  end;
end;

notation
  let IT be Subset of REAL;
  synonym IT is interval for IT is connected;
end;

definition
  let IT be Subset of REAL;
  redefine attr IT is interval means
  :Def9:
  IT is open_interval or IT is closed_interval or
  IT is right_open_interval or IT is left_open_interval;
 compatibility
  proof
   thus IT is interval implies
  IT is open_interval or IT is closed_interval or
  IT is right_open_interval or IT is left_open_interval
  proof assume
Z: IT is interval;
   per cases;
   suppose
S:   IT is left_end right_end;
    reconsider a = inf IT,b = sup IT as R_eal;
W:     a in IT & b in IT & IT = [.a,b.] by S,Z,XXREAL_2:79,def 5,def 6;
X:  a <= b by W,XXREAL_1:1;
    IT is closed_interval by W,Def6,X;
    hence thesis;
   end;
   suppose
S:  IT is non left_end right_end;
    then
X:  IT = ].inf IT, sup IT.] by Z,XXREAL_2:80;
    set a = inf IT, b = sup IT;
Y:  b in IT by S,XXREAL_2:def 6;
    then
W:    a <= b & IT = ].a,b.] by X,XXREAL_2:40;
    not a in IT by S,XXREAL_2:def 5;
    then
WW:  a < b by W,Y,XXREAL_0:1;
    reconsider a,b as R_eal;
    b in IT by WW,W;
    then b is real number;
    then IT is left_open_interval by W,Def8;
    hence thesis;
   end;
   suppose
S:   IT is left_end non right_end;
    then
X:  IT = [.inf IT, sup IT.[ by Z,XXREAL_2:81;
    set a = inf IT, b = sup IT;
Y:  a in IT by S,XXREAL_2:def 5;
    then
W:   a <= b & IT = [.a,b.[ by X,XXREAL_2:40;
    not b in IT by S,XXREAL_2:def 6;
    then
WW:  a < b by W,Y,XXREAL_0:1;
    reconsider a,b as R_eal;
    a in IT by WW,W;
    then a is real number;
    then IT is right_open_interval by W,Def7;
    hence thesis;
   end;
   suppose IT is non left_end non right_end;
    then consider a,b being ext-real number such that
W:    a <= b & IT = ].a,b.[ by Z,XXREAL_2:83;
    reconsider a,b as R_eal by XXREAL_0:def 1;
    a <= b by W;
    then IT is open_interval by W,Def5;
    hence thesis;
   end;
  end;
  assume
Z:  IT is open_interval or IT is closed_interval or
  IT is right_open_interval or IT is left_open_interval;
  per cases by Z;
  suppose IT is open_interval;
   then ex a,b being R_eal st a <= b & IT = ].a,b.[ by Def5;
  hence IT is connected;
  end;
  suppose IT is closed_interval;
    then consider a,b being real number such that
W:   a <= b & IT = [.a,b.] by Def6;
  thus IT is connected by W;
  end;
  suppose IT is left_open_interval;
   then consider a being R_eal,b being real number such that
W:  a <= b & IT = ].a,b.] by Def8;
  thus IT is connected by W;
  end;
  suppose IT is right_open_interval;
   then consider a being real number, b being R_eal such that
W:   a <= b & IT = [.a,b.[ by Def7;
  thus IT is connected by W;
  end;
  end;
end;

registration
  cluster interval Subset of REAL;
  existence
  proof
    consider I being open_interval Subset of REAL;
    take I;
    thus I is open_interval or I is closed_interval
    or I is right_open_interval or I is left_open_interval;
  end;
end;

