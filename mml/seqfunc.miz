    A3: X = dom f &
       for p st p>0 ex k st for n,x st n>=k & x in X holds
       abs((H.n).x - f.x) < p
        by A1,Def13;
    take f;
    thus X = dom f by A3;
    let x;
    assume A4: x in X;
    let p;
    assume p>0; then consider k such that
    A5: for n,x st n>=k & x in X holds abs((H.n).x - f.x) < p by A3;
    take k; let n;
    assume n>=k;
    hence abs((H.n).x - f.x) < p by A4,A5;
