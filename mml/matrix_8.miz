  proof
    set M = 1.(K,n);
    let M1 be Matrix of n,K;
    M@*M1*M=M*M1*M by MATRIX_6:10
      .=M1*M by MATRIX_3:20
      .=M1 by MATRIX_3:21;
    hence thesis by MATRIX_6:8;
  end;
end;

