A81: rng(F|i) = Carrier(L2) by A52,A54,FINSEQ_1:55;
A82: for k being Nat st k in dom f2 holds f2.k = (r9*(f|i)).k by A62;
  dom f2 = dom (r9*(f|i)) by A60,VALUED_1:def 5;
