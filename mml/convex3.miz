    end;
  end;

  then
A79: for n being Nat st n in dom(f2) holds f2.n = L2.((F|i).n) & f2.n >= 0
  by A53;

  f/^i = <*f/.(len f)*> by A17,A12,FINSEQ_5:33
    .= <*f.(len f)*> by A30,PARTFUN1:def 8;
