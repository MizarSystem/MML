A4: for n,m being Element of NAT st 1 <= n & n < m & m <= len F holds F.n <>
  F.m

  proof
    let n,m be Element of NAT;
    assume that
A5: 1 <= n and
A6: n < m and
A7: m <= len F;
    n <= len F by A6,A7,XXREAL_0:2;
