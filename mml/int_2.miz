definition
  let a,b;
  pred a,b are_relative_prime means
  :Def4:
  a gcd b = 1;
  symmetry;
end;

canceled 2;

theorem
  a<>0 or b<>0 implies ex a1,b1 st
  a = (a gcd b)*a1 & b = (a gcd b)*b1 & a1,b1 are_relative_prime
proof
  assume
A1: a<>0 or b<>0;
  (a gcd b) divides a by Def3;
  then consider a1 such that
A2: a = (a gcd b)*a1 by INT_1:def 9;
  (a gcd b) divides b by Def3;
  then consider b1 such that
A3: b = (a gcd b)*b1 by INT_1:def 9;
  (a1 gcd b1) divides a1 by Def3;
  then consider a2 such that
A4: a1 = (a1 gcd b1)*a2 by INT_1:def 9;
  (a1 gcd b1) divides b1 by Def3;
  then consider b2 such that
A5: b1 = (a1 gcd b1)*b2 by INT_1:def 9;
A6: a = ((a gcd b)*(a1 gcd b1))*a2 by A2,A4;
  b = ((a gcd b)*(a1 gcd b1))*b2 by A3,A5;
  then (a gcd b)*(a1 gcd b1) divides a & (a gcd b)*(a1 gcd b1) divides
  b by A6,INT_1:def 9;
  then (a gcd b)*(a1 gcd b1) divides (a gcd b) by Def3;
  then consider c such that
A7: a gcd b = ((a gcd b)*(a1 gcd b1))*c by INT_1:def 9;
A8: (a gcd b)*1 = (a gcd b)*((a1 gcd b1)*c) by A7;
  a gcd b <>0 by A1,Th35;
  then 1 = (a1 gcd b1)*c by A8,XCMPLX_1:5;
  then a1 gcd b1 = 1 or a1 gcd b1 = -1 by INT_1:22;
  then a1,b1 are_relative_prime by Def4,NAT_1:2;
  hence thesis by A2,A3;
end;

theorem Th39:
  a,b are_relative_prime implies (c*a gcd c*b) = abs(c)
  & c*a gcd b*c = abs(c) & a*c gcd c*b = abs(c) & a*c gcd b*c = abs(c)
proof
  assume a,b are_relative_prime;
  then
A1: a gcd b = 1 by Def4; thus
A2: c*a gcd c*b = abs(c)
  proof
    c divides c*a & c divides c*b by Th12;
    then c divides (c*a gcd c*b) by Def3;
    then consider d such that
A3: c*a gcd c*b = c*d by INT_1:def 9;
    (c*a gcd c*b) divides c*a by Def3;
    then consider k such that
A4: c*a = (c*a gcd c*b)*k by INT_1:def 9;
    (c*a gcd c*b) divides c*b by Def3;
    then consider l such that
A5: c*b = (c*a gcd c*b)*l by INT_1:def 9;
A6: c*a = c*(d*k) by A3,A4;
A7: c*b = c*(d*l) by A3,A5;
A8: 0*a gcd 0*b = 0 by Th5
      .= abs 0 by ABSVALUE:7;
    c <>0 implies c*a gcd c*b = abs(c)
    proof
      assume
A9:   c <>0;
      then a = d*k by A6,XCMPLX_1:5;
      then
A10:  d divides a by INT_1:def 9;
      b = d*l by A7,A9,XCMPLX_1:5;
      then d divides b by INT_1:def 9;
      then d divides 1 by A1,A10,Def3;
      then c*a gcd c*b = c*1 or c*a gcd c*b = c*(-1) by A3,Th17;
      then c*a gcd c*b = c*1 or c*a gcd c*b = (-c)*1;
      then
A11:  abs((c*a gcd c*b)) = abs(c) by COMPLEX1:138;
      c*a gcd c*b >=0 by NAT_1:2;
      hence thesis by A11,ABSVALUE:def 1;
    end;
    hence thesis by A8;
  end;
  hence c*a gcd b*c = abs(c);
  thus thesis by A2;
end;

theorem Th40:
  c divides a*b & a,c are_relative_prime implies c divides b
proof
  assume
A1: c divides a*b & a,c are_relative_prime;
  then
A2: a*b gcd c*b = abs(b) by Th39;
  c divides c*b by Th12;
  then
A3: c divides (a*b gcd c*b) by A1,Def3;
  b<0 implies c divides b
  proof
    assume b<0;
    then c divides (-b) by A2,A3,ABSVALUE:def 1;
    hence thesis by Th14;
  end;
  hence thesis by A2,A3,ABSVALUE:def 1;
end;

theorem
  a,c are_relative_prime & b,c are_relative_prime implies
  a*b,c are_relative_prime
proof
  assume a,c are_relative_prime & b,c are_relative_prime;
  then
A1: (a gcd c) = 1 & (b gcd c) = 1 by Def4;
A2: (a*b gcd c) divides a*b & (a*b gcd c) divides c by Def3;
A3: ((a*b gcd c) gcd a) divides (a*b gcd c) & ((a*b gcd c) gcd a) divides
  a by Def3;
  then ((a*b gcd c) gcd a) divides c by A2,Lm2;
  then ((a*b gcd c) gcd a) divides 1 by A1,A3,Def3;
  then (a*b gcd c) gcd a = 1 or (a*b gcd c) gcd a = -1 by Th17;
  then a,(a*b gcd c) are_relative_prime by Def4,NAT_1:2;
  then (a*b gcd c) divides b by Th31,Th40;
  then (a*b gcd c) divides 1 by A1,A2,Def3;
  then a*b gcd c = 1 or a*b gcd c = -1 by Th17;
  hence thesis by Def4,NAT_1:2;
end;

