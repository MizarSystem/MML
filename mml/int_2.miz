  suppose
A4: j = 0;
    abs(0) = 0 by ABSVALUE:def 1;
    then abs(i) mod abs(0) = 0 & abs(i) div abs(0) = 0 by INT_1:75,def 8;
    hence thesis by A4,INT_1:75,def 8;
  end;
end;

