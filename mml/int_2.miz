reserve p,p1,q,l for natural number;

definition
  let p be natural number;
  attr p is prime means
  :Def5:
  p>1 &
  for n being natural number holds n divides p implies n = 1 or n = p;
end;

canceled;

theorem Th43:
  0 < b & a divides b implies a <= b
proof
  assume
A1: 0 < b;
  assume a divides b;
  then consider c such that
A2: b = a * c by INT_1:def 9;
  per cases;
  suppose a <= 0;
    hence a <= b by A1,XXREAL_0:2;
  end;
  suppose
A3: a > 0;
    then c > 0 by A1,A2,XREAL_1:133;
    then c >= 0+1 by INT_1:20;
    hence a <= b by A2,A3,XREAL_1:153;
  end;
end;

theorem Th44:
  2 is prime
proof
  thus 2>1;
  let n be natural number;
  assume
A1: n divides 2;
  then n<>0 by Th3;
  then n>0 by NAT_1:3;
  then
A2: n>=0+1 by NAT_1:13;
  then n-1>=1-1 by XREAL_1:11;
  then reconsider m = n-1 as Element of NAT by INT_1:16;
  m+1 = 1 or m>=1 by A2,NAT_1:8;
  then
A3: n+-1+1 = 1 or (n+-1)+1>=1+1 by XREAL_1:8;
  n<=2 by A1,Th43;
  hence thesis by A3,XXREAL_0:1;
end;

canceled;

theorem Th46:
  not 4 is prime
proof
  ex n st n divides 4 & n<>1 & n<>4
  proof
    take 2;
    4 = 2*2;
    hence thesis by INT_1:def 9;
  end;
  hence thesis by Def5;
end;

registration
  cluster prime (natural number);
  existence by Th44;
  cluster non zero non prime (natural number);
  existence by Th46;
end;

theorem
  p is prime & q is prime implies p,q are_relative_prime or p = q
proof
  assume
A1: p is prime & q is prime;
  assume not p,q are_relative_prime;
  then
A2: p gcd q<>1 by Def4;
  (p gcd q) divides p & (p gcd q) divides q by Def3;
  then p gcd q = p & p gcd q = q by A1,A2,Def5;
  hence thesis;
end;

theorem
  l>=2 implies ex p being Element of NAT st p is prime & p divides l
proof
  assume
A1: l>=2;
  defpred P[Nat] means ex p st p is prime & p divides $1;
A2: for k being Nat st k>=2 holds
  (for n being Nat st n>=2 holds n<k implies P[n]) implies P[k]
  proof
    let k be Nat;
    assume
A3: k>=2;
    then
A4: k+1-1>1+1-1 by NAT_1:13;
    assume
A5: for n being Nat st n>=2 holds n<k implies
    ex p st p is prime & p divides n;
    not k is prime implies
    ex p being Element of NAT st p is prime & p divides k
    proof
      assume not k is prime;
      then consider m being natural number such that
A6:   m divides k & m<>1 & m<>k by A4,Def5;
      m>=2 & m<k
      proof
        thus m>=2
        proof
          m<>0 by A6,Th3;
          then m>0 by NAT_1:3;
          then m>=0+1 by NAT_1:13;
          then m>1 by A6,REAL_1:def 5;
          then m>=1+1 by NAT_1:13;
          hence thesis;
        end;
        k>0 by A3,XXREAL_0:2;
        then m<=k by A6,Th43;
        hence thesis by A6,REAL_1:def 5;
      end;
      then consider p1 such that
A7:   p1 is prime & p1 divides m by A5;
      reconsider p1 as Element of NAT by ORDINAL1:def 13;
      take p1;
      thus thesis by A6,A7,Lm2;
    end;
    hence thesis;
  end;
  for k being Nat st k>=2 holds P[k] from NAT_1:sch 9(A2);
  then consider p such that
A8: p is prime & p divides l by A1;
  reconsider p as Element of NAT by ORDINAL1:def 13;
  take p;
  thus thesis by A8;
end;

