begin

definition
  let a be integer number;
  redefine func abs a -> Element of NAT;
  coherence
  proof
    per cases;
    suppose
A1:   a >= 0;
      then abs a = a by ABSVALUE:def 1;
      hence thesis by A1,INT_1:16;
    end;
    suppose
A2:   a < 0;
      then
A3:   abs a = -a by ABSVALUE:def 1;
      -a > 0 by A2,XREAL_1:60;
      hence thesis by A3,INT_1:16;
    end;
  end;
end;

reserve a,b,c for Integer;

theorem Th1:
  a divides b & a divides b + c implies a divides c
proof
  given u being Integer such that
A1: b = a * u;
  given t being Integer such that
A2: b + c = a * t;
  c = a*(t - u) by A1,A2;
  hence thesis by INT_1:def 9;
end;

theorem Th2: :: NAT_D:9
  a divides b implies a divides b * c
proof
  assume a divides b;
  then consider l being Integer such that
A1: b = a * l by INT_1:def 9;
  a * l * c = a * (l * c);
  hence thesis by A1,INT_1:def 9;
end;

theorem Th3:
  0 divides a iff a = 0
proof
  0 divides a implies a = 0
  proof
    assume 0 divides a;
    then ex b being Integer st a = 0*b by INT_1:def 9;
    hence thesis;
  end;
  hence thesis;
end;

Lm1: a divides -a & -a divides a
proof
  thus a divides -a
  proof
    -a = a*(-1);
    hence thesis by INT_1:def 9;
  end;
  a = (-a)*(-1);
  hence thesis by INT_1:def 9;
end;

Lm2: a divides b & b divides c implies a divides c
proof
  assume that
A1: a divides b and
A2: b divides c;
  consider k being Integer such that
A3: b = a*k by A1,INT_1:def 9;
  consider l being Integer such that
A4: c = b*l by A2,INT_1:def 9;
  c = a*(k*l) by A3,A4;
  hence thesis by INT_1:def 9;
end;

Lm3: a divides b iff a divides -b
proof
A1: a divides b implies a divides -b
  proof
    assume
A2: a divides b;
    b divides -b by Lm1;
    hence thesis by A2,Lm2;
  end;
  a divides -b implies a divides b
  proof
    assume
A3: a divides -b;
    -b divides b by Lm1;
    hence thesis by A3,Lm2;
  end;
  hence thesis by A1;
end;

Lm4: a divides b iff -a divides b
proof
A1: a divides b implies -a divides b
  proof
    assume
A2: a divides b;
    -a divides a by Lm1;
    hence thesis by A2,Lm2;
  end;
  -a divides b implies a divides b
  proof
    assume
A3: -a divides b;
    a divides -a by Lm1;
    hence thesis by A3,Lm2;
  end;
  hence thesis by A1;
end;

Lm5: a divides 0 & 1 divides a & -1 divides a
proof
  thus a divides 0
  proof
    0 = a*0;
    hence thesis by INT_1:def 9;
  end;
  thus 1 divides a
  proof
    a = 1*a;
    hence thesis by INT_1:def 9;
  end;
  a = (-1)*(-a);
  hence thesis by INT_1:def 9;
end;

Lm6: a divides b & a divides c implies a divides b mod c
proof
  assume
A1: a divides b & a divides c;
A2: now
    assume c = 0;
    then b mod c = 0 by INT_1:def 8;
    hence thesis by Lm5;
  end;
  now
    assume c <> 0;
    then
A3: b = c * (b div c) + (b mod c) by INT_1:86;
    a divides c * (b div c) by A1,Th2;
    hence thesis by A1,A3,Th1;
  end;
  hence thesis by A2;
end;

reserve i,j,k,l for Nat;

Lm7: k divides l iff ex t being Nat st l = k * t
proof
  hereby
    assume
A1: k divides l;
    thus ex t being Nat st l = k * t
    proof
      consider t being Integer such that
A2:   l = k * t by A1,INT_1:def 9;
A3:   k >= 0 by NAT_1:2;
      per cases by NAT_1:3;
      suppose 0 < l;
        then 0 <= t by A2,A3,XREAL_1:133;
        then reconsider t as Element of NAT by INT_1:16;
        take t;
        thus l = k * t by A2;
      end;
      suppose
A4:     l = 0;
        take 0;
        thus l = k*0 by A4;
      end;
    end;
  end;
  assume ex t being Nat st l = k * t;
  hence thesis by INT_1:def 9;
end;

Lm8: i divides j & j divides i implies i = j
proof
  assume i divides j;
  then consider a such that
A1: j = i*a by INT_1:def 9;
  assume j divides i;
  then consider b such that
A2: i = j*b by INT_1:def 9;
  i<>0 implies i = j
  proof
    assume
A3: i<>0;
    1*i = i*(a*b) by A1,A2;
    then a*b = 1 by A3,XCMPLX_1:5;
    then
A4: i = j*1 or i = j*(-1) by A2,INT_1:22;
    i >= 0 by NAT_1:2;
    hence thesis by A3,A4,XXREAL_0:1;
  end;
  hence thesis by A1;
end;

definition
  let a,b be Integer;
  canceled;
  func a lcm b -> Nat means    ::abs(a) lcm abs(b);
  :Def2:
  a divides it & b divides it &
  for m being Integer st a divides m & b divides m holds it divides m;
  existence
  proof
    per cases;
    suppose
A1:   a = 0 or b = 0;
      take 0;
      thus a divides 0 & b divides 0 by Lm5;
      thus thesis by A1;
    end;
    suppose
A2:   a <> 0 & b <> 0;
      defpred P[Nat] means a divides $1 & b divides $1 & $1 <> 0;
      a*b in INT by INT_1:def 2;
      then consider k being Element of NAT such that
A3:   a*b = k or a*b = -k by INT_1:def 1;
A4:   k <> 0 by A2,A3,XCMPLX_1:6;
      a divides a*b & b divides a*b by INT_1:def 9;
      then a divides k & b divides k by A3,Lm3;
      then
A5:   ex k being Nat st P[k] by A4;
      consider k being Nat such that
A6:   P[k] and
A7:   for n being Nat st P[n] holds k <= n from NAT_1:sch 5(A5);
A8:   k > 0 by A6,NAT_1:3;
      take k;
      thus a divides k & b divides k by A6;
      let m be Integer;
      m in INT by INT_1:def 2;
      then consider n being Element of NAT such that
A9:   m = n or m = - n by INT_1:def 1;
      assume
A10:  a divides m & b divides m;
      assume
A11:  not k divides m;
      n mod k in NAT by A8,INT_1:16,84;
      then reconsider i = n mod k as Nat by ORDINAL1:def 13;
      a divides n & b divides n by A9,A10,Lm3;
      then
A12:  a divides n mod k & b divides n mod k by A6,Lm6;
      now
        assume i = 0;
        then n - (n div k) * k = 0 by A6,INT_1:def 8;
        then k divides n by INT_1:def 9;
        hence contradiction by A9,A11,Lm3;
      end;
      then k divides n by A7,A8,A12,INT_1:85;
      hence contradiction by A9,A11,Lm3;
    end;
  end;
  uniqueness
  proof
    let IT1,IT2 be Nat such that
A13: a divides IT1 & b divides IT1 and
A14: for m being Integer st a divides m & b divides m holds IT1 divides m and
A15: a divides IT2 & b divides IT2 and
A16: for m being Integer st a divides m & b divides m holds IT2 divides m;
    IT1 divides IT2 & IT2 divides IT1 by A13,A14,A15,A16;
    hence IT1 = IT2 by Lm8;
  end;
  commutativity;
end;

notation
  let a,b be Integer;
  synonym a lcm' b for a lcm b;
end;

theorem Th4:
  a = 0 or b = 0 iff a lcm b = 0
proof
A1: a = 0 implies a lcm b = 0
  proof
    assume a = 0;
    then 0 divides (a lcm b) by Def2;
    hence thesis by Th3;
  end;
A2: b = 0 implies (a lcm b) = 0
  proof
    assume b = 0;
    then 0 divides (a lcm b) by Def2;
    hence thesis by Th3;
  end;
  (a lcm b) = 0 implies a = 0 or b = 0
  proof
    assume
A3: a lcm b = 0;
A4: a divides a implies a divides a*b by Th2;
    b divides b implies b divides b*a by Th2;
    then 0 divides a*b by A3,A4,Def2;
    then a*b = 0 by Th3;
    hence thesis by XCMPLX_1:6;
  end;
  hence thesis by A1,A2;
end;

Lm9: 0 < j & i divides j implies i <= j
proof
  assume
A1: 0 < j & i divides j;
  then consider l such that
A2: j = i * l by Lm7;
  l <> 0 by A1,A2;
  then consider k such that
A3: l = k + 1 by NAT_1:6;
  i * (k + 1) = i + i * k;
  hence i <= j by A2,A3,NAT_1:11;
end;

definition
  let a,b be Integer;
  func a gcd b -> Nat means ::equals    abs(a) hcf abs(b);
  :Def3:
  it divides a & it divides b &
  for m being Integer st m divides a & m divides b holds m divides it;
  existence
  proof
    per cases;
    suppose
A1:   a = 0;
      b in INT by INT_1:def 2;
      then consider k being Element of NAT such that
A2:   b = k or b = -k by INT_1:def 1;
      take k;
      thus k divides a & k divides b by A1,A2,Lm4,Lm5;
      let m be Integer;
      assume m divides a & m divides b;
      hence thesis by A2,Lm3;
    end;
    suppose
A3:   b = 0;
      a in INT by INT_1:def 2;
      then consider k being Element of NAT such that
A4:   a = k or a = -k by INT_1:def 1;
      take k;
      thus k divides a & k divides b by A3,A4,Lm4,Lm5;
      let m be Integer;
      assume m divides a & m divides b;
      hence thesis by A4,Lm3;
    end;
    suppose
A5:   a <> 0 & b <> 0;
      defpred P[Nat] means $1 divides a & $1 divides b & $1 <> 0;
      a*b in INT by INT_1:def 2;
      then consider k being Element of NAT such that
A6:   a*b = k or a*b = -k by INT_1:def 1;
      k <> 0 by A5,A6,XCMPLX_1:6;
      then
A7:   k > 0 by NAT_1:3;
A8:   a divides a*b & b divides a*b by INT_1:def 9;
      1 divides a & 1 divides b by Lm5;
      then
A9:   ex k being Nat st P[k];
A10:  for i being Nat st P[i] holds i <= k
      proof
        let i be Nat;
        assume P[i];
        then i divides a*b by A8,Lm2;
        then i divides k by A6,Lm3;
        hence thesis by A7,Lm9;
      end;
      consider k being Nat such that
A11:  P[k] and
A12:  for n being Nat st P[n] holds n <= k from NAT_1:sch 6(A10,A9);
      take k;
      thus k divides a & k divides b by A11;
      let m be Integer;
      m in INT by INT_1:def 2;
      then consider n being Element of NAT such that
A13:  m = n or m = - n by INT_1:def 1;
      assume
A14:  m divides a & m divides b;
      assume
A15:  not m divides k;
      set i = n lcm k;
      n divides a & n divides b by A13,A14,Lm4;
      then
A16:  n lcm k divides a & n lcm k divides b by A11,Def2;
A17:  now
        assume i = 0;
        then n = 0 or k = 0 by Th4;
        hence contradiction by A5,A11,A13,A14,Th3;
      end;
      then
A18:  k >= n lcm k by A12,A16;
A19:  0 < i by A17,NAT_1:3;
      k divides i by Def2;
      then k <= i by A19,Lm9;
      then k = i by A18,XXREAL_0:1;
      then n divides k by Def2;
      hence contradiction by A13,A15,Lm4;
    end;
  end;
  uniqueness
  proof
    let IT1,IT2 be Nat such that
A20: IT1 divides a & IT1 divides b and
A21: for m being Integer st m divides a & m divides b holds m divides IT1 and
A22: IT2 divides a & IT2 divides b and
A23: for m being Integer st m divides a & m divides b holds m divides IT2;
    IT1 divides IT2 & IT2 divides IT1 by A20,A21,A22,A23;
    hence IT1 = IT2 by Lm8;
  end;
  commutativity;
end;

theorem Th5:
  a = 0 & b = 0 iff a gcd b = 0
proof
  0 divides 0 gcd 0 by Def3;
  hence a = 0 & b = 0 implies a gcd b = 0 by Th3;
  assume a gcd b = 0;
  then 0 divides a & 0 divides b by Def3;
  hence thesis by Th3;
end;

