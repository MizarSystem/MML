theorem Th68:
  for i,j being natural number holds
  j > 0 & i mod j = 0 implies i div j = i / j
proof
  let i,j be natural number;
  assume
A1: j > 0;
  assume i mod j = 0;
  then consider t being Nat such that
A2: i = j * t + 0 and
A3: 0 < j by A1,NAT_D:def 2;
  thus i div j = t by A2,A3,NAT_D:def 1
    .= i / j by A1,A2,XCMPLX_1:90;
end;

theorem
  for i,n being natural number holds n > 0 implies i |^ n div i = i |^ n / i
proof
  let i,n be natural number;
  assume
A1: n > 0;
  per cases;
  suppose
A2: i > 0;
    i |^ n mod i = 0 by A1,Th37;
    hence i |^ n div i = i |^ n / i by A2,Th68;
  end;
  suppose
A3: i = 0;
    n >= 0+1 by A1,NAT_1:13;
    then i |^ n = 0 by A3,NEWTON:16;
    hence i |^ n div i = i |^ n / i by A3,NAT_D:def 1;
  end;
end;

reserve r for real number;

theorem Th70:
  for n being natural number holds 0 < n & 1 < r implies 1 < r|^n
proof
  let n be natural number;
  assume that
A1: 0 < n and
A2: r > 1;
  defpred P[natural number] means 0 < $1 implies 1 < r|^$1;
A3: P[0];
A4: for k being natural number holds P[k] implies P[k+1]
  proof
    let k be natural number;
    assume that
A5: P[k] and 0 < k+1;
    per cases;
    suppose
A6:   k > 0;
A7:   r|^(k+1) = (r|^k)*r by NEWTON:11;
      1 * r <= (r|^k)*r by A2,A5,A6,XREAL_1:66;
      hence thesis by A2,A7,XXREAL_0:2;
    end;
    suppose k = 0;
      hence thesis by A2,NEWTON:10;
    end;
  end;
  for k being natural number holds P[k] from NAT_1:sch 2(A3,A4);
  hence thesis by A1;
end;

theorem
  for m,n being natural number holds r > 1 & m > n implies r|^m > r|^n
proof
  let m,n be natural number;
  assume that
A1: r > 1 and
A2: m > n;
  reconsider m,n as Element of NAT by ORDINAL1:def 13;
  (m-'n)+n = m by A2,BINARITH:53;
  then
A3: r|^m = r|^(m-'n)*r|^n by NEWTON:13;
  m-'n <> 0 by A2,BINARITH:54;
  then m-'n > 0;
  then
A4: r|^(m-'n) > 1 by A1,Th70;
  r|^n > 0 by A1,NEWTON:102;
  hence thesis by A3,A4,REAL_2:144;
end;

