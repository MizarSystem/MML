theorem
  5 is prime
proof
  (3 |^ ((Fermat(1)-'1) div 2)),(-1) are_congruent_mod Fermat(1) by Lm26;
  hence thesis by Th56,Th63;
end;

theorem
  17 is prime
proof
A1: 17 -'1 = 17 - 1 by BINARITH:def 3
    .= 16 + 0;
A2: 2 to_power 4 = 16 by Lm9;
A3: 4 -'1 = 4 - 1 by BINARITH:def 3
    .= 3 + 0;
  2 to_power 1 = 2 |^ 1
    .= 2 by NEWTON:10;
  then 16 div 2 = (2 to_power (4-'1)) by A2,NAT_2:18
    .= 8 by A3,Lm8;
  then (Fermat(2) -'1) div 2 = 16*0 + 8 by A1,Th57;
  then Fermat(2) divides (3 |^ ((Fermat(2)-'1) div 2)) + 1 by Lm27;
  then Fermat(2) divides ((3 |^ ((Fermat(2)-'1) div 2 )) - (-1));
  then (3 |^ ((Fermat(2)-'1) div 2)),
  (-1) are_congruent_mod Fermat(2) by INT_2:19;
  hence thesis by Th57,Th63;
end;

theorem
  257 is prime
proof
A1: 257 -'1 = 257 - 1 by BINARITH:def 3
    .= 256 + 0;
A2: 2 to_power 8 = 2 |^ (4+4)
    .= 16*16 by Lm9,NEWTON:13
    .=256;
A3: 8 -'1 = 8 - 1 by BINARITH:def 3
    .= 7 + 0;
  2 to_power 1 = 2 |^ 1
    .= 2 by NEWTON:10;
  then 256 div 2 = (2 to_power (8-'1)) by A2,NAT_2:18
    .= 2 |^ (4+3) by A3
    .= 16*8 by Lm8,Lm9,NEWTON:13
    .= 128;
  then Fermat(3) divides ((3 |^ ((Fermat(3)-'1) div 2 )) - (-1))
  by A1,Lm52,Th58;
  then (3 |^ ((Fermat(3)-'1) div 2)),
  (-1) are_congruent_mod Fermat(3) by INT_2:19;
  hence thesis by Th58,Th63;
end;

theorem
  256*256+1 is prime
proof
A1: 256*256 + 1 -'1 = 256*256 + 1 - 1 by BINARITH:def 3
    .= 256*256 + 0;
A2: 2 to_power 16 = 2 |^ (8+8)
    .= 256*256 by Lm10,NEWTON:13;
A3: 16 -'1 = 16 - 1 by BINARITH:def 3
    .= 15 + 0;
  2 to_power 1 = 2 |^ 1
    .= 2 by NEWTON:10;
  then 256*256 div 2 = (2 to_power (16-'1)) by A2,NAT_2:18
    .= 2 |^ (8+7) by A3
    .= 256*2 |^ (4+3) by Lm10,NEWTON:13
    .= 256*(16*8) by Lm8,Lm9,NEWTON:13
    .= 256*128;
  then Fermat(4) divides
  ((3 |^ ((Fermat(4)-'1) div 2 )) - (-1)) by A1,Lm53,Th59;
  then (3 |^ ((Fermat(4)-'1) div 2)),
  (-1) are_congruent_mod Fermat(4) by INT_2:19;
  hence thesis by Th59,Th63;
end;

