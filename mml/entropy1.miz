theorem Th1:
  k <> 0 & i < l & l <= j & k divides l implies
    i div k < j div k
  proof assume
A1: k <> 0 & i < l & l <= j & k divides l;
then A2: l mod k = 0 by PEPIN:6;
A3: k > 0 by A1;
    then l = k * (l div k) + (l mod k) by NAT_D:2
     .= k * (l div k) by A2;
    then k / k * (l div k) = l / k by XCMPLX_1:75;
then A4: 1 * (l div k) = l / k by A1,XCMPLX_1:60;
     i = k * (i div k) + (i mod k) by A3,NAT_D:2;
    then k / k * (i div k) = (i - (i mod k)) / k by XCMPLX_1:75;
then A5: 1 * (i div k) = (i - (i mod k)) / k by A1,XCMPLX_1:60;
     i + (i mod k) >= i by NAT_1:11;
    then i - (i mod k) <= (i + (i mod k)) - (i mod k) by XREAL_1:11;
    then i - (i mod k) < l by A1,XXREAL_0:2;
then A6: (i - (i mod k)) / k < l / k by A3,REAL_1:73;
     l div k <= j div k by A1,NAT_2:26;
    hence thesis by A4,A5,A6,XXREAL_0:2;
  end;

theorem Th2:
  r > 0 implies ((log_ number_e).r <= r - 1) &
    (r = 1 iff (log_ number_e).r = r - 1) &
    (r <> 1 iff (log_ number_e).r < r - 1)
  proof
    set Z = right_open_halfline(0);
    defpred P[set] means $1 in REAL;
    deffunc G(Real) = $1-1;
    consider f1 being PartFunc of REAL,REAL such that
A1: (for r holds r in dom f1 iff P[r]) &
    for r st r in dom f1 holds f1.r=G(r) from SEQ_1:sch 3;
     dom f1 is Subset of REAL by RELSET_1:12;
then A2: dom f1 = REAL by A1,FDIFF_1:1;
    defpred P[set] means $1 in Z;
    deffunc G(Real) = (log_ number_e).$1;
    reconsider f2 = log_ number_e as PartFunc of REAL, REAL;
A3: dom f2 = Z by TAYLOR_1:def 2;
    defpred P[set] means $1 in Z;
    deffunc F(Real) = ($1 - 1) - (log_ number_e).$1;
    set f = f1 - f2;
A4: dom f = Z /\ REAL by A2,A3,SEQ_1:def 4
         .= Z by XBOOLE_1:28;
A5: for r st r in Z holds f1.r = 1*r + (-1)
    proof let r such that r in Z;
       f1.r = r - 1 by A1,A2;
      hence thesis;
    end;
A6: f1 is_differentiable_on Z & for r st r in Z holds diff(f1,r) = 1
    proof
A7:   f1 is_differentiable_on Z & for r st r in Z holds (f1`|Z).r = 1
        by A2,A5,FDIFF_1:31;
       now let r such that
A8:     r in Z;
        thus diff(f1,r) = (f1`|Z).r by A7,A8,FDIFF_1:def 8
          .= 1 by A2,A5,A8,FDIFF_1:31;
      end;
      hence thesis by A2,A5,FDIFF_1:31;
    end;
A9: f is_differentiable_on Z & for r st r in Z holds diff(f,r)=1 - 1/r
    proof
      thus
A10:   f is_differentiable_on Z
        by A4,A6,FDIFF_1:27,TAYLOR_1:18,def 3;
      hereby let r such that
A11:     r in Z;
     ((f1-f2)`|Z).r = diff(f1,r) - diff(f2,r)
          by A4,A6,A11,FDIFF_1:27,TAYLOR_1:18,def 3
          .= 1 - diff(f2,r) by A6,A11
          .= 1 - 1/r by A11,TAYLOR_1:18,def 3;
        hence diff(f,r) = 1 - 1/r by A10,A11,FDIFF_1:def 8;
      end;
    end;
     1 in {g where g is Real: 0 < g};
then A12: 1 in Z by LIMFUNC1:152;
A13: number_e > 0 & number_e <> 1 by TAYLOR_1:11;
A14: for x be Real st x > 0 holds f.x = (x - 1) - (log_ number_e).x
    proof let x be Real such that
A15:   x > 0;
       x in {g where g is Real : 0<g} by A15;
then A16:   x in dom f by A4,LIMFUNC1:152;
then A17:   f.x = f1.x - f2.x by SEQ_1:def 4;
       x in dom f1 /\ dom f2 by A16,SEQ_1:def 4;
      then x in dom f1 & x in dom f2 by XBOOLE_0:def 3;
      hence thesis by A1,A17;
    end;
then A18: f.1 = (1 - 1) - (log_ number_e).1 .= - (log_ number_e).1
      .= - log(number_e,1) by A12,TAYLOR_1:def 2
      .= - 0 by A13,POWER:59 .= 0;
    set Z1 = right_open_halfline(1);
A19: Z1 c= Z by LIMFUNC1:8;
then A20: f is_differentiable_on Z1 by A9,FDIFF_1:34;
A21: for r st r in Z1 holds diff(f,r) > 0
    proof let r such that
A22:   r in Z1;
       r in {g where g is Real: 1 < g} by A22,LIMFUNC1:152;
      then ex g1 being Real st g1 = r & 1 < g1;
then A23:   1/r < 1 by SQUARE_1:2;
       diff(f,r) = 1 - 1/r by A9,A19,A22;
      hence thesis by A23,XREAL_1:52;
    end;
    set Z2 = ].0,1.[;
A24: Z2 c= Z by LIMFUNC1:11;
then A25: f is_differentiable_on Z2 by A9,FDIFF_1:34;
A26: for r st r in Z2 holds diff(f,r) < 0
    proof let r; assume
A27:   r in Z2;
      then ex g1 being Real st g1 = r & 0 < g1 & g1 < 1;
then A28:   1 < 1/r by XREAL_1:189;
       diff(f,r) = 1 - 1/r by A9,A24,A27;
      hence thesis by A28,XREAL_1:51;
    end;
A29: f is_continuous_on Z & f is_continuous_on Z1 & f is_continuous_on Z2
      by A9,A20,A25,FDIFF_1:33;
A30: for r st r in Z1 holds f.r > 0
    proof
      assume not for r st r in Z1 holds f.r > 0;
      then consider r1 such that
A31:   r1 in Z1 & f.r1 <= 0;
       r1 in {g where g is Real: 1 < g} by A31,LIMFUNC1:152;
then A32:   ex g1 being Real st g1 = r1 & 1 < g1;
       [.1,r1.] c= Z by LIMFUNC1:21;
then A33:   f is_continuous_on [.1,r1.] by A29,FCONT_1:17;
       ].1,r1.[ c= Z by LIMFUNC1:20;
then A34:   f is_differentiable_on ].1,r1.[ by A9,FDIFF_1:34;
      per cases by A31;
      suppose f.r1 = 0;
        then consider r2 being Real such that
A35:     r2 in ].1,r1.[ & diff(f,r2)=0 by A18,A32,A33,A34,ROLLE:1;
         ex g1 being Real st g1 = r2 & 1 < g1 & g1 < r1 by A35;
        then r2 in {g where g is Real : 1<g};
        then r2 in Z1 by LIMFUNC1:152;
        hence contradiction by A21,A35;
      end;
      suppose
A36:     f.r1 < 0;
        consider r3 being Real such that
A37:     r3 in ].1,r1.[ & diff(f,r3)=(f.r1-f.1)/(r1-1) by A32,A33,A34,ROLLE:3;
         ex g1 being Real st g1 = r3 & 1 < g1 & g1 < r1 by A37;
        then r3 in {g where g is Real : 1<g};
then A38:     r3 in Z1 by LIMFUNC1:152;
         r1 -1 > 0 by A32,XREAL_1:52;
        then diff(f,r3) < 0 by A18,A36,A37,REAL_2:128;
        hence contradiction by A21,A38;
      end;
    end;
A39: for r st r in Z2 holds f.r > 0
    proof
      assume not for r st r in Z2 holds f.r > 0;
      then consider r1 such that
A40:   r1 in Z2 & f.r1 <= 0;
A41:   ex g1 being Real st g1 = r1 & 0<g1 & g1<1 by A40;
      then [.r1,1.] c= Z by LIMFUNC1:21;
then A42:   f is_continuous_on [.r1,1.] by A29,FCONT_1:17;
       ].r1,1.[ c= Z by A41,LIMFUNC1:20;
then A43:   f is_differentiable_on ].r1,1.[ by A9,FDIFF_1:34;
      per cases by A40;
      suppose f.r1 = 0;
        then consider r2 being Real such that
A44:     r2 in ].r1,1.[ & diff(f,r2)=0 by A18,A41,A42,A43,ROLLE:1;
         ex g1 being Real st g1 = r2 & r1 < g1 & g1 < 1 by A44;
        then r2 in {g where g is Real : 0<g & g<1 } by A41;
        hence contradiction by A26,A44;
      end;
      suppose
A45:     f.r1 < 0;
        consider r3 being Real such that
A46:     r3 in ].r1,1.[ & diff(f,r3)=(f.1-f.r1)/(1-r1) by A41,A42,A43,ROLLE:3;
         ex g1 being Real st g1 = r3 & r1 < g1 & g1 < 1 by A46;
then A47:     r3 in Z2 by A41;
A48:     f.1 - f.r1 > 0 by A18,A45,XREAL_1:52;
         1 -r1 > 0 by A41,XREAL_1:52;
        then diff(f,r3) > 0 by A46,A48,REAL_2:127;
        hence contradiction by A26,A47;
      end;
    end;
A49: for r st r > 0 & r < 1 holds f.r > 0
    proof let r such that
A50:   r > 0 & r < 1;
       r in {g where g is Real : 0<g & g<1 } by A50;
      hence thesis by A39;
    end;
A51: for r st r > 1 holds f.r > 0
    proof let r such that
A52:   r > 1;
       r in {g where g is Real : 1<g } by A52;
      then r in Z1 by LIMFUNC1:152;
      hence thesis by A30;
    end;
A53: for r st r > 0 holds f.r >= 0
    proof let r such that
A54:   r > 0;
      per cases by XXREAL_0:1;
      suppose r < 1;
        hence thesis by A49,A54;
      end;
      suppose r = 1;
        hence thesis by A18;
      end;
      suppose r > 1;
        hence thesis by A51;
      end;
    end;
    assume
A55: r > 0;
    then f.r >= 0 by A53;
    then (r - 1) - (log_ number_e).r >= 0 by A14,A55;
    then (r - 1) - 0 >= (log_ number_e).r by XREAL_1:13;
    hence (log_ number_e).r <= r - 1;
    thus
A56: r = 1 iff (log_ number_e).r = r - 1
    proof
      hereby assume r = 1;
        then (r - 1) - (log_ number_e).r = 0 by A14,A18;
        hence (log_ number_e).r = r - 1;
      end;
      assume (log_ number_e).r = r - 1;
then A57:   (r - 1) - (log_ number_e).r = 0;
      assume
A58:   r <> 1;
      per cases by A58,XXREAL_0:1;
      suppose r < 1;
        then f.r > 0 by A49,A55;
        hence contradiction by A14,A55,A57;
      end;
      suppose
A59:     r > 1;
        then f.r > 0 by A51;
        hence contradiction by A14,A57,A59;
      end;
    end;
    thus r <> 1 iff (log_ number_e).r < r - 1
    proof
      hereby assume r <> 1;
then A60:     r-1>0 or 1-r>0 by XREAL_1:57;
        per cases by A60,REAL_2:106;
        suppose r < 1;
          then f.r > 0 by A49,A55;
          then (r - 1) - (log_ number_e).r > 0 by A14,A55;
          hence (log_ number_e).r < r - 1 by REAL_2:106;
        end;
        suppose
A61:       r > 1;
          then f.r > 0 by A51;
          then (r - 1) - (log_ number_e).r > 0 by A14,A61;
          hence (log_ number_e).r < r - 1 by REAL_2:106;
        end;
      end;
      assume
A62:   (log_ number_e).r < r - 1;
      assume r = 1;
      hence contradiction by A56,A62;
    end;
  end;

theorem Th3:
  r > 0 implies (log(number_e,r) <= r - 1) &
    (r = 1 iff log(number_e,r) = r - 1) &
    (r <> 1 iff log(number_e,r) < r - 1)
  proof assume
A1: r>0;
    then r in {g where g is Real : 0<g};
    then r in right_open_halfline(0) by LIMFUNC1:152;
    then log(number_e,r) = (log_ number_e).r by TAYLOR_1:def 2;
    hence thesis by A1,Th2;
  end;

theorem Th4:
  a>1 & b>1 implies log(a,b) > 0
  proof assume
A1: a>1 & b>1;
then A2: a to_power log(a,b) > 1 by POWER:def 3;
    assume
A3: log(a,b) <=0;
    per cases by A3;
    suppose log(a,b) =0;
     hence contradiction by A2,POWER:29;
    end;
    suppose log(a,b) <0;
     hence contradiction by A1,A2,POWER:41;
    end;
  end;

theorem Th5:
  a>0 & a<>1 & b>0 implies -log(a,b) = log(a,1/b)
  proof assume
A1: a>0 & a<>1 & b>0;
    thus -log(a,b) = 0 - log(a,b) .= log(a,1) - log(a,b) by A1,POWER:59
      .= log(a,1/b) by A1,POWER:62;
  end;

theorem Th6:
  a>0 & a<>1 & b>=0 & c>=0 implies b*c*log(a,b*c) = b*c*log(a,b)+b*c*log(a,c)
  proof assume
A1: a>0 & a<>1 & b>=0 & c>=0;
    per cases by A1;
    suppose b>0 & c = 0;
      hence thesis;
    end;
    suppose b=0 & c = 0;
      hence thesis;
    end;
    suppose b=0 & c > 0;
      hence thesis;
    end;
    suppose b>0 & c > 0;
      hence b*c*log(a,b*c) = b*c*(log(a,b) + log(a,c)) by A1,POWER:61
        .= b*c*log(a,b)+b*c*log(a,c);
    end;
  end;

theorem Th7:
  for q,q1,q2 being FinSequence of REAL st len q1 = len q & len q1 = len q2 &
    (for k st k in dom q1 holds q.k = q1.k + q2.k) holds
      Sum q = Sum q1 + Sum q2
  proof let q,q1,q2 be FinSequence of REAL such that
A1: len q1 = len q & len q1 = len q2 &
    for k st k in dom q1 holds q.k = q1.k + q2.k;
     for k st k in dom q1 holds q.k = q1/.k + q2/.k
    proof let k such that
A2:  k in dom q1;
A3:  k in dom q2 by A1,A2,FINSEQ_3:31;
     thus q.k = q1.k + q2.k by A1,A2
       .= q1/.k + q2.k by A2,PARTFUN1:def 8
       .= q1/.k + q2/.k by A3,PARTFUN1:def 8;
    end;
    hence thesis by A1,INTEGRA1:23;
  end;

theorem Th8:
  for q,q1,q2 being FinSequence of REAL st len q1 = len q & len q1 = len q2 &
    (for k st k in dom q1 holds q.k = q1.k - q2.k) holds
      Sum q = Sum q1 - Sum q2
  proof let q,q1,q2 be FinSequence of REAL such that
A1: len q1 = len q & len q1 = len q2 &
    for k st k in dom q1 holds q.k = q1.k - q2.k;
     for k st k in dom q1 holds q.k = q1/.k - q2/.k
    proof let k such that
A2:   k in dom q1;
A3:   k in dom q2 by A1,A2,FINSEQ_3:31;
     thus q.k = q1.k - q2.k by A1,A2
       .= q1/.k - q2.k by A2,PARTFUN1:def 8
       .= q1/.k - q2/.k by A3,PARTFUN1:def 8;
    end;
    hence thesis by A1,INTEGRA1:24;
  end;

theorem Th9:
  len p >= 1 implies ex q st len q = len p & q.1 = p.1 &
    (for k st 0 <> k & k < len p holds q.(k+1) = q.k + p.(k+1)) &
    Sum p = q.(len p)
  proof assume
A1: len p >= 1;
    then consider r be Real_Sequence such that
A2: r.1 = p.1 &
    (for n st 0 <> n & n < len p holds
      r.(n+1) = r.n + p.(n+1)) & Sum p = r.(len p) by PROB_3:68;
    deffunc F(Nat) = r.$1;
    consider q being FinSequence such that
A3: len q = len p & for k be Nat st k in Seg len p holds q.k = F(k)
      from FINSEQ_1:sch 2;
A4: 1 in Seg len p by A1,FINSEQ_1:3;
     rng q c= REAL
    proof let x such that
A5:   x in rng q;
      consider j being Nat such that
A6:   j in dom q & q.j = x by A5,FINSEQ_2:11;
       j in Seg len p by A3,A6,FINSEQ_1:def 3;
      then q.j = r.j by A3;
      hence x in REAL by A6;
    end;
    then reconsider q as FinSequence of REAL by FINSEQ_1:def 4;
A7: now let k such that
A8:   0 <> k & k < len p;
       k >= 1 & k <= len p &
      k+1 >= 1 & k+1 <= len p by A8,NAT_1:13,14;
then A9:   k in Seg len p & k+1 in Seg len p by FINSEQ_1:3;
      hence q.(k+1) = r.(k+1) by A3 .= r.k + p.(k+1) by A2,A8
        .= q.k + p.(k+1) by A3,A9;
    end;
A10: len p in Seg len p by A1,FINSEQ_1:5;
    take q;
    thus thesis by A2,A3,A4,A7,A10;
  end;

notation let p;
  synonym p is nonnegative for p is nonnegative-yielding;
end;

definition let p;
  redefine attr p is nonnegative means :Def1:
    for i st i in dom p holds p.i >= 0;
  compatibility
  proof
    hereby assume
A1:   p is nonnegative;
      let i such that
A2:   i in dom p;
       p.i in rng p by A2,FUNCT_1:12;
      hence p.i >= 0 by A1,PARTFUN3:def 4;
    end;
    assume
A3: for i st i in dom p holds p.i >= 0;
    let r be real number;
    assume r in rng p;
    then consider j being Nat such that
A4: j in dom p & r = p.j by FINSEQ_2:11;
    thus thesis by A3,A4;
  end;
end;

registration
  cluster nonnegative FinSequence of REAL;
  existence
  proof
A1: <*1*> is nonnegative
    proof
      set p=<*1*>;
       for i st i in dom p holds p.i >= 0
      proof let i such that
A2:     i in dom p;
         i in Seg 1 by A2,FINSEQ_1:def 8;
        then i >= 1 & i <= 1 by FINSEQ_1:3;
        then i = 1 by XXREAL_0:1;
        hence thesis by FINSEQ_1:57;
      end;
      hence thesis by Def1;
    end;
    take <*1*>;
    thus thesis by A1;
  end;
end;

theorem Th10:
  p is nonnegative & r>=0 implies r*p is nonnegative
  proof assume
A1: p is nonnegative & r>=0;
     now let k such that
A2:   k in dom (r*p);
       k in dom p by A2,SEQ_1:def 6;
then A3:   p.k >= 0 by A1,Def1;
       (r*p).k = r*(p.k) by RVSUM_1:66;
      hence (r*p).k >= 0 by A1,A3,XREAL_1:129;
    end;
    hence thesis by Def1;
  end;

definition let p,k;
  pred p has_onlyone_value_in k means :Def2:
    k in dom p & for i st i in dom p & i<>k holds p.i=0;
end;

theorem
   p has_onlyone_value_in k & i<>k implies p.i=0
  proof assume
A1: p has_onlyone_value_in k & i<>k;
    per cases;
    suppose not i in dom p;
      hence thesis by FUNCT_1:def 4;
    end;
    suppose i in dom p;
      hence thesis by A1,Def2;
    end;
  end;

theorem Th12:
  len p = len q & p has_onlyone_value_in k implies
    mlt(p,q) has_onlyone_value_in k & mlt(p,q).k = p.k * q.k
  proof assume
A1: len p = len q & p has_onlyone_value_in k;
    then len mlt(p,q) = len p by MATRPROB:30;
then A2: dom mlt(p,q) = dom p by FINSEQ_3:31;
then A3: k in dom mlt(p,q) by A1,Def2;
     now let i such that
A4:   i in dom mlt(p,q) & i <> k;
      thus (mlt(p,q)).i = p.i * q.i by A4,RVSUM_1:86
        .= 0*q.i by A1,A2,A4,Def2
        .= 0;
    end;
    hence thesis by A3,Def2,RVSUM_1:86;
  end;

theorem Th13:
  p has_onlyone_value_in k implies Sum p = p.k
  proof
    assume
A1: k in dom p & for i st i in dom p & i<>k holds p.i=0;
    reconsider a=p.k as Element of REAL;
A2: 1 <= k & k <= len p by A1,FINSEQ_3:27;
    reconsider p1=p|Seg k as FinSequence of REAL by FINSEQ_1:23;
     p1 c= p by TREES_1:def 1;
    then consider p2 being FinSequence such that
A3: p=p1^p2 by TREES_1:8;
     k in Seg k by A2,FINSEQ_1:5;
    then k in (dom p) /\ (Seg k) by A1,XBOOLE_0:def 3;
then A4: k in dom p1 by RELAT_1:90;
    then p1 <> {} by FINSEQ_1:26;
    then len p1<>0 by FINSEQ_1:25;
    then consider p3 being FinSequence of REAL,x being Element of REAL such
that
A5: p1=p3^<*x*> by FINSEQ_2:22;
    reconsider p2 as FinSequence of REAL by A3,FINSEQ_1:50;
A6: k =len p1 by A2,FINSEQ_1:21
      .=len p3+ len <*x*> by A5,FINSEQ_1:35
      .= len p3 + 1 by FINSEQ_1:56;
then A7: x =p1.k by A5,FINSEQ_1:59 .=a by A3,A4,FINSEQ_1:def 7;
A8: for i st i in Seg len p2 holds p2.i=0
    proof let i;
      assume i in Seg len p2;
then A9:  i in dom p2 by FINSEQ_1:def 3;
A10:  1 <= k & k <=len p1 by A4,FINSEQ_3:27;
       0<>i by A9,FINSEQ_3:27;
then A11:  len p1<>len p1 + i;
       len p1 <= len p1 + i by NAT_1:12;
then A12:  k<>len p1 + i by A10,A11,REAL_1:def 5;
A13:  (len p1+ i) in dom p by A3,A9,FINSEQ_1:41;
      thus p2.i=p.(len p1+i) by A3,A9,FINSEQ_1:def 7
        .=0 by A1,A12,A13;
    end;
A14:p2=len p2 |->0
    proof
A15:  len (len p2 |->0)=len p2 by FINSEQ_2:69;
       now let j be Nat; assume
A16:    j in Seg len p2;
        hence p2.j =0 by A8
          .= (len p2 |->0).j by A16,FINSEQ_1:4,FINSEQ_2:71;
      end;
      hence thesis by A15,FINSEQ_2:10;
    end;
A17:for i st i in Seg len p3 holds p3.i=0
    proof let i; assume
A18:  i in Seg len p3;
      then 1<=i & i <= len p3 by FINSEQ_1:3;
then A19:  i <> k by A6,NAT_1:13;
A20:  i in dom p3 by A18,FINSEQ_1:def 3;
then A21:  i in dom p1 by A5,FINSEQ_2:18;
then A22:  i in dom p & i in dom p1 by A3,FINSEQ_2:18;
      thus p3.i=p1.i by A5,A20,FINSEQ_1:def 7
        .=p.i by A3,A21,FINSEQ_1:def 7
        .=0 by A1,A19,A22;
    end;
A23:p3=len p3 |->0
    proof
A24:  len (len p3 |->0)=len p3 by FINSEQ_2:69;
       now let j be Nat; assume
A25:    j in Seg len p3;
        hence p3.j =0 by A17
          .= (len p3 |->0).j by A25,FINSEQ_1:4,FINSEQ_2:71;
      end;
      hence thesis by A24,FINSEQ_2:10;
    end;
     Sum p=Sum(p3^<*x*>) + Sum(len p2 |->0) by A3,A5,A14,RVSUM_1:105
      .=Sum(p3^<*x*>) + 0 by RVSUM_1:111
      .=Sum(len p3 |->0) + x by A23,RVSUM_1:104
      .=0 + a by A7,RVSUM_1:111
      .=p.k;
    hence thesis;
  end;

theorem Th14:
  p is nonnegative implies
    for k st k in dom p & p.k = Sum p holds p has_onlyone_value_in k
  proof assume
A1: p is nonnegative;
    let k1 being Element of NAT such that
A2: k1 in dom p & p.k1 =Sum p;
A3: k1 >=1 & k1 <= len p by A2,FINSEQ_3:27;
    then consider j1 being Nat such that
A4: k1 + j1 = len p by NAT_1:10;
    reconsider j1 as Element of NAT by ORDINAL1:def 13;
     not ex i st i in dom p & i<>k1 & p.i <> 0
    proof assume ex i st i in dom p & i<>k1 & p.i <> 0;
      then consider k2 being Element of NAT such that
A5:   k2 in dom p & k2<>k1 & p.k2<>0;
A6:   k2 >=1 & k2 <= len p by A5,FINSEQ_3:27;
      then consider j2 being Nat such that
A7:   k2 + j2 = len p by NAT_1:10;
      reconsider j2 as Element of NAT by ORDINAL1:def 13;
A8:   p.k2 > 0 by A1,A5,Def1;
      per cases by A5,REAL_1:def 5;
      suppose k1 > k2;
then A9:     not k1 in Seg k2 by FINSEQ_1:3;
        consider p1,p2 being FinSequence of REAL such that
A10:     len p1 = k2 & len p2 = j2 & p = p1 ^ p2 by A7,FINSEQ_2:26;
         k2 in Seg k2 by A6,FINSEQ_1:5;
then A11:     k2 in dom p1 by A10,FINSEQ_1:def 3;
         p1.k2 > 0 & for k be Nat st k in dom p1 holds p1.k >= 0
        proof
          thus p1.k2 > 0 by A8,A10,A11,FINSEQ_1:def 7;
          let k be Nat such that
A12:       k in dom p1;
A13:       dom p1 c= dom p by A10,FINSEQ_1:39;
           p1.k = p.k by A10,A12,FINSEQ_1:def 7;
          hence thesis by A1,A12,A13,Def1;
        end;
then A14:     Sum p1 > 0 by A11,RVSUM_1:115;
         not k1 in dom p1 by A9,A10,FINSEQ_1:def 3;
        then consider kk be Nat such that
A15:     kk in dom p2 & k1 = k2 + kk by A2,A10,FINSEQ_1:38;
A16:     p2.kk = p.k1 by A10,A15,FINSEQ_1:def 7;
         for k being Nat st k in dom p2 holds p2.k >= 0
        proof let k be Nat such that
A17:       k in dom p2;
           k >= 1 & k <= j2 by A10,A17,FINSEQ_3:27;
          then k2+k>=1+0 & k2+k <= len p by A7,XREAL_1:9;
then A18:       k2+k in dom p by FINSEQ_3:27;
           p2.k = p.(k2+k) by A10,A17,FINSEQ_1:def 7;
          hence thesis by A1,A18,Def1;
        end;
then A19:     Sum p2 >= p.k1 by A15,A16,MATRPROB:5;
         Sum p = Sum p1 + Sum p2 by A10,RVSUM_1:105;
        then Sum p > p.k1 + 0 by A14,A19,XREAL_1:10;
        hence thesis by A2;
      end;
      suppose k1 < k2;
then A20:     not k2 in Seg k1 by FINSEQ_1:3;
        consider p1,p2 being FinSequence of REAL such that
A21:     len p1 = k1 & len p2 = j1 & p = p1 ^ p2 by A4,FINSEQ_2:26;
         k1 in Seg k1 by A3,FINSEQ_1:5;
then A22:     k1 in dom p1 by A21,FINSEQ_1:def 3;
         p1.k1 = p.k1 & for k be Nat st k in dom p1 holds p1.k >= 0
        proof
          thus p1.k1 = p.k1 by A21,A22,FINSEQ_1:def 7;
          let k be Nat such that
A23:       k in dom p1;
A24:       dom p1 c= dom p by A21,FINSEQ_1:39;
           p1.k = p.k by A21,A23,FINSEQ_1:def 7;
          hence thesis by A1,A23,A24,Def1;
        end;
then A25:     Sum p1 >= p.k1 by A22,MATRPROB:5;
         not k2 in dom p1 by A20,A21,FINSEQ_1:def 3;
        then consider kk be Nat such that
A26:     kk in dom p2 & k2 = k1 + kk by A5,A21,FINSEQ_1:38;
A27:     p2.kk = p.k2 by A21,A26,FINSEQ_1:def 7;
         for k be Nat st k in dom p2 holds p2.k >= 0
        proof let k be Nat such that
A28:       k in dom p2;
           k >= 1 & k <= j1 by A21,A28,FINSEQ_3:27;
          then k1+k>=1+0 & k1+k <= len p by A4,XREAL_1:9;
then A29:       k1+k in dom p by FINSEQ_3:27;
           p2.k =p.(k1+k) by A21,A28,FINSEQ_1:def 7;
          hence thesis by A1,A29,Def1;
        end;
then A30:     Sum p2 > 0 by A8,A26,A27,RVSUM_1:115;
         Sum p = Sum p1 + Sum p2 by A21,RVSUM_1:105;
        then Sum p > p.k1 + 0 by A25,A30,XREAL_1:10;
        hence thesis by A2;
      end;
    end;
    hence thesis by A2,Def2;
  end;

registration
  cluster ProbFinS -> non empty nonnegative FinSequence of REAL;
  coherence
  proof let p be FinSequence of REAL; assume
A1: p is ProbFinS;
    hence p is non empty by MATRPROB:def 5,RVSUM_1:102;
     for i st i in dom p holds p.i >= 0 by A1,MATRPROB:def 5;
    hence thesis by Def1;
