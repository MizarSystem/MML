theorem Th28:
  for p being ProbFinS FinSequence of REAL
  for M being non empty-yielding Conditional_Probability Matrix of REAL
    st len p = len M holds (Vec2DiagMx p) * M is Joint_Probability
  proof let p be ProbFinS FinSequence of REAL;
        let M be non empty-yielding Conditional_Probability Matrix of REAL;
    assume
A1: len p = len M;
    set M1 = (Vec2DiagMx p) * M;
A2: len M1 = len p & width M1 = width M &
    for i,j st [i,j] in Indices M1 holds M1*(i,j) = p.i*(M*(i,j))
      by A1,Th26;
A3: M1 is m-nonnegative
    proof
       now let i,j such that
A4:     [i,j] in Indices M1;
         i in Seg len p & i in Seg len M & j in Seg width M
          by A1,A2,A4,MATRPROB:12;
        then i in dom p & [i,j] in Indices M by FINSEQ_1:def 3,MATRPROB:12;
then A5:     p.i >= 0 & M*(i,j) >= 0 by MATRPROB:def 5,def 6;
         M1*(i,j) = p.i *(M*(i,j)) by A1,A4,Th26;
        hence M1*(i,j) >= 0 by A5,XREAL_1:129;
      end;
      hence thesis by MATRPROB:def 6;
    end;
     M1 is with_sum=1
    proof
A6:   LineSum M1 = p
      proof
        set M2=LineSum M1;
A7:     len M2 = len M1 &
        for k st k in Seg len M1 holds M2.k = Sum(Line(M1,k)) by MATRPROB:20;
then A8:     dom M2 = dom M1 & dom M2 = dom M & dom M2 = dom p
          by A1,A2,FINSEQ_3:31;
         now let k be Nat such that
A9:       k in dom M2;
           k in Seg len M1 by A7,A9,FINSEQ_1:def 3;
          hence M2.k = Sum(Line(M1,k)) by MATRPROB:20
            .= Sum(p.k*Line(M,k)) by A1,A8,A9,Th27
            .= p.k * Sum Line(M,k) by RVSUM_1:117
            .= p.k * Sum(M.k) by A8,A9,MATRIX_2:18
            .= p.k * 1 by A8,A9,MATRPROB:def 9
            .= p.k;
        end;
        hence thesis by A8,FINSEQ_1:17;
      end;
       SumAll M1 = Sum LineSum M1 by MATRPROB:def 3
        .= 1 by A6,MATRPROB:def 5;
      hence thesis by MATRPROB:def 7;
    end;
    hence thesis by A3,MATRPROB:def 8;
  end;

theorem Th29:
  for M being Matrix of D for p being FinSequence of D* st
    len p = len M & p.1 = M.1 &
    (for k st k >= 1 & k < len M holds p.(k+1) = (p.k) ^ M.(k+1)) holds
      for k st k in dom p holds len (p.k) = k * width M
  proof let M be Matrix of D;
        let p be FinSequence of D* such that
A1: len p = len M and
A2: p.1 = M.1 and
A3: for k st k >= 1 & k < len M holds p.(k+1) = (p.k) ^ M.(k+1);
    defpred P[Element of NAT] means
      $1 >= 1 & $1 <= len M implies len (p.$1) = $1 * width M;
A4: P[0];
A5: for n being Element of NAT st P[n] holds P[n + 1]
    proof let n be Element of NAT;
      assume
A6:   n >= 1 & n <= len M implies len (p.n) = n * width M;
      assume
A7:   n + 1 >= 1 & n + 1 <= len M;
       now per cases;
        suppose
A8:       n = 0;
then       1 in dom M by A7,FINSEQ_3:27;
          hence thesis by A2,A8,GOBRD13:4;
        end;
          suppose
A9:         n <> 0;
then A10:         n >= 1 by NAT_1:14;
A11:         n + 1 in dom M by A7,FINSEQ_3:27;
             n < len M by A7,NAT_1:13;
            then p.(n + 1) = (p.n) ^ M.(n+1) by A3,A10;
            then len (p.(n + 1)) = len (p.n) + len (M.(n+1)) by FINSEQ_1:35
              .= (n * width M) + width M
                by A6,A7,A9,A11,GOBRD13:4,NAT_1:13,14
              .= (n + 1) * width M;
            hence thesis;
          end;
        end;
        hence len (p.(n + 1)) = (n + 1) * width M;
      end;
A12:   for n being Element of NAT holds P[n] from NAT_1:sch 1(A4,A5);
      let k such that
A13:   k in dom p;
       k in Seg len p by A13,FINSEQ_1:def 3;
      then k >= 1 & k <= len p by FINSEQ_1:3;
