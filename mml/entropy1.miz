    end;
    assume
A10: len MR1 = len p & width MR1 = width MR &
    for i,j st [i,j] in Indices MR1 holds MR1*(i,j) = p.i*(MR*(i,j));
then A11: dom MR1 = dom MM & dom MR = dom MR1 by A1,A3,FINSEQ_3:31;
     for i,j st [i,j] in Indices MR1 holds
      MR1*(i,j) = Line(MM,i) "*" Col(MR,j)
    proof let i,j such that
A12:   [i,j] in Indices MR1;
      set q = mlt(Line(MM,i),Col(MR,j));
       i in Seg len MR1 & j in Seg width MR1 by A12,MATRPROB:12;
then A13:   i in dom MR1 by FINSEQ_1:def 3;
then A14:   Line(MM,i) has_onlyone_value_in i & Line(MM,i).i=p.i by A11,Th25;
