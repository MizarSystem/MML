then A9:     q has_onlyone_value_in i & q.i = (Line(MM,i).i) * (Col(MR,j).i)
          by A1,A3,A8,Th12;
        thus MR1*(i,j) = Line(MM,i) "*" Col(MR,j) by A1,A3,A4,A6,MATRPROB:39
          .= Sum q by EUCLID_2:def 1
          .= p.i * (Col(MR,j).i) by A8,A9,Th13
          .= p.i*(MR*(i,j)) by A2,A5,A7,MATRIX_1:def 9;
