theorem Th18:
  for M being Matrix of D holds
    for i st i in dom M holds dom(M.i) = Seg width M
  proof let M be Matrix of D;
    let i; assume i in dom M;
    hence dom(M.i) = dom Line(M,i) by MATRIX_2:18
      .= Seg len Line(M,i) by FINSEQ_1:def 3
      .= Seg width M by MATRIX_1:def 8;
  end;

theorem Th19:
   MR is m-nonnegative iff
    (for i st i in dom MR holds Line(MR,i) is nonnegative)
  proof
    hereby assume
A1: MR is m-nonnegative;
      let i such that
A2:   i in dom MR;
       now let k such that
A3:     k in dom Line(MR,i);
A4:     k in dom (MR.i) by A2,A3,MATRIX_2:18;
then A5:     k in Seg width MR by A2,Th18;
A6:     [i,k] in Indices MR by A2,A4,MATRPROB:13;
         (Line(MR,i)).k = MR*(i,k) by A5,MATRIX_1:def 8;
        hence (Line(MR,i)).k >= 0 by A1,A6,MATRPROB:def 6;
      end;
      hence Line(MR,i) is nonnegative by Def1;
    end;
    assume
A7: for i st i in dom MR holds Line(MR,i) is nonnegative;
     now let i,j such that
A8:   [i,j] in Indices MR;
A9:   i in Seg len MR & j in Seg width MR by A8,MATRPROB:12;
      then j in Seg len Line(MR,i) by MATRIX_1:def 8;
then A10:   i in dom MR & j in dom Line(MR,i) by A9,FINSEQ_1:def 3;
then A11:   Line(MR,i) is nonnegative by A7;
       MR*(i,j) = Line(MR,i).j by A9,MATRIX_1:def 8;
      hence MR*(i,j) >= 0 by A10,A11,Def1;
    end;
    hence MR is m-nonnegative by MATRPROB:def 6;
  end;

begin :: Properties on Transformations between Vector and Matrix

theorem Th20:
  for j st j in dom p holds Col(LineVec2Mx p,j) = <*p.j*>
  proof
    set M = LineVec2Mx p;
    let j such that
A1: j in dom p;
A2: len Col(M,j) = len M by MATRIX_1:def 9;
then A3: len Col(M,j) = 1 by MATRIXR1:def 10;
A4: dom <*p.j*> = Seg 1 by FINSEQ_1:def 8;
then A5: dom Col(M,j) = dom <*p.j*> by A3,FINSEQ_1:def 3;
     now let k be Nat such that
A6:   k in dom Col(M,j);
       k >= 1  & k <= 1 by A4,A5,A6,FINSEQ_1:3;
then A7:   k = 1 by XXREAL_0:1;
       k in dom M by A2,A6,FINSEQ_3:31;
      hence (Col(M,j)).k = M*(k,j) by MATRIX_1:def 9
         .= p.j by A1,A7,MATRIXR1:def 10
         .= (<*p.j*>).k by A7,FINSEQ_1:def 8;
    end;
    hence thesis by A5,FINSEQ_1:17;
  end;

theorem Th21:
  for p being non empty FinSequence of REAL for q being FinSequence of REAL
    for M being Matrix of REAL holds
    M = (ColVec2Mx p) * (LineVec2Mx q) iff
      (len M = len p & width M = len q &
      for i,j st [i,j] in Indices M holds M*(i,j) = p.i * q.j)
  proof let p be non empty FinSequence of REAL;
        let q be FinSequence of REAL;
        let M be Matrix of REAL;
    set M1 = ColVec2Mx p;
    set M2 = LineVec2Mx q;
     len p <> 0 by FINSEQ_1:25;
then A1: len p > 0;
then A2: len M1 = len p & width M1 = 1 &
    for j st j in dom p holds M1.j = <*p.j*> by MATRIXR1:def 9;
A3: len M2 = 1 & width M2 = len q &
    for j st j in dom q holds M2*(1,j) =q.j by MATRIXR1:def 10;
    hereby assume
A4:   M = M1 * M2;
then A5:   len M = len M1 & width M = width M2 &
      for i,j st [i,j] in Indices M holds
        M*(i,j) = Line(M1,i) "*" Col(M2,j) by A2,A3,MATRPROB:39;
      thus len M = len p & width M = len q
        by A2,A3,A4,MATRPROB:39;
      thus for i,j st [i,j] in Indices M holds M*(i,j) = p.i * q.j
      proof let i,j such that
A6:     [i,j] in Indices M;
A7:     i in Seg len M & j in Seg width M by A6,MATRPROB:12;
then A8:     i in dom M1 by A5,FINSEQ_1:def 3;
A9:     i in dom p & j in dom q by A2,A3,A5,A7,FINSEQ_1:def 3;
A10:     Line(M1,i) = M1.i by A8,MATRIX_2:18 .= <*p.i*> by A1,A9,MATRIXR1:def 9
;
        thus M*(i,j) = Line(M1,i) "*" Col(M2,j) by A2,A3,A4,A6,MATRPROB:39
          .= <*p.i*> "*" <*q.j*> by A9,A10,Th20
          .= Sum mlt(<*p.i*>,<*q.j*>) by EUCLID_2:def 1
          .= Sum <*p.i * q.j*> by RVSUM_1:89
          .= p.i * q.j by RVSUM_1:103;
      end;
    end;
    assume
A11: len M = len p & width M = len q &
      for i,j st [i,j] in Indices M holds M*(i,j) = p.i * q.j;
     for i,j st [i,j] in Indices M holds
      M*(i,j) = Line(M1,i) "*" Col(M2,j)
    proof let i,j such that
A12:   [i,j] in Indices M;
A13:     i in Seg len M & j in Seg width M by A12,MATRPROB:12;
then A14:     i in dom M1 by A2,A11,FINSEQ_1:def 3;
A15:     i in dom p & j in dom q by A11,A13,FINSEQ_1:def 3;
then A16:     <*p.i*> = M1.i by A1,MATRIXR1:def 9 .= Line(M1,i) by A14,
MATRIX_2:18;
      thus M*(i,j) = p.i * q.j by A11,A12
      .= Sum <*p.i * q.j*> by RVSUM_1:103
      .= Sum mlt(<*p.i*>,<*q.j*>) by RVSUM_1:89
      .= <*p.i*> "*" <*q.j*> by EUCLID_2:def 1
      .= Line(M1,i) "*" Col(M2,j) by A15,A16,Th20;
    end;
    hence M = M1 * M2 by A2,A3,A11,MATRPROB:39;
  end;

theorem Th22:
  for p being non empty FinSequence of REAL for q being FinSequence of REAL
    for M being Matrix of REAL holds
    M = (ColVec2Mx p) * (LineVec2Mx q) iff
      (len M = len p & width M = len q &
      for i st i in dom M holds Line(M,i) = p.i * q)
  proof let p be non empty FinSequence of REAL,
            q be FinSequence of REAL,
            M be Matrix of REAL;
    set M1 = ColVec2Mx p;
    set M2 = LineVec2Mx q;
    hereby assume
A1:   M = M1 * M2;
      hence len M = len p & width M = len q by Th21;
      thus for i st i in dom M holds Line(M,i) = p.i * q
      proof let i such that
A2:     i in dom M;
A3:     i in Seg len M by A2,FINSEQ_1:def 3;
A4:     dom Line(M,i) = Seg len Line(M,i) by FINSEQ_1:def 3
          .= Seg width M by MATRIX_1:def 8 .= Seg len q by A1,Th21
          .= dom q by FINSEQ_1:def 3 .= dom(p.i * q) by SEQ_1:def 6;
         for j be Nat st j in dom Line(M,i) holds (Line(M,i)).j = (p.i * q).j
        proof let j be Nat such that
A5:       j in dom Line(M,i);
A6:       j in NAT by ORDINAL1:def 13;
           j in Seg len Line(M,i) by A5,FINSEQ_1:def 3;
then A7:       j in Seg width M by MATRIX_1:def 8;
then A8:       [i,j] in Indices M by A3,MATRPROB:12;
          thus (Line(M,i)).j = M*(i,j) by A7,MATRIX_1:def 8
            .= p.i * q.j by A1,A6,A8,Th21 .= (p.i * q).j by RVSUM_1:66;
        end;
        hence thesis by A4,FINSEQ_1:17;
      end;
    end;
    assume
A9: len M = len p & width M = len q &
    for i st i in dom M holds Line(M,i) = p.i * q;
     for i,j st [i,j] in Indices M holds M*(i,j) = p.i * q.j
    proof let i,j such that
A10:   [i,j] in Indices M;
A11:   i in dom M & j in dom(M.i) by A10,MATRPROB:13;
       j in Seg width M by A10,MATRPROB:12;
      hence M*(i,j) = (Line(M,i)).j by MATRIX_1:def 8
        .= (p.i * q).j by A9,A11
        .= p.i * q.j by RVSUM_1:66;
    end;
    hence M = M1 * M2 by A9,Th21;
  end;

theorem Th23:
  for p,q being ProbFinS FinSequence of REAL holds
    (ColVec2Mx p) * (LineVec2Mx q) is Joint_Probability
  proof let p,q be ProbFinS FinSequence of REAL;
    set M = (ColVec2Mx p) * (LineVec2Mx q);
A1: len M = len p & width M = len q &
    for i st i in dom M holds Line(M,i) = p.i * q by Th22;
A2: M is m-nonnegative
    proof
       now let i,j such that
A3:     [i,j] in Indices M;
         i in Seg len p & j in Seg len q by A1,A3,MATRPROB:12;
        then i in dom p & j in dom q by FINSEQ_1:def 3;
then A4:     p.i >= 0 & q.j >= 0 by MATRPROB:def 5;
         M*(i,j) = p.i * q.j by A3,Th21;
        hence M*(i,j) >= 0 by A4,XREAL_1:129;
      end;
      hence thesis by MATRPROB:def 6;
    end;
     M is with_sum=1
    proof
A5:   LineSum M = p
      proof
        set M1=LineSum M;
A6:     len M1 = len M &
        for k st k in Seg len M holds M1.k = Sum(Line(M,k)) by MATRPROB:20;
then A7:     dom M1 = dom p & dom M1 = dom M by A1,FINSEQ_3:31;
         now let k be Nat such that
A8:       k in dom M1;
           k in Seg len M by A6,A8,FINSEQ_1:def 3;
          hence M1.k = Sum(Line(M,k)) by MATRPROB:20
            .= Sum(p.k * q) by A7,A8,Th22
            .= p.k * Sum q by RVSUM_1:117 .= p.k * 1 by MATRPROB:def 5
            .= p.k;
        end;
        hence thesis by A7,FINSEQ_1:17;
      end;
       SumAll M = Sum LineSum M by MATRPROB:def 3
        .= 1 by A5,MATRPROB:def 5;
      hence thesis by MATRPROB:def 7;
    end;
    hence thesis by A2,MATRPROB:def 8;
  end;

definition let n;
           let MR be Matrix of n,REAL;
  attr MR is diagonal means :Def3:
    for i,j st [i,j] in Indices MR & MR*(i,j) <> 0 holds i=j;
end;

registration let n;
  cluster diagonal Matrix of n,REAL;
  existence
  proof
    reconsider n1=n as Element of NAT by ORDINAL1:def 13;
    deffunc F(set,set) = 0;
    consider M being Matrix of n1,REAL such that
A1: for i,j being Nat st [i,j] in Indices M holds M*(i,j) = F(i,j)
      from MATRIX_1:sch 1;
A2: for i,j st [i,j] in Indices M & M*(i,j) <> 0 holds i=j by A1;
    reconsider M1=M as Matrix of n,REAL;
    take M1;
    thus thesis by A2,Def3;
  end;
end;

theorem Th24:
  for MR being Matrix of n,REAL holds
    MR is diagonal iff
      for i st i in dom MR holds Line(MR,i) has_onlyone_value_in i
  proof let MR be Matrix of n,REAL;
     len MR = n & width MR = n by MATRIX_1:25;
then A1: dom MR = Seg width MR by FINSEQ_1:def 3;
