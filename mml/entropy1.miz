    end;
    assume
A9: for i st i in dom MR holds Line(MR,i) has_onlyone_value_in i;
     for i,j st [i,j] in Indices MR & MR*(i,j) <> 0 holds i=j
    proof let i,j such that
A10:   [i,j] in Indices MR & MR*(i,j) <> 0; assume
A11:   i<>j;
A12:   i in dom MR & j in dom(MR.i) by A10,MATRPROB:13;
then A13:   j in dom Line(MR,i) by MATRIX_2:18;
A14:   Line(MR,i) has_onlyone_value_in i by A9,A12;
       len Line(MR,i) = width MR by MATRIX_1:def 8;
      then dom Line(MR,i) = Seg width MR by FINSEQ_1:def 3;
      then MR*(i,j) = Line(MR,i).j by A13,MATRIX_1:def 8
