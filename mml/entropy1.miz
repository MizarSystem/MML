        by A1,A3,A14,Th12;
      thus MR1*(i,j) = p.i*(MR*(i,j)) by A10,A12
        .= p.i * (Col(MR,j).i) by A11,A13,MATRIX_1:def 9
        .= Sum q by A14,A15,Th13
        .= Line(MM,i) "*" Col(MR,j) by EUCLID_2:def 1;
    end;
