A2: [x,z] in [:NAT,{X}:];
  y in {X} by A1,ZFMISC_1:106;
  then
A3: y = X by TARSKI:def 1;
  z in {X} by A2,ZFMISC_1:106;
  hence thesis by A3,TARSKI:def 1;
end;

