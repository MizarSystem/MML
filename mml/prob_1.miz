theorem Th35:
  Y is SigmaField of X implies Y is Field_Subset of X
proof
  assume
A1: Y is SigmaField of X;
  Y is cap-closed
  proof
    let A,B be set;
    assume
A2: A in Y & B in Y;
    then reconsider A9 = A, B9 = B as Subset of X by A1;
    set A1 = A9 followed_by B9;
    rng A1 = {A9,B9} by FUNCT_7:128;
    then
A3: rng A1 c= Y by A2,ZFMISC_1:38;
    Intersection A1 = A /\ B by Th30;
    hence thesis by A1,A3,Def8;
  end;
  hence thesis by A1;
end;

