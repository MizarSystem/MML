theorem Th76:
  bool Omega is SigmaField of Omega
proof
  set Y = bool Omega;
A1: for E st E in Y holds E` in Y;
  Y c= bool Omega & for BSeq st rng BSeq c= Y holds Intersection BSeq in Y;
  hence thesis by A1,Def1,Def8;
end;

Lm3: for X being Subset-Family of Omega ex Y being SigmaField of Omega st X c=
Y & for Z st X c= Z & Z is SigmaField of Omega holds Y c= Z
proof
  let X be Subset-Family of Omega;
  set V = { S : X c= S & S is SigmaField of Omega};
  set Y = meet V;
A1: now
    let Z;
    assume Z in V;
    then ex S st Z = S & X c= S & S is SigmaField of Omega;
    hence X c= Z;
  end;
A2: bool Omega in V
  proof
    reconsider X1 = bool Omega as Subset-Family of Omega;
    X1 is SigmaField of Omega by Th76;
    hence thesis;
  end;
A3: for E st E in Y holds E` in Y
  proof
    let E such that
A4: E in Y;
    now
      let Z;
      assume Z in V;
      then E in Z & ex S st Z = S & X c= S & S is SigmaField of Omega by A4,
      SETFAM_1:def 1;
      hence E` in Z by Def1;
    end;
    hence thesis by A2,SETFAM_1:def 1;
  end;
A5: for BSeq st rng BSeq c= Y holds Intersection BSeq in Y
  proof
    let BSeq such that
A6: rng BSeq c= Y;
    now
      let Z;
      assume
A7:   Z in V;
      now
        let n be Nat;
        BSeq.n in rng BSeq by NAT_1:52;
        hence BSeq.n in Z by A6,A7,SETFAM_1:def 1;
      end;
      then
A8:   rng BSeq c= Z by NAT_1:53;
      ex S st Z = S & X c= S & S is SigmaField of Omega by A7;
      hence Intersection BSeq in Z by A8,Def8;
    end;
    hence thesis by A2,SETFAM_1:def 1;
  end;
  now
    let Z;
    assume Z in V;
    then ex S st Z = S & X c= S & S is SigmaField of Omega;
    hence {} in Z by Th10;
  end;
  then reconsider Y as SigmaField of Omega by A2,
  A5,A3,Def1,Def8,SETFAM_1:4,def
  1;
  take Y;
  for Z st X c= Z & Z is SigmaField of Omega holds Y c= Z
  proof
    let Z;
    assume that
A9: X c= Z and
A10: Z is SigmaField of Omega;
    reconsider Z as Subset-Family of Omega by A10;
    Z in V by A9,A10;
    hence thesis by SETFAM_1:4;
  end;
  hence thesis by A2,A1,SETFAM_1:6;
end;

definition
