in
T
            proof let x,y such that A8:
 x in field T & y in field T & [x,y] in T;
                   x in A() & y in A() & P[x,y]
                proof
                   thus x in A() & y in A() by A5,A8;
                   consider a,b being set such that A9:
                       [x,y] = [a,b] & P[a,b] by A3,A8;
                        x = a & y = b by A9,ZFMISC_1:33;
                    hence P[x,y] by A9;
                end;
              then [y,x] in [:A(),A():] & P[y,x] by A2,ZFMISC_1:106;
            hence [y,x] in T by A3;
            end;
