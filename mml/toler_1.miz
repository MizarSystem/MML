        end;
   then reconsider T as Tolerance of A() by A4,A7,PARTFUN1:def 4,RELAT_2:def 9
,def 11
;
   take T;
   let x,y;
   assume A10: x in A() & y in A();
    thus [x,y] in T implies P[x,y]
     proof assume [x,y] in T;
       then consider a,b being set such that A11: [x,y] = [a,b] & P[a,b] by A3;
