theorem Th12:
  (for n holds BSeq.n = ASeq.n /\ B) implies (Intersection ASeq)
  /\ B = Intersection BSeq
proof
  assume
A1: for n holds BSeq.n = ASeq.n /\ B;
A2: now
    let x;
    assume
A3: x in (Intersection BSeq);
A4: for n holds x in ASeq.n /\ B
    proof
      let n;
      x in BSeq.n by A3,PROB_1:29;
      hence thesis by A1;
    end;
A5: for n holds x in ASeq.n & x in B
    proof
      let n;
      x in ASeq.n /\ B by A4;
      hence thesis by XBOOLE_0:def 4;
    end;
    then x in (Intersection ASeq) by PROB_1:29;
    hence x in (Intersection ASeq) /\ B by A5,XBOOLE_0:def 4;
  end;
  now
    let x;
    assume
A6: x in (Intersection ASeq) /\ B;
    then
A7: x in (Intersection ASeq) by XBOOLE_0:def 4;
A8: for n holds x in ASeq.n /\ B
    proof
      let n;
      x in ASeq.n & x in B by A6,A7,PROB_1:29,XBOOLE_0:def 4;
      hence thesis by XBOOLE_0:def 4;
    end;
    for n holds x in BSeq.n
    proof
      let n;
      x in ASeq.n /\ B by A8;
      hence thesis by A1;
    end;
    hence x in (Intersection BSeq) by PROB_1:29;
  end;
  hence thesis by A2,TARSKI:2;
end;

theorem Th13:
  (for A holds P.A = P1.A) implies P = P1
proof
  assume
  for A holds P.A = P1.A;
  then for x st x in Sigma holds P.x = P1.x;
  hence thesis by FUNCT_2:18;
end;

theorem
  for X being set, S being SetSequence of X holds S is non-ascending iff
  for n holds S.(n+1) c= S.n
proof
  let X be set, S be SetSequence of X;
  thus S is non-ascending implies for n holds S.(n+1) c= S.n
  proof
    assume
A1: S is non-ascending;
    now
      let n;
      n <= n+1 by NAT_1:11;
      hence S.(n+1) c= S.n by A1,PROB_1:def 6;
    end;
    hence thesis;
  end;
  assume
A2: for n holds S.(n+1) c= S.n;
  now
    let n,m such that
A3: n <= m;
A4: now
      defpred P[Element of NAT] means S.(n+$1) c= S.n;
A5:   for k st P[k] holds P[k+1]
      proof
        let k such that
A6:     S.(n+k) c= S.n;
        S.(n+k+1) c= S.(n+k) by A2;
        hence thesis by A6,XBOOLE_1:1;
      end;
A7:   P[0];
      thus for k holds P[k] from NAT_1:sch 1(A7,A5);
    end;
    consider k being Nat such that
A8: m = n + k by A3,NAT_1:10;
    k in NAT by ORDINAL1:def 13;
    hence S.m c= S.n by A4,A8;
  end;
  hence thesis by PROB_1:def 6;
end;

theorem
  for X being set, S being SetSequence of X holds S is non-descending
  iff for n holds S.n c= S.(n+1)
proof
  let X be set, S be SetSequence of X;
  thus S is non-descending implies for n holds S.n c= S.(n+1)
  proof
    assume
A1: S is non-descending;
    now
      let n;
      n <= n+1 by NAT_1:11;
      hence S.n c= S.(n+1) by A1,PROB_1:def 7;
    end;
    hence thesis;
  end;
  assume
A2: for n holds S.n c= S.(n+1);
  now
    let n,m such that
A3: n <= m;
A4: now
      defpred P[Element of NAT] means S.n c= S.(n+$1);
A5:   for k st P[k] holds P[k+1]
      proof
        let k such that
A6:     S.n c= S.(n+k);
        S.(n+k) c= S.(n+k+1) by A2;
        hence thesis by A6,XBOOLE_1:1;
      end;
A7:   P[0];
      thus for k holds P[k] from NAT_1:sch 1(A7,A5);
    end;
    consider k being Nat such that
A8: m = n + k by A3,NAT_1:10;
    k in NAT by ORDINAL1:def 13;
    hence S.n c= S.m by A4,A8;
  end;
  hence thesis by PROB_1:def 7;
end;

