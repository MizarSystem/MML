theorem Th42:
  for P,B,A st 0 < P.B holds P.(A /\ B) = P.|.B.A * P.B
proof
  let P,B,A;
  assume
A1: 0 < P.B;
  then P.|.B.A * P.B = (P.(A /\ B)/P.B) * P.B by Def7
    .= P.(A /\ B) * (P.B)" * P.B by XCMPLX_0:def 9
    .= P.(A /\ B) * ((P.B)" * P.B)
    .= P.(A /\ B) * 1 by A1,XCMPLX_0:def 7
    .= P.(A /\ B);
  hence thesis;
end;

theorem
  for P,A,B,C st 0 < P.(A /\ B) holds P.(A /\ B /\ C) = P.A * P.|.A.B *
  P.|.(A /\ B).C
proof
  let P,A,B,C;
  assume
A1: 0 < P.(A /\ B);
  then
A2: 0 < P.A by PROB_1:70,XBOOLE_1:17;
  P.(A /\ B /\ C) = P.(B /\ A) * P.|.(A /\ B).C by A1,Th42
    .= P.A * P.|.A.B * P.|.(A /\ B).C by A2,Th42;
  hence thesis;
end;

theorem Th44:
  for P,A,B,C st C = B` & 0 < P.B & 0 < P.C holds P.A = P.|.B.A *
  P.B + P.|.C.A * P.C
proof
  let P,A,B,C;
  assume that
A1: C = B` and
A2: 0 < P.B and
A3: 0 < P.C;
  P.A = P.(A /\ B) + P.(A /\ C) by A1,Th24
    .= P.|.B.A * P.B + P.(A /\ C) by A2,Th42
    .= P.|.B.A * P.B + P.|.C.A * P.C by A3,Th42;
  hence thesis;
end;

theorem Th45:
  for P,A,A1,A2,A3 st A1 misses A2 & A3 = (A1 \/ A2)` & 0 < P.A1 &
0 < P.A2 & 0 < P.A3 holds P.A = (P.|.A1.A * P.A1) + (P.|.A2.A * P.A2) + (P.|.A3
  .A * P.A3)
proof
  let P,A,A1,A2,A3;
  assume that
A1: A1 misses A2 and
A2: A3 = (A1 \/ A2)` and
A3: 0 < P.A1 and
A4: 0 < P.A2 and
A5: 0 < P.A3;
A6: A /\ A1 misses A /\ A2 by A1,XBOOLE_1:76;
  (A1 \/ A2) misses A3 by A2,SUBSET_1:44;
  then
A7: A /\ (A1 \/ A2) misses A /\ A3 by XBOOLE_1:76;
A8: A1 \/ A2 \/ A3 = [#]Omega by A2,SUBSET_1:25
    .= Omega;
  (P.|.A1.A * P.A1) + (P.|.A2.A * P.A2) + (P.|.A3.A * P.A3) = P.(A /\ A1)
  + (P.|.A2.A * P.A2) + (P.|.A3.A * P.A3) by A3,Th42
    .= P.(A /\ A1) + P.(A /\ A2) + (P.|.A3.A * P.A3) by A4,Th42
    .= P.(A /\ A1) + P.(A /\ A2) + P.(A /\ A3) by A5,Th42
    .= P.((A /\ A1) \/ (A /\ A2)) + P.(A /\ A3) by A6,PROB_1:def 13
    .= P.(A /\ (A1 \/ A2)) + P.(A /\ A3) by XBOOLE_1:23
    .= P.((A /\ (A1 \/ A2)) \/ (A /\ A3)) by A7,PROB_1:def 13
    .= P.(A /\ Omega) by A8,XBOOLE_1:23
    .= P.A by XBOOLE_1:28;
  hence thesis;
end;

theorem
  for P,A,B st 0 < P.B holds (P.|.B.A = P.A iff A,B
  are_independent_respect_to P)
proof
  let P,A,B;
  assume
A1: 0 < P.B;
  thus P.|.B.A = P.A implies A,B are_independent_respect_to P
  proof
    assume
    P.|.B.A = P.A;
    then P.(A /\ B)/P.B * P.B = P.A * P.B by A1,Def7;
    then P.(A /\ B) = P.A * P.B by A1,XCMPLX_1:88;
    hence thesis by Def5;
  end;
  assume
  A,B are_independent_respect_to P;
  then P.(A /\ B) * (P.B)" = P.A * P.B * (P.B)" by Def5;
  then P.(A /\ B) * (P.B)" = P.A * (P.B * (P.B)");
  then P.(A /\ B) * (P.B)" = P.A * 1 by A1,XCMPLX_0:def 7;
  then P.(A /\ B)/P.B = P.A by XCMPLX_0:def 9;
  hence thesis by A1,Def7;
end;

theorem
  for P,A,B st 0 < P.B & P.B < 1 & P.|.B.A = P.|.([#] Sigma \ B).A holds
  A,B are_independent_respect_to P
proof
  let P,A,B;
  assume that
A1: 0 < P.B and
A2: P.B < 1 and
A3: P.|.B.A = P.|.([#] Sigma \B).A;
  0 < P.([#] Sigma \ B) & P.(A /\ B)/P.B = P.|.([#] Sigma \B).A by A1,A2,
  A3, Def7,Th27;
  then
A4: P.(A /\ B)/P.B = P.(A /\ ([#] Sigma \B))/P.([#] Sigma \ B) by Def7;
A5: B`= ([#] Sigma \ B);
  P.([#] Sigma \ B) <> 0 by A2,Th27;
  then
  P.(A /\ B) * P.([#] Sigma \ B) = P.(A /\ ([#] Sigma \B)) * P.B by A1,A4,Th4;
  then P.(A /\ B) * (1 - P.B) = P.(A /\ ([#] Sigma \B)) * P.B by
  PROB_1:68;
  then P.(A /\ B) = (P.(A /\ ([#] Sigma \B)) + P.(A /\ B)) * P.B
    .= P.A * P.B by A5,Th24;
  hence thesis by Def5;
end;

theorem
  for P,A,B st 0 < P.B holds (P.A + P.B - 1)/ P.B <= P.|.B.A
proof
  let P,A,B such that
A1: 0 < P.B;
  (P.A + P.B - 1)/P.B <= P.(A /\ B)/P.B by A1,Th25,XREAL_1:74;
  hence thesis by A1,Def7;
end;

theorem Th49:
  for A,B,P st 0 < P.A & 0 < P.B holds P.|.B.A = P.|.A.B * P.A / P
  .B
proof
  let A,B,P;
  assume that
A1: 0 < P.A and
A2: 0 < P.B;
  thus P.|.A.B * P.A / P.B = P.(A /\ B) / P.B by A1,Th42
    .= P.|.B.A by A2,Def7;
end;

theorem
::Bayes' Theorem for Two Events
  for B,A1,A2,P st 0 < P.B & A2 = A1` & 0 < P.A1 & 0 < P.A2 holds P.|.B.
A1 = (P.|.A1.B * P.A1) / (P.|.A1.B * P.A1 + P.|.A2.B * P.A2) & P.|.B.A2 = (P.|.
  A2.B * P.A2) / (P.|.A1.B * P.A1 + P.|.A2.B * P.A2)
proof
  let B,A1,A2,P;
  assume that
A1: 0 < P.B and
A2: A2 = A1` and
A3: 0 < P.A1 and
A4: 0 < P.A2;
  thus P.|.A1.B * P.A1 / (P.|.A1.B * P.A1 + P.|.A2.B * P.A2) = P.|.A1.B * P.A1
  / P.B by A2,A3,A4,Th44
    .= P.|.B.A1 by A1,A3,Th49;
  thus P.|.A2.B * P.A2 / (P.|.A1.B * P.A1 + P.|.A2.B * P.A2) = P.|.A2.B * P.A2
  / P.B by A2,A3,A4,Th44
    .= P.|.B.A2 by A1,A4,Th49;
end;

theorem
::Bayes' Theorem for Two Events
  for B,A1,A2,A3,P st 0<P.B & 0<P.A1 & 0<P.A2 & 0<P.A3 & A1 misses A2 &
A3=(A1 \/ A2)` holds P.|.B.A1 = (P.|.A1.B * P.A1)/((P.|.A1.B * P.A1 + P.|.A2.B
* P.A2) + P.|. A3.B * P.A3) & P.|.B.A2 = (P.|.A2.B * P.A2)/((P.|.A1.B * P.A1 +
P.|.A2.B * P.A2) + P.|. A3.B * P.A3) & P.|.B.A3 = (P.|.A3.B * P.A3)/((P.|.A1.B
  * P.A1 + P.|.A2.B * P.A2) + P.|. A3.B * P.A3)
proof
  let B,A1,A2,A3,P;
  assume that
A1: 0<P.B and
A2: 0<P.A1 and
A3: 0<P.A2 and
A4: 0<P.A3 and
A5: A1 misses A2 & A3=(A1 \/ A2)`;
  thus (P.|.A1.B * P.A1)/((P.|.A1.B * P.A1 + P.|.A2.B * P.A2) + P.|. A3.B * P.
  A3) = (P.|.A1.B * P.A1)/P.B by A2,A3,A4,A5,Th45
    .= P.|.B.A1 by A1,A2,Th49;
  thus (P.|.A2.B * P.A2)/((P.|.A1.B * P.A1 + P.|.A2.B * P.A2) + P.|. A3.B * P.
  A3) = (P.|.A2.B * P.A2)/P.B by A2,A3,A4,A5,Th45
    .= P.|.B.A2 by A1,A3,Th49;
  thus (P.|.A3.B * P.A3)/((P.|.A1.B * P.A1 + P.|.A2.B * P.A2) + P.|. A3.B * P.
  A3) = (P.|.A3.B * P.A3)/P.B by A2,A3,A4,A5,Th45
    .= P.|.B.A3 by A1,A4,Th49;
end;

theorem
  for A,B,P st 0 < P.B holds 1 - P.([#] Sigma \ A)/P.B <= P.|.B.A
proof
  let A,B,P;
  assume
A1: 0 < P.B;
  P.B + P.A - 1 <= P.(A /\ B) by Th25;
  then P.B + -(1 - P.A) <= P.(A /\ B);
  then P.B + -P.([#] Sigma \ A) <= P.(A /\ B) by PROB_1:68;
  then (P.B + -P.([#] Sigma \ A))/P.B <= P.(A /\ B)/P.B by A1,XREAL_1:74;
  then (P.B - P.([#] Sigma \ A))/P.B <= P.|.B.A by A1,Def7;
  then P.B/P.B - P.([#] Sigma \ A)/P.B <= P.|.B.A by XCMPLX_1:121;
  hence thesis by A1,XCMPLX_1:60;
end;

