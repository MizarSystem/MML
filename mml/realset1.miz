theorem Th12:
  for F being non trivial set holds for A being OnePoint of F
  holds F\A is non empty set
proof
  let F be non trivial set;
  let A be OnePoint of F;
  ex x being Element of F st A = {x} by Lm1;
  hence thesis by Th4;
end;

registration
