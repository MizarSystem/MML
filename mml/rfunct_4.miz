                then i in dom E1 by FINSEQ_1:def 3;
                then
A34:            E.i = E1.i by A7,FINSEQ_1:def 7;
                i in Seg len F1 by A29,FINSEQ_1:def 18;
                then i in dom F1 by FINSEQ_1:def 3;
