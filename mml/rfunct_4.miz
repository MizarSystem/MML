      .= (b-a)*((b-r)/(b-a))*f.a + (b-a)*((r-a)/(b-a)*f.b) by XCMPLX_1:4
      .= (b-a)*((b-r)/(b-a))*f.a + (b-a)*((r-a)/(b-a))*f.b by XCMPLX_1:4
