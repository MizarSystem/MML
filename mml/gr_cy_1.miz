::             Definition of cyclic group                  ::
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

Lm4: INT.Group = gr {@'1}
proof
  reconsider h = 1 as Element of INT by INT_1:def 2;
  reconsider h as Element of INT.Group;
  {h} c= the carrier of (Omega).INT.Group &
  (for G1 being strict Subgroup of INT.Group st {h} c= the carrier of G1 holds
  (Omega).INT.Group is Subgroup of G1 )
  proof
    for G1 st {h} c= the carrier of G1 holds (Omega).
    INT.Group is Subgroup of G1
    proof
      let G1;
      assume
A1:   {h} c= the carrier of G1;
      the carrier of (Omega).INT.Group c= the carrier of G1
      proof
        let x;
        assume that
A2:     x in the carrier of (Omega).INT.Group and
A3:     not x in the carrier of G1;
        reconsider x'=x as Integer by A2;
        h in {h} by TARSKI:def 1;
        then reconsider h''=h as Element of G1 by A1;
A4:     (h'')|^x' in the carrier of G1;
        (h'')|^x'=h|^x' by GROUP_4:4;
        hence contradiction by A3,A4,Th39;
      end;
      hence thesis by GROUP_2:66;
    end;
    hence thesis;
  end;
  hence thesis by GROUP_4:def 5;
end;

definition
  let IT be Group;
  attr IT is cyclic means
  :Def9:
  ex a being Element of IT st the multMagma of IT = gr {a};
end;

registration
  cluster strict cyclic Group;
  existence
  proof INT.Group is cyclic by Def9,Lm4;
    hence thesis;
  end;
end;

theorem Th40:
  (1).G is cyclic
proof
  1_G in {1_G} by TARSKI:def 1;
  then reconsider PG=1_G as Element of (1).G by GROUP_2:def 7;
  take PG;
  {PG} c= the carrier of (Omega).(1).G &
  ( for G1 being strict Subgroup of (1).G st {PG} c= the carrier of G1 holds
  (Omega).(1).G is Subgroup of G1 )
  proof
    for G1 being Subgroup of (1).G st {PG} c= the carrier of G1 holds
    (Omega).(1).G is Subgroup of G1
    proof
      let G1 be Subgroup of (1).G;
      assume {PG} c= the carrier of G1;
      then the carrier of (Omega).(1).G c=the carrier of G1 by GROUP_2:def 7;
      hence thesis by GROUP_2:66;
    end;
    hence thesis;
  end;
  hence thesis by GROUP_4:def 5;
end;

registration
  let G be Group;
  cluster (1).G -> cyclic;
  coherence by Th40;
end;

registration
  cluster strict finite cyclic Group;
  existence
  proof
    consider G be Group;
    take (1).G;
    thus thesis;
  end;
end;

theorem Th41:
  G is cyclic Group iff ex a being Element of G st
  for b being Element of G ex j1 st b=a|^j1
proof
  thus G is cyclic Group implies ex a being Element of G st
  for b being Element of G ex j1 st b=a|^j1
  proof
    assume G is cyclic Group;
    then consider a being Element of G such that
A1: the multMagma of G = gr {a} by Def9;
    take a;
    for b being Element of G ex j1 st b=a|^j1
    proof
      let b be Element of G;
      b in gr {a} by A1,STRUCT_0:def 5;
      hence thesis by Th25;
    end;
    hence thesis;
  end;
  given a being Element of G such that
A2: for b being Element of G ex j1 st b = a|^j1;
  for b being Element of G holds b in gr {a}
  proof
    let b be Element of G;
    ex j1 st b=a|^j1 by A2;
    hence thesis by Th25;
  end;
  then the multMagma of G = gr {a} by GROUP_2:71;
  hence thesis by Def9;
end;

theorem Th42:
  for G being finite Group holds G is cyclic iff ex a being Element of G st
  for b being Element of G ex n st b = a|^n
proof
  let G be finite Group;
  thus G is cyclic implies ex a being Element of G st
  for b being Element of G ex n st b=a|^n
  proof
    assume G is cyclic;
    then consider a being Element of G such that
A1: for b being Element of G ex j2 st b=a|^j2 by Th41;
    take a;
    let b be Element of G;
    consider j2 such that
A2: b = a|^j2 by A1;
    consider n such that
A3: j2=n or j2=-n by INT_1:8;
    per cases by A3;
    suppose j2=n;
      hence thesis by A2;
    end;
    suppose
A4:   j2=-n;
      n mod card G <=card G by NAT_D:1;
      then reconsider q'=card G -( n mod card G) as Element of NAT by INT_1:18;
      take q';
      b=(a|^n)" by A2,A4,GROUP_1:71
        .= a|^q' by Th30;
      hence thesis;
    end;
  end;
  given a being Element of G such that
A5: for b being Element of G ex n st b=a|^n;
  for b being Element of G ex j2 st b=a|^j2
  proof
    let b be Element of G;
    consider n such that
A6: b=a|^n by A5;
    reconsider n as Integer;
    take n;
    thus thesis by A6;
  end;
  hence thesis by Th41;
end;

theorem Th43:
  for G being finite Group holds
  ( G is cyclic iff ex a being Element of G st ord a = card G )
proof
  let G be finite Group;
  thus G is cyclic implies ex a being Element of G st ord a = card G
  proof
    assume G is cyclic;
    then consider a being Element of G such that
A1: the multMagma of G = gr {a} by Def9;
    take a;
    reconsider H = the multMagma of G as Group;
    ord a = card H by A1,Th27;
    hence thesis;
  end;
  given a being Element of G such that
A2: ord a = card G;
  ex a being Element of G st the multMagma of G = gr {a}
  proof
    consider a being Element of G such that
A3: ord a = card G by A2;
    take a;
    card gr {a} = card G by A3,Th27;
    hence thesis by GROUP_2:85;
  end;
  hence thesis by Def9;
end;

theorem
  for G being finite Group, H being strict Subgroup of G st G is cyclic holds
  H is cyclic
proof
  let G be finite Group, H be strict Subgroup of G;
  assume
A1: G is cyclic;
  consider a be Element of G such that
A2: for b being Element of G ex n st b = a|^n by A1,Th42;
A3: card H >= 1 by GROUP_1:90;
  per cases by A3,XXREAL_0:1;
  suppose card H = 1;
    then H = (1).G by GROUP_2:82;
    hence thesis;
  end;
  suppose card H > 1;
    then consider h being Element of H such that
A4: h <> 1_H by Th31;
    defpred P[Nat] means $1 > 0 & a|^$1 is Element of H;
    h is Element of G by GROUP_2:51;
    then consider n such that
A5: h = a|^n by A2;
    n <> 0
    proof
      assume n = 0;
      then h = 1_G by A5,GROUP_1:59
        .= 1_H by GROUP_2:53;
      hence contradiction by A4;
    end;
    then n > 0;
    then
A6: ex n being Nat st P[n] by A5;
    ex h1 being Element of H st for b being Element of H ex s st b = h1|^s
    proof
      ex k be Nat st P[k] & for n be Nat st P[n] holds k <= n
      from NAT_1:sch 5(A6);
      then consider n being Nat such that
A7:   n>0 & a|^n is Element of H and
A8:   for k be Nat st (k>0 & a|^k is Element of H) holds n <= k;
      consider h1 being Element of H such that
A9:   h1 = a|^n by A7;
      take h1;
      for b being Element of H ex s st b = h1|^s
      proof
        let b be Element of H;
        b is Element of G by GROUP_2:51;
        then consider p such that
A10:    b = a|^p by A2;
        consider s,r being Nat such that
A11:    p = (n*s) + r and
A12:    r < n by A7,NAT_1:17;
        reconsider s,r as Element of NAT by ORDINAL1:def 13;
A13:    r =0
        proof
          assume r<>0;
          then
A14:      r >0;
A15:      a|^p = a|^(n*s) * (a|^r) by A11,GROUP_1:48;
          h1|^s=a|^n|^s by A9,GROUP_4:3;
          then (h1|^s)"=(a|^n|^s)" by GROUP_2:57
            .= (a|^(n * s ))" by GROUP_1:50;
          then reconsider g= (a|^(n*s))" as Element of H;
          reconsider b=a|^p as Element of H by A10;
          (a|^(n*s))" * (a|^p)
          = ((a|^(n*s))" *(a|^(n*s)))*(a|^r) by A15,GROUP_1:def 4
            .= 1_G *(a|^r) by GROUP_1:def 6
            .= a|^ r by GROUP_1:def 5;
          then g*b = a|^r by GROUP_2:52;
          hence contradiction by A8,A12,A14;
        end;
        take s;
        a|^p = a|^n|^s by A11,A13,GROUP_1:50
          .= h1|^s by A9,GROUP_4:3;
        hence thesis by A10;
      end;
      hence thesis;
    end;
    hence thesis by Th42;
  end;
end;

theorem
  for G being strict finite Group holds card G = p & p is prime implies
  G is cyclic Group
proof
  let G be strict finite Group;
  assume that
A1: card (G) = p and
A2: p is prime;
  ex a being Element of G st ord a = p
  proof
    assume
A3: for a being Element of G holds ord a <> p;
A4: now
      let a be Element of G;
      ord a divides p by A1,Th28;
      then ord a = 1 or ord a = p by A2,INT_2:def 5;
      hence ord a = 1 by A3;
    end;
    the carrier of G c= the carrier of (1).G
    proof
      for x being set holds x in the carrier of G implies
      x in the carrier of (1).G
      proof
        let x be set;
        assume x in the carrier of G;
        then reconsider x'=x as Element of G;
        ord x' = 1 by A4;
        then x' = 1_G by GROUP_1:85;
        then x' in {1_G} by TARSKI:def 1;
        hence thesis by GROUP_2:def 7;
      end;
      hence thesis by TARSKI:def 3;
    end;
    then G = (1).G by GROUP_2:70;
    then card G = 1 by GROUP_2:81;
    hence contradiction by A1,A2,INT_2:def 5;
  end;
  hence thesis by A1,Th43;
end;

theorem Th46:
  for n st n>0 ex g being Element of INT.Group(n) st
  for b being Element of INT.Group(n) ex j1 st b = g|^j1
proof
  let n;
  assume
A1: n>0;
  then
A2: INT.Group(n) = multMagma(#Segm(n),addint(n)#) by Def6;
  0 +1 < n+1 by A1,XREAL_1:8;
  then
A3: n >=1 by NAT_1:13;
  now per cases by A3,XXREAL_0:1;
    suppose n=1;
      then the carrier of INT.Group(n) = {1_INT.Group(n)} by A2,Th36,CARD_1:87
        .= the carrier of (1).INT.Group(n) by GROUP_2:def 7;
      then INT.Group(n) = (1).INT.Group(n) by GROUP_2:70;
      hence thesis by Th41;
    end;
    suppose n>1;
      then reconsider g'= 1 as Element of Segm(n) by NAT_1:45;
      reconsider g=g' as Element of INT.Group(n) by A2;
      for b being Element of INT.Group(n) ex j1 st b = g|^j1
      proof
        let b be Element of INT.Group(n);
        reconsider b'=b as Element of NAT by A2,Lm1;
        defpred P[Element of NAT] means g|^$1 = $1 mod n;
        g|^0 = 1_INT.Group(n) by GROUP_1:43
          .= 0 by A1,Th36
          .= 0 mod n by NAT_D:26;
        then
A4:     P[0];
A5:     for k st P[k] holds P[k+1]
        proof
          let k;
          k mod n < n by A1,NAT_D:1;
          then reconsider e=(k mod n) as Element of Segm(n) by NAT_1:45;
          assume
A6:       g|^k = k mod n;
          g|^(k+1) =g|^k*(g|^1) by GROUP_1:48
            .=g|^k*g by GROUP_1:44
            .= (e +g') mod n by A2,A6,Def5
            .=(k+1) mod n by NAT_D:22;
          hence thesis;
        end;
A7:     for k holds P[k] from NAT_1:sch 1(A4,A5);
A8:     b'<n by A2,NAT_1:45;
A9:     g|^b'=b' mod n by A7
          .= b by A8,NAT_D:24;
        reconsider b' as Integer;
        take b';
        thus thesis by A9;
      end;
      hence thesis;
    end;
  end;
  hence thesis;
end;

registration
  cluster cyclic -> commutative Group;
  coherence
  proof
    let G;
    assume
A1: G is cyclic;
    for a,b being Element of G holds a * b = b * a
    proof
      let a,b be Element of G;
      ex e being Element of G st (ex j2 st a=e|^j2 & ex j3 st b=e|^j3)
      proof
        consider e being Element of G such that
A2:     for d being Element of G ex j3 st d=e|^j3 by A1,Th41;
        take e;
A3:     ex j2 st a=e|^j2 by A2;
        ex j3 st b=e|^j3 by A2;
        hence thesis by A3;
      end;
      then consider e being Element of G,j2,j3 such that
A4:   a = e|^j2 & b = e|^j3;
      a * b = e |^(j3 + j2) by A4,GROUP_1:63
        .= b * a by A4,GROUP_1:63;
      hence thesis;
    end;
    hence thesis by GROUP_1:def 16;
  end;
end;

theorem
  INT.Group = gr {@'1} by Lm4;

theorem Th48:
  INT.Group is cyclic
proof
  take @'1;
  thus thesis by Lm4;
end;

registration
  cluster INT.Group -> cyclic;
  coherence by Th48;
end;

theorem
  n > 0 implies INT.Group(n) is cyclic
proof
  assume n > 0;
  then ex g being Element of INT.Group(n) st
  for b being Element of INT.Group(n) ex j1 st b = g|^j1 by Th46;
  hence thesis by Th41;
end;

theorem
  INT.Group is commutative;

