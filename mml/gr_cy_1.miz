theorem Th25:
  b in gr {a} iff ex j1 st b=a|^j1
proof
A1: b in gr {a} implies ex j1 st b=a|^j1
  proof
    assume b in gr {a};
    then consider F,I such that
A2: len F = len I and
A3: rng F c= {a} and
A4: Product(F |^ I ) = b by GROUP_4:37;
    take Sum I;
A5: dom ((len F) |-> a) = Seg len F by FUNCOP_1:19
      .= dom F by FINSEQ_1:def 3;
    for p be Nat st p in dom F holds F.p = ((len F)|-> a).p
    proof
      let p be Nat;
A6:   dom F = Seg len F by FINSEQ_1:def 3;
      assume
A7:   p in dom F;
      then F.p in rng F by FUNCT_1:def 5;
      then F.p = a by A3,TARSKI:def 1
        .= ((len F)|-> a).p by A6,A7,FUNCOP_1:13;
      hence thesis;
    end;
    then b= Product(((len I) |-> a)|^I) by A2,A4,A5,FINSEQ_1:17
      .= a|^Sum I by Th24;
    hence thesis;
  end;
  (ex j1 st b=a|^j1) implies b in gr {a}
  proof
    given j1 such that
A8: b =a|^j1;
    consider n such that
A9: j1 = n or j1 = -n by INT_1:8;
    per cases by A9;
    suppose
A10:  j1=n;
      ex F,I st len F = len I & rng F c= {a} & Product(F |^ I) = b
      proof
        take F =(n |-> a);
A11:    len F = n by FINSEQ_2:69
          .= len(n |->@ 1) by FINSEQ_2:69;
A12:    rng F c= {a} by FUNCOP_1:19;
        Product(F|^(n |->@ 1)) = Product(F|^(len F |->@ 1)) by FINSEQ_2:69
          .=Product(n |-> a) by GROUP_4:31
          .=b by A8,A10,GROUP_4:15;
        hence thesis by A11,A12;
      end;
      hence thesis by GROUP_4:37;
    end;
    suppose j1 = -n;
      then
A13:  b"=a|^(-(-n)) by A8,GROUP_1:70
        .= a|^n;
      ex F,I st len F = len I & rng F c= {a} & Product(F |^ I) = b"
      proof
        take F =(n |-> a);
A14:    len F = n by FINSEQ_2:69
          .= len(n |->@ 1) by FINSEQ_2:69;
A15:    rng F c= {a} by FUNCOP_1:19;
        Product(F|^(n |->@ 1)) = Product(F|^(len F |->@ 1)) by FINSEQ_2: 69
          .=Product(n |-> a) by GROUP_4:31
          .= b" by A13,GROUP_4:15;
        hence thesis by A14,A15;
      end;
      then b" in gr {a} by GROUP_4:37;
      then b"" in gr {a} by GROUP_2:60;
      hence thesis by GROUP_1:19;
    end;
  end;
  hence thesis by A1;
end;

theorem Th26:
  for G being finite Group, a being Element of G
   holds a is not being_of_order_0
proof
  let G be finite Group, a be Element of G;
  ex n st n<> 0 & a|^n = 1_G
  proof
    deffunc F(Nat) = a|^$1;
    consider F being FinSequence such that
A1: len F = card G +1 and
A2: for p be Nat st p in dom F holds F.p = F(p) from FINSEQ_1:sch 2;
A3: dom F = Seg (card G + 1) by A1,FINSEQ_1:def 3;
A4: for y st y in rng F holds ex n st y=a|^n
    proof
      let y;
      assume y in rng F;
      then consider x such that
A5:   x in dom F and
A6:   F.x=y by FUNCT_1:def 5;
      reconsider n=x as Element of NAT by A5;
      take n;
      thus thesis by A2,A5,A6;
    end;
    rng F c= the carrier of G
    proof
      for x holds x in rng F implies x in the carrier of G
      proof
        let y;
        assume y in rng F;
        then ex n st y= a|^n by A4;
        hence thesis;
      end;
      hence thesis by TARSKI:def 3;
    end;
    then reconsider F'=F as Function of Seg (card G +1),the carrier of G by A3,
    FUNCT_2:def 1,RELSET_1:11;
A7: card card G = card the carrier of G;
A8: card Seg(card G+1) = card (card G +1) by FINSEQ_1:76;
    card G < card G +1 by XREAL_1:31;
    then card the carrier of G in card Seg (card G +1) by A7,A8,NAT_1:42;
    then consider x,y such that
A9: x in Seg (card G +1) and
A10: y in Seg (card G +1) and
A11: x <> y and
A12: F'.x = F'.y by FINSEQ_4:80;
    reconsider p=x,n=y as Element of NAT by A9,A10;
    per cases by A11,XXREAL_0:1;
    suppose
A13:  n>p;
      then reconsider t = n-p as Element of NAT by INT_1:18;
      take t;
      F'.p =a|^p by A2,A9,A3;
      then a|^n=a|^p by A2,A10,A12,A3;
      then a|^(n+-p)=a|^p *a|^(-p) by GROUP_1:64;
      then a|^t =a|^(p+-p) by GROUP_1:64;
      hence thesis by A13,GROUP_1:59;
    end;
    suppose
A14:  p>n;
      then reconsider t = p-n as Element of NAT by INT_1:18;
      take t;
      F'.p =a|^p by A2,A9,A3;
      then a|^n=a|^p by A2,A10,A12,A3;
      then a|^(p+-n)=a|^n *a|^(-n) by GROUP_1:64;
      then a|^t =a|^(n+-n) by GROUP_1:64;
      hence thesis by A14,GROUP_1:59;
    end;
  end;
  hence thesis by GROUP_1:def 11;
end;

theorem Th27:
  for G being finite Group, a being Element of G holds ord a = card gr {a}
proof
  let G be finite Group, a be Element of G;
  deffunc F(Nat) = a|^$1;
  consider F being FinSequence such that
A1: len F = ord a and
A2: for p be Nat st p in dom F holds F.p = F(p) from FINSEQ_1:sch 2;
A3: dom F = Seg ord a by A1,FINSEQ_1:def 3;
  a is not being_of_order_0 by Th26;
  then
A4: ord a <> 0 by GROUP_1:def 12;
  then
A5: ord a >0;
A6: a in rng F
  proof
    ex x st x in dom F & F.x=a
    proof
      set x'=1;
A7:   x' in dom F
      proof
        (ord a)+x' > 0+x' by A5,XREAL_1:8;
        then (ord a) >= x' by NAT_1:13;
        hence thesis by A3;
      end;
      then F.x'=a|^x' by A2
        .=a by GROUP_1:44;
      hence thesis by A7;
    end;
    hence thesis by FUNCT_1:def 5;
  end;
A8: rng F = the carrier of gr {a}
  proof
A9: for y st y in rng F holds ex n st y=a|^n
    proof
      let y;
      assume y in rng F;
      then consider x such that
A10:  x in dom F and
A11:  F.x=y by FUNCT_1:def 5;
      reconsider n=x as Element of NAT by A10;
      take n;
      thus thesis by A2,A10,A11;
    end;
A12: rng F c= the carrier of gr {a}
    proof
      for x st x in rng F holds x in the carrier of gr {a}
      proof
        let y;
        assume y in rng F;
        then consider n such that
A13:    y= a|^n by A9;
        y in gr {a} by A13,Th25;
        hence thesis by STRUCT_0:def 5;
      end;
      hence thesis by TARSKI:def 3;
    end;
    the carrier of gr {a} c= rng F
    proof
      ex H being strict Subgroup of G st the carrier of H = rng F
      proof
        reconsider car=rng F as non empty set by A6;
A14:    dom(the multF of G)=
        [:the carrier of G,the carrier of G:] by FUNCT_2:def 1;
        the carrier of gr {a} c= the carrier of G by GROUP_2:def 5;
        then
A15:    car c= the carrier of G by A12,XBOOLE_1:1;
        then
A16:    dom((the multF of G)||car)=[:car,car:] by A14,RELAT_1:91,
        ZFMISC_1:119;
        rng((the multF of G)||car) c= car
        proof
          for y st y in rng((the multF of G)||car) holds y in car
          proof
            set f=(the multF of G)||car;
            let y;
            assume y in rng(f);
            then consider x such that
A17:        x in dom(f) and
A18:        f.x=y by FUNCT_1:def 5;
            consider xp,yp such that
A19:        [xp,yp]=x by A16,A17,RELAT_1:def 1;
            xp in car by A16,A17,A19,ZFMISC_1:106;
            then consider p such that
A20:        xp = a|^p by A9;
            yp in car by A16,A17,A19,ZFMISC_1:106;
            then consider s such that
A21:        yp = a|^s by A9;
A22:        y = a|^p*(a|^s) by A17,A18,A19,A20,A21,FUNCT_1:70
              .= a|^(p+s) by GROUP_1:48;
            a|^(p+s) in car
            proof
              ex x st x in dom F & F.x=a|^(p+s)
              proof
                set t=(p+s) mod (ord a);
A23:            t < ord a by A5,NAT_D:1;
                per cases;
                suppose
A24:              t=0;
A25:              a

|^(p+s)=a|^((ord a)*((p+s) div (ord a)) + ((p+s) mod (ord a))) by A5, NAT_D:2

.=a|^((ord a)*((p+s) div (ord a)))*(a|^ ((p+s) mod (ord a))) by GROUP_1:48

.=a|^(ord a)|^((p+s) div (ord a))*(a|^ ((p+s) mod (ord a))) by GROUP_1:50

.=(1_G)|^((p+s) div (ord a))*(a|^ ((p+s) mod (ord a))) by GROUP_1:82
                    .=(1_G) *(a|^ ((p+s) mod (ord a))) by GROUP_1:42
                    .=a|^0 by A24,GROUP_1:def 5
                    .= 1_G by GROUP_1:43
                    .= a|^(ord a) by GROUP_1:82
                    .= F.ord a by A2,A4,FINSEQ_1:5,A3;
                  take x = ord a;
                  thus x in dom F & F.x=a|^(p+s) by A3,A4,A25,FINSEQ_1:5;
                end;
                suppose t>0;
                  then t+1 > 0+1 by XREAL_1:8;
                  then
A26:              t >= 1 by NAT_1:13;
                  take x = t;
A27:              t in dom F by A3,A23,A26;

a|^(p+s)=a|^((ord a)*((p+s) div (ord a)) + ((p+s) mod (ord a))) by A5, NAT_D:2

.=a|^((ord a)*((p+s) div (ord a))) *(a|^ ((p+s) mod (ord a))) by GROUP_1:48

.=a|^(ord a)|^((p+s) div (ord a)) *(a|^ ((p+s) mod (ord a))) by GROUP_1:50

.=(1_G)|^((p+s) div (ord a)) *(a|^ ((p+s) mod (ord a))) by GROUP_1:82
                    .=(1_G) *(a|^ ((p+s) mod (ord a))) by GROUP_1:42
                    .=a|^ ((p+s) mod (ord a)) by GROUP_1:def 5;
                  hence x in dom F & F.x=a|^(p+s) by A2,A27;
                end;
              end;
              hence thesis by FUNCT_1:def 5;
            end;
            hence thesis by A22;
          end;
          hence thesis by TARSKI:def 3;
        end;
        then reconsider op=(the multF of G)||car as BinOp of car
        by A16,FUNCT_2:def 1,RELSET_1:11;
        set H=multMagma(#car,op#);
        H is Group
        proof
A28:      for f,g being Element of H, f',g' being Element of G
          st f = f' & g = g' holds f'*g' = f*g
          proof
            let f,g be Element of H;
            let f',g' be Element of G;
            assume
A29:        f = f' & g =g';
            f*g = ((the multF of G)||car).[f,g];
            hence thesis by A29,FUNCT_1:72;
          end;
A30:      for f,g,h being Element of H holds (f * g) * h = f * (g * h)
          proof
            let f,g,h be Element of H;
            reconsider f'=f,g'=g,h'=h as Element of G by A15,TARSKI:def 3;
A31:        f'*g' = f*g by A28;
A32:        g * h = g' * h' by A28;
            (f*g)*h =(f'*g')*h' by A28,A31
              .= f'*(g'*h') by GROUP_1:def 4
              .=f*(g*h) by A28,A32;
            hence thesis;
          end;
          ex e being Element of H st for h being Element of H holds
          h * e = h & e * h = h &
          ex g being Element of H st h * g = e & g * h = e
          proof
            a|^(ord a) in car
            proof
              ex x st x in dom F & F.x=a|^(ord a)
              proof
                set x'=(ord a);
                F.x'=a|^x' by A2,A4,FINSEQ_1:5,A3;
                hence thesis by A3,A4,FINSEQ_1:5;
              end;
              hence thesis by FUNCT_1:def 5;
            end;
            then reconsider e=1_G as Element of H by GROUP_1:82;
            take e;
            for h being Element of H holds h * e = h & e * h = h &
            ex g being Element of H st h * g = e & g * h = e
            proof
              let h be Element of H;
              reconsider h'=h as Element of G by A15,TARSKI:def 3;
              thus h * e = h
              proof
                h*e = h' *(1_G) by A28
                  .= h' by GROUP_1:def 5;
                hence thesis;
              end;
              thus e * h = h
              proof
                e*h = (1_G)*h' by A28
                  .= h' by GROUP_1:def 5;
                hence thesis;
              end;
              thus ex g being Element of H st h * g = e & g * h = e
              proof
                ex n st h=a|^n & (1 <= n & ord a >= n)
                proof
                  consider x such that
A33:              x in dom F and
A34:              F.x=h by FUNCT_1:def 5;
                  reconsider n=x as Element of NAT by A33;
                  take n;
                  thus thesis by A2,A3,A33,A34,FINSEQ_1:3;
                end;
                then consider n such that
A35:            h=a|^n and
A36:            ord a >= n;
                a|^(ord a - n) in car
                proof
                  ex x st x in dom F & F.x =a|^(ord a - n)
                  proof
                    per cases by A36,XXREAL_0:1;
                    suppose
A37:                  ord a = n;
                      set x = ord a;
                      F.x=a|^x by A2,A4,FINSEQ_1:5,A3
                        .= 1_G by GROUP_1:82
                        .= a|^(ord a - n) by A37,GROUP_1:43;
                      hence thesis by A3,A4,FINSEQ_1:5;
                    end;
                    suppose
A38:                  ord a > n;

then reconsider x = ord a - n as Element of NAT by INT_1:18;
                      take x;
                      x in Seg ord a
                      proof
                        reconsider r1=ord a,r2=n as Real;
A39:                    x >= 1
                        proof
                          r1 - r2 > r2 -r2 by A38,XREAL_1:11;
                          then x >= 0 +1 by NAT_1:13;
                          hence x >= 1;
                        end;
                        x <= ord a
                        proof
                          r1 <= r1 + r2 by NAT_1:11;
                          hence thesis by XREAL_1:22;
                        end;
                        hence thesis by A39;
                      end;
                      hence thesis by A2,A3;
                    end;
                  end;
                  hence thesis by FUNCT_1:def 5;
                end;
                then reconsider g =a|^(ord a - n) as Element of H;
A40:            n+(ord a-n) =ord a;
A41:            h * g = e
                proof
                  h * g =a|^n *(a|^(ord a - n)) by A28,A35
                    .=a|^(ord a) by A40,GROUP_1:64
                    .= e by GROUP_1:82;
                  hence thesis;
                end;
                g * h = e
                proof
                  g * h =a|^(ord a - n) * (a|^n) by A28,A35
                    .=a|^(ord a) by A40,GROUP_1:65
                    .= e by GROUP_1:82;
                  hence thesis;
                end;
                hence thesis by A41;
              end;
            end;
            hence thesis;
          end;
          hence thesis by A30,GROUP_1:5;
        end;
        then reconsider H1=H as Group;
        the carrier of gr {a} c= the carrier of G by GROUP_2:def 5;
        then the carrier of H1 c= the carrier of G by A12,XBOOLE_1:1;
        then H1 is Subgroup of G by GROUP_2:def 5;
        hence thesis;
      end;
      then consider H being strict Subgroup of G such that
A42:  the carrier of H = rng F;
      {a} c= the carrier of H by A6,A42,ZFMISC_1:37;
      then gr {a} is Subgroup of H by GROUP_4:def 5;
      hence the carrier of gr {a} c= rng F by A42,GROUP_2:def 5;
    end;
    hence thesis by A12,XBOOLE_0:def 10;
  end;
  F is one-to-one
  proof
    let x,y;
    assume that
A43: x in dom F and
A44: y in dom F and
A45: F.x = F.y and
A46: x<>y;
    reconsider p=x as Element of NAT by A43;
    reconsider s=y as Element of NAT by A44;
    reconsider s'=s,p'=p,z= ord a as Real;
A47: F.p=a|^p by A2,A43;
A48: F.s=a|^s by A2,A44;
    per cases;
    suppose p<=s;
      then reconsider r1=s-p as Element of NAT by INT_1:18;
      1_G=a|^s*(a|^p)" by A45,A47,A48,GROUP_1:def 6;
      then a|^0=a|^s*(a|^p)" by GROUP_1:43;
      then a|^0=a|^s*(a|^(-p)) by GROUP_1:71;
      then a|^0=a|^(s+(-p)) by GROUP_1:64;
      then
A49:  1_G=a|^r1 by GROUP_1:43;
A50:  r1 <> 0 by A46;
A51:  p >0 by A3,A43,FINSEQ_1:3;
A52:  r1 < ord a
      proof
A53:    s'<=z by A3,A44,FINSEQ_1:3;
        z<z+p' by A51,XREAL_1:31;
        then s'<z+p' by A53,XXREAL_0:2;
        then s'-p'<z+p'-p' by XREAL_1:11;
        hence thesis;
      end;
      a is not being_of_order_0 by Th26;
      hence thesis by A49,A50,A52,GROUP_1:def 12;
    end;
    suppose s<=p;
      then reconsider r2=p-s as Element of NAT by INT_1:18;
      1_G=a|^p*(a|^s)" by A45,A47,A48,GROUP_1:def 6;
      then a|^0=a|^p*(a|^s)" by GROUP_1:43;
      then a|^0=a|^p*(a|^(-s)) by GROUP_1:71;
      then a|^0=a|^(p+(-s)) by GROUP_1:64;
      then
A54:  1_G=a|^r2 by GROUP_1:43;
A55:  r2 <> 0 by A46;
A56:  s >0 by A3,A44,FINSEQ_1:3;
A57:  r2 < ord a
      proof
A58:    p'<=z by A3,A43,FINSEQ_1:3;
        z<z+s' by A56,XREAL_1:31;
        then p'<z+s' by A58,XXREAL_0:2;
        then p'-s'<z+s'-s' by XREAL_1:11;
        hence thesis;
      end;
      a is not being_of_order_0 by Th26;
      hence thesis by A54,A55,A57,GROUP_1:def 12;
    end;
  end;
  then
A59: Seg ord a,the carrier of gr {a} are_equipotent by A3,A8, WELLORD2: def 4;
  set ca = the carrier of gr {a};
  reconsider So = Seg ord a as finite set;
  card So = card ca by A59,CARD_1:21;
  hence thesis by FINSEQ_1:78;
end;

theorem Th28:
  for G being finite Group, a being Element of G holds ord a divides card G
proof
  let G be finite Group, a be Element of G;
  ord a = card gr {a} by Th27;
  hence ord a divides card G by GROUP_2:178;
end;

theorem Th29:
  for G being finite Group, a being Element of G holds a|^card G = 1_G
proof
  let G be finite Group, a be Element of G;
  ord a divides card G by Th28;
  then consider t being Nat such that
A1: card G = ord a * t by NAT_D:def 3;
  a|^card G = a |^ ord a |^ t by A1,GROUP_1:50
    .= (1_G) |^ t by GROUP_1:82
    .= 1_G by GROUP_1:42;
  hence thesis;
end;

theorem Th30:
  for G being finite Group, a being Element of G holds
  (a|^n)" = a|^(card G - (n mod card G))
proof
  let G be finite Group;
  let a be Element of G;
  set q = card G;
  set p' = n mod q;
  n mod q <=q by NAT_D:1;
  then reconsider q'=q -( n mod q) as Element of NAT by INT_1:18;
  a|^n*(a|^(q-(n mod q)))=a|^(n+q') by GROUP_1:48
    .= a|^((q*(n div q)+(n mod q))+q') by NAT_D:2
    .= a|^(q*(n div q)+q +(-p'+p'))
    .= a|^(q*(n div q)+q)*(a|^(-p'+p')) by GROUP_1:64
    .= a|^(q*(n div q)+q)*(a|^(-p')*(a|^p')) by GROUP_1:65
    .= a|^(q*(n div q)+q)*((a|^p')"*(a|^p')) by GROUP_1:71
    .= a|^(q*(n div q)+q)*(1_G) by GROUP_1:def 6
    .= a|^(q*(n div q+1)) by GROUP_1:def 5
    .= a|^q|^(n div q+1) by GROUP_1:50
    .= (1_G)|^(n div q+1) by Th29
    .= 1_G by GROUP_1:42;
  hence thesis by GROUP_1:20;
end;

registration
  let G be associative (non empty multMagma);
  cluster the multMagma of G -> associative;
  coherence
  proof
    set H = the multMagma of G;
A1: the multF of G is associative by GROUP_1:31;
    let x,y,z be Element of H;
    thus thesis by A1,BINOP_1:def 3;
  end;
end;

registration
  let G be Group;
  cluster the multMagma of G -> Group-like;
  coherence
  proof
    set H = the multMagma of G;
    reconsider e = 1_G as Element of H;
    take e;
    let h be Element of H;
    reconsider h' = h as Element of G;
    thus h * e = h' * 1_G
      .= h by GROUP_1:def 5;
    thus e * h = 1_G * h'
      .= h by GROUP_1:def 5;
    reconsider g = h'" as Element of H;
    take g;
    thus h * g = h' * h'"
      .= e by GROUP_1:def 6;
    thus g * h = h'" * h'
      .= e by GROUP_1:def 6;
  end;
end;

theorem Th31:
  for G being strict finite Group st card G > 1
  ex a being Element of G st a <> 1_G
proof
  let G be strict finite Group;
  assume that
A1: card G > 1 and
A2: for a being Element of G holds a = 1_G;
  for a being Element of G holds a in (1).G
  proof
    let a be Element of G;
    a = 1_G by A2;
    then a in {1_G} by TARSKI:def 1;
    then a in the carrier of (1).G by GROUP_2:def 7;
    hence thesis by STRUCT_0:def 5;
  end;
  then the multMagma of G = (1).G by GROUP_2:71;
  hence contradiction by A1,GROUP_2:81;
end;

theorem
  for G being strict finite Group st card G = p & p is prime holds
  for H being strict Subgroup of G holds H = (1).G or H = G
proof
  let G be strict finite Group;
  assume that
A1: card G = p and
A2: p is prime;
  let H be strict Subgroup of G;
  card H divides p by A1,GROUP_2:178;
  then card H = 1 or card H = p by A2,INT_2:def 5;
  hence thesis by A1,GROUP_2:82,85;
end;

theorem Th33:
  multMagma(#INT,addint#) is associative Group-like
proof
  set G = multMagma (# INT, addint #);
  thus for h,g,f being Element of G holds (h * g) * f = h * (g * f)
  proof
    let h,g,f be Element of G;
    reconsider A=h,B = g, C = f as Integer;
A1: h * g = A + B by Th14;
A2: g * f = B + C by Th14;
    thus (h * g) * f = A + B + C by A1,Th14
      .= A + (B + C)
      .= h * (g * f) by A2,Th14;
  end;
  reconsider e=0 as Element of G by INT_1:def 2;
  take e;
  let h be Element of G;
  reconsider A = h as Integer;
  thus h * e = A + 0 by Th14
    .= h;
  thus e * h = 0 + A by Th14
    .= h;
  reconsider g = - A as Element of G by INT_1:def 2;
  take g;
  thus h * g = A + (- A) by Th14
    .= e;
  thus g * h = (- A) + A by Th14
    .= e;
end;

definition
  func INT.Group -> strict Group equals

  multMagma(#INT,addint#);
  coherence by Th33;
end;

registration
  cluster -> integer Element of INT.Group;
  coherence;
end;

registration
  let a,b be Element of INT.Group;
  identify a*b with a+b;
  compatibility by BINOP_2:def 20;
end;

registration
  let n be natural number;
  cluster -> natural Element of Segm n;
  coherence;
end;

definition
  let n be natural number such that
A1: n > 0;
  func addint(n) -> BinOp of Segm(n) means
  :Def5:
  for k,l being Element of Segm(n) holds it.(k,l) = (k+l) mod n;
  existence
  proof
    reconsider n as non zero natural number by A1;
    defpred P[Element of Segm n,Element of Segm n,set] means
    $3 = ($1+$2) mod n;
A2: for k,l being Element of Segm(n) ex c being Element of Segm(n) st P[k,l,c]
    proof
      let k,l be Element of Segm(n);
      reconsider k'=k,l'=l as Element of NAT;
      ((k'+l') mod n) < n by NAT_D:1;
      then reconsider c = (k'+l') mod n as Element of Segm(n) by NAT_1:45;
      take c;
      thus thesis;
    end;
    ex o being BinOp of Segm n st for a,b being Element of Segm n holds
    P[a,b,o.(a,b)] from BINOP_1:sch 3(A2);
    hence thesis;
  end;
  uniqueness
  proof
    let i1,i2 be BinOp of Segm(n) such that
A3: for k,l being Element of Segm(n) holds i1.(k,l)=((k+l) mod n) and
A4: for k,l being Element of Segm(n) holds i2.(k,l)=((k+l) mod n);
    for k,l being Element of Segm(n) holds i1.(k,l)=i2.(k,l)
    proof
      let k,l be Element of Segm(n);
      thus i1.(k,l)=((k+l) mod n) by A3
        .=i2.(k,l) by A4;
    end;
    hence thesis by BINOP_1:2;
  end;
end;

theorem Th34:
  for n being non zero natural number holds
  multMagma(#Segm(n),addint(n)#) is associative Group-like
proof
  let n be non zero natural number;
  set G = multMagma (# Segm(n), addint(n) #);
  thus for h,g,f being Element of G holds (h * g) * f = h * (g * f)
  proof
    let h,g,f be Element of G;
    reconsider A = h, B = g, C = f as Element of Segm(n);
A1: h * g = (A + B) mod n by Def5;
A2: g * f = (B + C) mod n by Def5;
    thus (h * g) * f = (((A + B) mod n) + C) mod n by A1,Def5
      .= ((A + B) + C) mod n by NAT_D:22
      .=(A + (B + C)) mod n
      .=(A + ((B + C) mod n)) mod n by NAT_D:22
      .= h * (g * f) by A2,Def5;
  end;
  reconsider e=0 as Element of G by NAT_1:45;
  take e;
  let h be Element of G;
  reconsider A = h as Element of Segm(n);
  reconsider A as Element of NAT;
A3: A < n by NAT_1:45;
  thus h * e = (A + 0) mod n by Def5
    .= h by A3,NAT_D:24;
  thus e * h = (0 + A) mod n by Def5
    .= h by A3,NAT_D:24;
  consider p being Nat such that
A4: n=A+p by A3,NAT_1:10;
A5: p <= n by A4,NAT_1:12;
  (p mod n) < n by NAT_D:1;
  then reconsider g = p mod n as Element of G by NAT_1:45;
  take g;
  reconsider B=g as Element of Segm(n);
  thus h * g =e
  proof
    per cases by A5,XXREAL_0:1;
    suppose
A6:   p = n;
      h * g = (A +B) mod n by Def5
        .= (0 * n) mod n by A4,A6,NAT_D:25
        .= e by NAT_D:13;
      hence thesis;
    end;
    suppose
A7:   p < n;
      h * g = (A +B) mod n by Def5
        .= n mod n by A4,A7,NAT_D:24
        .= e by NAT_D:25;
      hence thesis;
    end;
  end;
  thus g * h = e
  proof
    per cases by A5,XXREAL_0:1;
    suppose p = n;
      then g * h = (n mod n + 0) mod n by A4,Def5
        .= (0 * n) mod n by NAT_D:25
        .= e by NAT_D:13;
      hence thesis;
    end;
    suppose
A8:   p < n;
      g * h = (A + B) mod n by Def5
        .= n mod n by A4,A8,NAT_D:24
        .= e by NAT_D:25;
      hence thesis;
    end;
  end;
end;

definition
  let n be natural number such that
A1: n > 0;
  func INT.Group(n) -> strict Group equals
  :Def6:
  multMagma(#Segm(n),addint(n)#);
  coherence by A1,Th34;
end;

