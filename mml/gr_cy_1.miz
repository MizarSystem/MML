definition
  canceled;
  redefine func addint means

  for i1,i2 being Element of INT holds
  it.(i1,i2) = addreal.(i1,i2);
  compatibility
  proof
    let b be BinOp of INT;
    hereby
      assume
A1:   b = addint;
      let i1,i2 be Element of INT;
A2:   i1 in INT & i2 in INT;
      thus b.(i1,i2) = i1 + i2 by A1,BINOP_2:def 20
        .= addreal.(i1,i2) by A2,BINOP_2:def 9,NUMBERS:15;
    end;
    assume
A3: for i1,i2 being Element of INT holds b.(i1,i2) = addreal.(i1,i2);
    now
      let i1,i2 be Element of INT;
A4:   i1 in INT & i2 in INT;
      thus b.(i1,i2) = addreal.(i1,i2) by A3
        .= i1 + i2 by A4,BINOP_2:def 9,NUMBERS:15
        .= addint.(i1,i2) by BINOP_2:def 20;
    end;
    hence b = addint by BINOP_1:2;
  end;
end;

theorem Th14:
  addint.(j1,j2)=j1+j2
proof
  reconsider i1=j1, i2=j2 as Element of INT by INT_1:def 2;
  addint.(i1,i2)=j1+j2 by BINOP_2:def 20;
  hence thesis;
end;

theorem
  for i1 st i1 = 0 holds i1 is_a_unity_wrt addint by BINOP_2:4,SETWISEO:22;

theorem Th16:
  Sum I = addint $$ I
proof
  rng I c= COMPLEX by NUMBERS:11,XBOOLE_1:1;
  then reconsider f = I as FinSequence of COMPLEX by FINSEQ_1:def 4;
  set g = addint, h = addcomplex;
  consider n being Nat such that
A1: dom f = Seg n by FINSEQ_1:def 2;
  set i = [#](I,the_unity_wrt g);
  set j = [#](f,the_unity_wrt h);
A2: g $$ I = g $$ (finSeg n,i) by A1,SETWOP_2:def 2;
A3: h $$ f = h $$ (finSeg n,j) by A1,SETWOP_2:def 2;
  defpred P[Nat] means g $$ (finSeg $1,i) = h $$ (finSeg $1,j);
A4: Seg 0 = {}.NAT;
A5: P[0]
  proof
    g $$ (finSeg 0,[#](I,the_unity_wrt g)) =
    the_unity_wrt h by A4,BINOP_2:1,4,SETWISEO:40
      .= h $$ (finSeg 0,[#](f,the_unity_wrt h)) by A4,SETWISEO:40;
    hence thesis;
  end;
A6: for k being Nat st P[k] holds P[k+1]
  proof
    let k be Nat;
    assume
A7: P[k];
    set a = i.(k+1);
    set b = g $$(finSeg k,i);
A8: not (k + 1) in Seg k by FINSEQ_3:9;
    g $$ (finSeg (k+1),i) = g $$ (finSeg k \/ {. k+1 .},i) by FINSEQ_1:11
      .= g.(b,a) by A8,SETWOP_2:4
      .= b + a by BINOP_2:def 20
      .= h.(h $$(finSeg k,j),j.(k+1)) by A7,BINOP_2:1,4,def 3
      .= h $$ (finSeg k \/ {. k+1 .},j) by A8,SETWOP_2:4
      .= h $$ (finSeg (k+1),j) by FINSEQ_1:11;
    hence thesis;
  end;
  for k being Nat holds P[k] from NAT_1:sch 2(A5,A6);
  then g $$ I = h $$ f by A2,A3;
  hence thesis by RVSUM_1:def 11;
end;

definition
  let I;
  redefine func Sum(I) -> Element of INT equals

  addint $$ I;
  coherence
  proof
    Sum I = addint $$ I by Th16;
    hence thesis;
  end;
  compatibility by Th16;
end;

