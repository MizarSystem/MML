definition let A be set;
  mode Finite_Subset of A is Element of Fin A;
end;

canceled;

theorem
   for A being set, X being Finite_Subset of A holds X is finite;

canceled;

theorem
   for A being set, X being Finite_Subset of A holds
    X is Subset of A by Def5;

canceled;

theorem
   for A being set, X being Subset of A st A is finite holds
    X is Finite_Subset of A
 proof
   let A be set, X be Subset of A;
   assume
  A is finite;
  then X is finite by FINSET_1:13;
  hence thesis by Def5;
 end;
