      NUMBERS, FINSEQ_1, REALSET1, PBOOLE;
 constructors PARTFUN1, PBOOLE, REALSET1;
 registrations XBOOLE_0, SUBSET_1, FUNCT_1, FUNCT_2, REALSET1, CARD_5;
